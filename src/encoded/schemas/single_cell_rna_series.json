            "type": "string"
        },
        "award.project": {
            "title": "Project",
            "type": "string"
        },
        "status": {
            "title": "Status",
            "type": "string"
        },
        "target.@id": {
            "title": "Targets",
            "type": "string"
        },
        "target.label": {
