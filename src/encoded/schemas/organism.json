{
    "title": "Organism",
    "description": "Schema for information describing a species",
    "id": "/profiles/organism.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["name", "ncbi_taxon_id", "scientific_name"],
    "identifyingProperties": ["uuid", "name", "ncbi_taxon_id", "scientific_name"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/standard_status" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "name": {
            "title": "Name",
            "description": "A short unique name for the organism (e.g. 'mouse' or 'human').",
            "type": "string",
            "pattern": "^[a-z0-9\\-]+$",
            "uniqueKey": true
        },
        "scientific_name": {
            "title": "Organism",
            "description": "The genus species for the organism (e.g. 'Mus musculus').",
            "type": "string",
            "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$|^$"
        },
        "ncbi_taxon_id": {
            "title": "NCBI Taxon ID",
            "description": "The NCBI taxon ID for the organism (e.g. 10090).",
            "type": "string",
            "format": "^[0-9]+$"
        }
    },
    "facets": {
        "status": {
            "title": "Status"
        }
    },
    "columns": {
        "name": {
            "title": "Name"
        },
        "scientific_name": {
            "title": "Scientific name"
        },
        "ncbi_taxon_id": {
            "title": "NCBI taxon ID"
        }
    },
    "changelog": "/profiles/changelogs/organism.md"
}
