{
    "title": "Mouse postnatal donor",
    "description": "Schema for submitting a postnatal mouse donor.",
    "id": "/profiles/mouse_postnatal_donor.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["life_stage", "age", "sex", "strain_term_name"],
    "identifyingProperties": ["uuid", "accession", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        {"$ref": "mixins.json#/aliases"},
        {"$ref": "mixins.json#/description"},
        {"$ref": "mixins.json#/documents"},
        {"$ref": "mixins.json#/notes"},
        {"$ref": "mixins.json#/submitted"},
        {"$ref": "mixins.json#/schema_version"},
        {"$ref": "mixins.json#/url"},
        {"$ref": "mixins.json#/accession"},
        {"$ref": "mixins.json#/uuid"},
        {"$ref": "mixins.json#/accessioned_status"},
        {"$ref": "mixins.json#/dbxrefs"},
        {"$ref": "mixins.json#/treatments"},
        {"$ref": "mixins.json#/diseases"},
        {"$ref": "mixins.json#/source"},
        {"$ref": "donor.json#/properties"},
        {"$ref": "mouse_donor.json#/properties"},
        {"$ref": "postnatal_donor.json#/properties"}
    ],
    "dependencies": {
        "age":  {
            "oneOf": [
                {
                    "properties": {
                        "age": {
                            "enum": ["unknown"]
                        }
                    }
                },
                {
                    "required": ["age_units"]
                }
            ]
        },
        "age_units":  {
            "required": ["age"],
            "not": {
                "properties": {
                    "age": {
                        "enum": ["unknown"]
                    }
                }
            }
        },
        "weight": ["weight_unit"],
        "weight_unit": ["weight"],
        "product_id": ["source"],
        "lot_id": ["source", "product_id"]
    },
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "life_stage": {
            "comment": "Based on the Mouse Development Stages ontology, newborn is birth to 4 d, premature is 4 d to 6 w, adult is 6 w and over.",
            "enum": [
                "newborn",
                "premature",
                "adult",
                "unknown"
            ]
        },
        "mating_status": {
            "title": "mating status",
            "description": "The mating status of the animal.",
            "type": "string",
            "enum": [
                "mated",
                "mixed",
                "sterile",
                "virgin"
            ]
        }
    },
    "facets": {
        "life_stage": {
            "title": "Life stage"
        },
        "sex": {
            "title": "Sex"
        },
        "strain_term_name": {
            "title": "Strain"
        },
        "diseases.term_name": {
            "title": "Disease"
        },
        "status": {
            "title": "Status"
        }
    },
    "columns": {
        "accession": {
            "title": "Accession"
        },
        "age_display": {
            "title": "Age"
        },
        "life_stage": {
            "title": "Life stage"
        },
        "sex": {
            "title": "Sex"
        },
        "organism.scientific_name": {
            "title": "Organism species"
        },
        "strain_term_name": {
            "title": "Strain"
        },
        "diseases.term_name": {
            "title": "Disease"
        },
        "status": {
            "title": "Status"
        }
    },
    "changelog": "/profiles/changelogs/mouse_postnatal_donor.md"
}
