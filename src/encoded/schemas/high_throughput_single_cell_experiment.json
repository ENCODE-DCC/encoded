{
    "title": "High Throughput Single Cell Experiment",
    "description": "Schema for submitting metadata for a high throughput single cell assay (such as 10X).",
    "comment": "A high throughput single cell experiment is a special case of dataset. It includes assay metadata, replicate information and data files.",
    "id": "/profiles/high_throughput_single_cell_experiment.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["award", "lab", "assay_term_name", "biosample_ontology"],
    "identifyingProperties": ["uuid", "accession" , "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "dataset.json#/properties" },
        { "$ref": "single_cell_experiment.json#/properties" },
        { "$ref": "mixins.json#/references" },
        { "$ref": "mixins.json#/documents" },
        { "$ref": "mixins.json#/biosample_ontology" },
        { "$ref": "mixins.json#/submitter_comment" }
    ],
    "dependencies": {
        "status": {
            "oneOf": [
                {
                    "required": ["date_released"],
                    "properties": {
                        "status": {
                            "enum": ["released", "revoked"]
                        }
                    }
                },
                {
                    "required": ["date_submitted"],
                    "properties": {
                        "status": {
                            "enum": ["submitted"]
                        }
                    }
                },
                {
                    "not": {
                        "properties": {
                            "status": {
                                "enum": ["released", "revoked", "submitted"]
                            }
                        }
                    }
                }
            ]
        }
    },
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "supersedes": {
            "title": "Supersedes" ,
            "description": "The high throughput single cell experiment(s) that this high throughput single cell experiment experiment supersedes by virtue of being newer, better etc. than the one(s) it supersedes.",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "comment": "See high_throughput_single_cell_experiment.json for a list of available identifiers.",
                "type": "string",
                "linkTo": "HighThroughputSingleCellExperiment"
            }
        }
    },
