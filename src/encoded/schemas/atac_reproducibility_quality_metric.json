{
    "title": "ATAC-seq reproducibility quality metric",
    "description": "Schema for reporting ATAC-seq reproducibility quality metrics",
    "id": "/profiles/atac_reproducibility_quality_metric.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["step_run","quality_metric_of", "award", "lab"],
    "additionalProperties": false,
    "identifyingProperties": ["uuid"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "quality_metric.json#/properties" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted"},
        { "$ref": "mixins.json#/aliases"},
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/standard_status"},
        { "$ref": "mixins.json#/assay" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "reproducible_peaks": {
            "title": "Reproducible peaks",
            "description": "Number of peaks called from one replicate or pooled replicates passing reproducibility test by comparing self-pseudoreplicates or pooled pseudo-replicates. The single peak file is associated with this quality metric.",
            "type": "integer",
            "minimum": 0
        },
        "idr_cutoff":{
            "title": "IDR cutoff",
            "type": "number",
            "minimum": 0,
            "maximum": 1
        },
        "rescue_ratio": {
            "title": "Rescue Ratio",
            "type": "number",
            "minimum": 0
        },
        "self_consistency_ratio": {
            "title": "Self-consistency Ratio",
            "type": "number",
            "minimum": 0
        },
        "reproducibility_test": {
            "title": "Reproducibility",
            "type": "string",
            "description": "Reproducibility test result for this experiment",
            "enum": [
                "borderline",
                "fail",
                "pass"
            ]
        },
        "peak_width_distribution_plot": {
            "title": "Peak width distribution plot",
            "type": "object",
            "additionalProperties": false,
            "attachment": true,
            "formInput": "file",
            "properties": {
                "download": {
                    "title": "File Name",
                    "type": "string"
                },
                "href": {
                    "comment": "Internal webapp URL for document file",
                    "type": "string"
                },
                "type": {
                    "title": "MIME type",
                    "type": "string",
                    "enum": [
                        "application/pdf"
                    ]
                },
                "size": {
                    "title": "File size",
                    "type": "integer",
                    "minimum": 0
                },
                "md5sum": {
                    "format": "md5sum",
                    "type": "string",
                    "title": "MD5sum"
                }
            }
        }
    },
    "facets": {
        "assay_term_name": {
            "title": "Assay name"
        },
        "status": {
            "title": "Status"
        }
    },
    "changelog": "/profiles/changelogs/atac_reproducibility_quality_metric.md"
}
