{
    "title": "Software",
    "description": "Schema for submitting analysis software.",
    "id": "/profiles/software.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["name", "description", "title"],
    "additionalProperties": false,
    "identifyingProperties": ["uuid", "alias", "title", "name"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/standard_status" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "mixins.json#/submitted" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "software_type": {
            "title": "Types",
            "description": "The classification of the software",
            "type": "array",
            "items": {
                "title": "Type",
                "type": "string",
                "enum": [
                    "aligner",
                    "quality metric",
                    "peak caller",
                    "filtering",
                    "file format conversion",
                    "database",
                    "variant annotation",
                    "genome segmentation",
                    "qualification",
                    "transcript identification",
                    "transcriptome assembly",
                    "other"
                ]
            }
        },
        "name": {
            "title": "Name",
            "description": "Unique name of the software package, lower cased version of title.",
            "type": "string",
            "pattern": "^[a-z0-9\\-\\_]+",
            "uniqueKey": "software:name"
        },
        "title": {
            "title": "Title",
            "description": "The preferred viewable name of the software.",
            "type": "string"
        },
        "bug_tracker_url": {
            "title": "Bug tracker URL",
            "description": "An external resource to track bugs for the software.",
            "type": "string",
            "format": "uri"
        },
        "source_url": {
            "title": "Source URL",
            "description": "An external resource to the code base.",
            "type": "string",
            "format": "uri"
        },
        "url": {
            "title": "URL",
            "description": "An external resource with additional information about the software.",
            "type": "string",
            "format": "uri"
        },
        "purpose": {
            "title": "Purpose in project",
            "description": "The purpose that the software was used for in the project.",
            "type": "array",
            "items": {
                "title": "Purpose",
                "type": "string",
                "enum": [
                    "ChIP-seq",
                    "DNase-seq",
                    "RNA-seq",
                    "data QC",
                    "integrative analysis",
                    "variant analysis",
                    "community resource"
                ]
            }
        },
        "references": {
            "title": "References",
            "type": "array",
            "items": {
                "title": "Reference",
                "type": "string",
                "linkTo": "publication"
            }
        },
        "used_by": {
            "title": "Used by project",
            "type": "array",
            "items": {
                "title": "Used by",
                "type": "string",
                "enum": [
                    "ENCODE",
                    "mouseENCODE",
                    "modENCODE",
                    "community"
                ]
            }
        },
        "description": {
            "title": "Description",
            "description": "A plain text description of the software.",
            "type": "string"
        }
    },
    "facets": {
        "software_type": {
            "title": "Software type",
            "type": "array"
        },
        "purpose": {
            "title": "Purpose in project",
            "type": "string"
        },
        "references.published_by": {
            "title": "Created by",
            "type": "array"
        }
    },
   "columns": {
        "title": {
            "title": "Title",
            "type": "string"
        },
        "name": {
            "title": "Name",
            "type": "string"
        },
        "status": {
            "title": "Publication status",
            "type": "string"
        },
        "url": {
            "title": "URL",
            "type": "string"
        },
        "description": {
            "title": "Description",
            "type": "string"
        },
        "source_url": {
            "title": "Source URL",
            "type": "string"
        },
        "references": {
            "title": "references",
            "type": "array"
        },
        "used_by": {
            "title": "Use by project",
            "type": "array"
        },
        "software_type": {
            "title": "The classification of the software",
            "type": "array"
        },
        "purpose": {
            "title": "Purpose in project",
            "type": "array"
        }
    },
    "boost_values": {
        "title": 1.0,
        "name": 1.0,
        "purpose": 1.0,
        "used_by": 1.0,
        "software_type": 1.0,
        "references.title": 1.0
    }
}
