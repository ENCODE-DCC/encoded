{
    "title": "Software",
    "description": "Schema for submitting analysis software.",
    "id": "/profiles/software.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["name", "title"],
    "additionalProperties": false,
    "identifyingProperties": ["uuid", "title", "name"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/standard_status" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "mixins.json#/url" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/references" },
        { "$ref": "mixins.json#/description" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "software_type": {
            "title": "Software type",
            "description": "The classification of the software",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "Type",
                "type": "string",
                "enum": [
                    "aligner",
                    "database",
                    "demultiplexing",
                    "file format conversion",
                    "filtering",
                    "genome segmentation",
                    "peak caller",
                    "quality metric",
                    "quantification",
                    "transcript identification",
                    "transcriptome assembly",
                    "variant annotation",
                    "other"
                ]
            }
        },
        "name": {
            "title": "Name",
            "description": "Unique name of the software package, lower cased version of title.",
            "type": "string",
            "pattern": "^[a-z0-9\\-\\_]+",
            "uniqueKey": "software:name"
        },
        "title": {
            "title": "Title",
            "description": "The preferred viewable name of the software.",
            "type": "string",
            "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$"
        },
        "bug_tracker_url": {
            "title": "Bug tracker URL",
            "description": "An external resource to track bugs for the software.",
            "type": "string",
            "format": "uri"
        },
        "source_url": {
            "title": "Source URL",
            "description": "An external resource to the code base.",
            "type": "string",
            "format": "uri"
        }
    },
    "facets": {
        "software_type": {
            "title": "Software type"
        }
    },
   "columns": {
        "title": {
            "title": "Title"
        },
        "name": {
            "title": "Name"
        },
        "status": {
            "title": "Status"
        },
        "url": {
            "title": "URL"
        },
        "description": {
            "title": "Description"
        },
        "source_url": {
            "title": "Source URL"
        },
        "references": {
            "title": "References"
        },
        "software_type": {
            "title": "Software type"
        }
    },
    "changelog": "/profiles/changelogs/software.md"
}
