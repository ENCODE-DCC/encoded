{
    "title": "Surgery Procedure",
    "description": "Schema for surgery prcedure embedded in portal pages",
    "id": "/profiles/surgery_procedure.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["surgery", "procedure_type"],
    "identifyingProperties": ["uuid"],
    "mixinProperties": [
        {"$ref": "mixins.json#/schema_version"},
        {"$ref": "mixins.json#/uuid"},
        {"$ref": "mixins.json#/submitted"},
        {"$ref": "mixins.json#/standard_status"}
    ],
    "dependencies": {
      "nephrectomy_details":  {
          "comment":"Nephrectomy details required if procedure type is nephrectomy.",
          "properties": {
              "procedure_type": {
                  "enum": ["Nephrectomy"]
              }
          }
      },
      "procedure_type":  {
          "oneOf": [
              {
                  "properties": {
                      "required": ["nephrectomy_details"],
                      "procedure_type": {
                          "enum": ["Nephrectomy"]
                      }
                  }
              },
              {
                  "not": {
                      "oneOf": [
                          {
                              "required": ["nephrectomy_details"],
                              "properties": {
                                  "procedure_type": {
                                      "enum": ["Ablation", "Metastectomy"]
                                  }
                              }
                          },
                          {
                              "properties": {
                                  "procedure_type": {
                                      "enum": ["Nephrectomy"]
                                  }
                              }
                          }
                      ]
                  }
              }
          ]
      }
    },
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "surgery": {
            "title": "Surgery",
            "description": "The surgery the procedure was conducted in.",
            "type": "string",
            "linkTo": "Surgery"
        },
        "procedure_type": {
            "title": "Procedure",
            "description": "The procedure conducted.",
            "type": "string",
            "enum": [
                    "Ablation",
                    "Nephrectomy",
                    "Metastectomy",
                    "Biopsy",
                    "Excision",
                    "Fine needle aspiration"
                ]
        },
        "nephrectomy_details": {
            "title": "Nephrectomy details",
            "description": "Further details of Nephrectomy",
            "type": "object",
            "permission": "import_items",
            "required": [
                "type",
                "approach",
                "robotic_assist"
            ],
            "properties": {
                "type": {
                    "title": "Nephrectomy type",
                    "type": "string",
                    "enum": [
                        "Partial",
                        "Total"
                    ]
                },
                "approach": {
                    "title": "Nephrectomy Approach",
                    "type": "string",
                    "enum": [
                        "Laparoscopic",
                        "Open"
                    ]
                },
                "robotic_assist": {
                    "title": "Robotic Assist",
                    "type": "boolean"
                }
            }
        }
    },
    "facets": {
        "procedure_type": {
            "title": "Procedure"
        },
        "nephrectomy_details.type": {
            "title": "Nephrectomy Type"
        },
        "nephrectomy_details.approach": {
            "title": "Nephrectomy Approach"
        },
        "nephrectomy_details.robotic_assist": {
            "title": "Nephrectomy Robotic Assist"
        },
        "status": {
            "title": "Status"
        }
    },
    "boost_values": {
        "procedure_type": 1.0
    },
    "changelog": "/profiles/changelogs/surgery_procedure.md"
}
