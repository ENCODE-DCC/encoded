{
    "title": "Human donor",
    "description": "Schema for submitting a human donor.",
    "comment":"This object is meant to be one to one with an individual human.",
    "id": "/profiles/human_donor.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["organism"],
    "identifyingProperties": ["uuid", "accession", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        {"$ref": "mixins.json#/documents"},
        {"$ref": "mixins.json#/notes"},
        {"$ref": "mixins.json#/submitted"},
        {"$ref": "mixins.json#/schema_version"},
        {"$ref": "mixins.json#/aliases"},
        {"$ref": "mixins.json#/url"},
        {"$ref": "mixins.json#/accession"},
        {"$ref": "mixins.json#/uuid"},
        {"$ref": "mixins.json#/accessioned_status"},
        {"$ref": "mixins.json#/dbxrefs"},
        {"$ref": "donor.json#/properties"}
    ],
    "dependencies": {
        "age_units":  {
            "comment":"Age units is required if age is specified as anything but unknown.",
            "required": ["age", "life_stage"],
            "not": {
                "properties": {
                    "age": {
                        "enum": ["unknown"]
                    }
                }
            }
        },
        "age":  {
            "oneOf": [
                {
                    "properties": {
                        "age": {
                            "enum": ["unknown"]
                        }
                    }
                },
                {
                    "required": ["age_units", "life_stage"],
                    "properties": {
                        "age_units": {
                            "enum": ["year"]
                        },
                        "age": {
                            "pattern": "^(([1-8]?\\d)|(90 or above))$"
                        }
                    }
                },
                {
                    "required": ["age_units", "life_stage"],
                    "properties": {
                        "age_units": {
                            "enum": ["day", "week","month"]
                        },
                        "age": {
                            "pattern":  "^(\\d+(\\.[1-9])?(\\-\\d+(\\.[1-9])?)?)$"
                        }
                    }
                }
            ]
        },
        "twin_type": {
            "comment": "Twin type could be specified only if twin sibling is specified.",
            "required": ["twin"]
        }
    },
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "organism": {
            "comment": "Do not submit, value is assigned by the object.",
            "default": "7745b647-ff15-4ff3-9ced-b897d4e2983c",
            "linkEnum": ["7745b647-ff15-4ff3-9ced-b897d4e2983c"]
        },
        "sex": {
            "title": "Sex",
            "type": "string",
            "default": "unknown",
            "enum": [
                "female",
                "male",
                "mixed",
                "unknown"
            ]
        },
        "life_stage": {
            "title": "Life stage",
            "type": "string",
            "enum": [
                "embryonic",
                "newborn",
                "child",
                "adult",
                "unknown"
            ]
        },
        "age": {
            "title": "Age",
            "description": "The age or age range of the donor when biological material was sampled.",
            "comment": "This is gestational time for fetal and embryonic samples. We allow a generic over 90 for privacy purposes.",
            "type": "string",
            "pattern": "^((\\d+(\\.[1-9])?(\\-\\d+(\\.[1-9])?)?)|(unknown)|([1-8]?\\d)|(90 or above))$"
        },
        "age_units": {
            "title": "Age units",
            "type": "string",
            "enum": [
                "day",
                "week",
                "month",
                "year"
            ]
        },
        "embryonic_age": {
            "title": "Age",
            "description": "The age or age range of the donor when biological material was sampled.",
            "comment": "This is gestational time for fetal and embryonic samples. We allow a generic over 90 for privacy purposes.",
            "type": "string",
            "pattern": "^((\\d+(\\.[1-9])?(\\-\\d+(\\.[1-9])?)?)|(unknown)|([1-8]?\\d)|(90 or above))$"
        },
        "embryonic_age_units": {
            "title": "Age units",
            "type": "string",
            "enum": [
                "day",
                "week",
                "month",
                "year"
            ]
        },
        "diseases": {
            "title": "Diseases",
            "type": "string"
        },
        "ethnicity": {
            "title": "Ethnicity",
            "comment": "We use http://bioportal.bioontology.org/ontologies/SNOMED-Ethnic-Group as a template for the enum list of ethnicities.",
            "type": "string",
            "enum": [
                "African American",
                "Arab",
                "Arab Indian",
                "Asian",
                "Asian Hawaiian Eskimo",
                "Black",
                "Black African",
                "Caucasian",
                "Caucasian Hispanic",
                "Chinese",
                "Eskimo",
                "Han Chinese",
                "Hawaiian",
                "Hispanic",
                "Indian",
                "Japanese",
                "Yoruba"
            ]
        },
        "parents": {
            "title": "Parents",
            "description": "Biological parents of this donor",
            "comment":"This is a link for cases when families are all donors in our system. Children will be calculated from this link.",
            "type":  "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "Parent",
                "description": "Biological parent of this donor.",
                "comment": "For human biosamples, see human_donor.json for available identifiers.",
                "type": "string",
                "linkTo": "HumanDonor"
            }
        },
        "siblings": {
            "title": "Siblings",
            "description": "Donors that have at least one parent in common with this donor.",
            "comment":"This is a link for cases when families are all donors in our system.",
            "type":  "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "Sibling",
                "description": "A donor that has at least one parent in common.",
                "comment": "For human biosamples, see human_donor.json for available identifiers.",
                "type": "string",
                "linkTo": "HumanDonor"
            }
        },
        "twin": {
            "title": "Twin",
            "description": "A human donor that is a twin sibling of this human donor.",
            "comment": "For human biosamples, see human_donor.json for available identifiers.",
            "type": "string",
            "linkTo": "HumanDonor"
        },
        "twin_type": {
            "title": "Twin type",
            "comment": "The type of the twin sibling of this donor (dizygotic or monozygotic)",
            "type": "string",
            "enum": [
                "dizygotic",
                "monozygotic"
            ]
        },
        "dbxrefs": {
            "items": {
                "title": "Database external identifier",
                "description": "Identifier an from external resource that may have 1-to-1 or 1-to-many relationships with ENCODE objects.",
                "type":  "string",
                "pattern": "^((PGP:hu[\\S\\s\\d]+)|(GTEx:[a-zA-Z0-9\\-_]+)|(NIH:NIHhESC-[\\d]{2}-[\\d]{4})|(GEO:SAMN\\d+))$"
            }
        },
        "genotype": {
            "title": "",
            "description": "",
            "comment": "",
            "type": "string"
        },
        "times_pregnant": {
            "title": "",
            "description": "",
            "comment": "",
            "type": "integer"
        },
        "family_history_breast_cancer": {
            "title": "Family history breast cancer",
            "description": "",
            "comment":"",
            "type":  "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "",
                "description": "",
                "comment": "For human biosamples, see human_donor.json for available identifiers.",
                "type": "string",
                "enum": [
                    "none",
                    "mother",
                    "sister",
                    "daughter",
                    "maternal aunt",
                    "maternal grandmother",
                    "maternal cousin",
                    "sororal niece",
                    "paternal aunt",
                    "paternal grandmother",
                    "paternal cousin",
                    "fraternal niece",
                    "maternal grandmother's mother",
                    "maternal grandfather's mother",
                    "paternal grandmother's mother",
                    "paternal grandfather's mother"
                ]
            }
        },
        "cause_of_death": {
            "title": "",
            "description": "",
            "comment": "",
            "type": "string"
        },
        "crown_rump_length": {
            "title": "",
            "description": "",
            "comment": "",
            "type": "integer"
        },
        "crown_rump_length_units": {
            "title": "",
            "description": "",
            "comment": "",
            "type": "string"
        },
        "body_mass_index": {
            "title": "",
            "description": "",
            "comment": "",
            "type": "integer"
        },
        "height": {
            "title": "",
            "description": "",
            "comment": "",
            "type": "integer"
        },
        "height_unit": {
            "title": "",
            "description": "",
            "comment": "",
            "type": "string"
        },
        "weight": {
            "title": "",
            "description": "",
            "comment": "",
            "type": "integer"
        },
        "weight_unit": {
            "title": "",
            "description": "",
            "comment": "",
            "type": "string"
        }
    },
    "facets": {
        "life_stage": {
            "title": "Life stage"
        },
        "sex": {
            "title": "Sex"
        },
        "status": {
            "title": "Status"
        }
    },
    "columns": {
        "accession": {
            "title": "Accession"
        },
        "aliases": {
            "title": "Aliases"
        },
        "age": {
            "title": "Age"
        },
        "age_units": {
            "title": "Age units"
        },
        "diseases": {
            "title": "Diseases"
        },
        "life_stage": {
            "title": "Life stage"
        },
        "sex": {
            "title": "Sex"
        },
        "organism.scientific_name": {
            "title": "Organism"
        },
        "ethnicity": {
            "title": "Ethnicity"
        },
        "status": {
            "title": "Status"
        }
    },
    "boost_values": {},
    "changelog": "/profiles/changelogs/human_donor.md"
}
