{
    "title": "Consent",
    "description": "Schema for submitting a consent.",
    "id": "/profiles/consent.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["patient"],
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/standard_status" },
        { "$ref": "mixins.json#/notes" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "future_contact": {
            "title": "Future Contact",
            "type": "string",
            "enum": [
                "Refuse",
                "Agree"
            ]
        },
        "future_research": {
            "title": "Future Research",
            "type": "string",
            "enum": [
                "Refuse",
                "Agree"
            ]
        },
        "information_release": {
            "title": "Information Release",
            "type": "string",
            "enum": [
                "Refuse",
                "Agree"
            ]
        },
        "genetic_information_release": {
            "title": "Genetic Information Release",
            "type": "string",
            "enum": [
                "Refuse",
                "Agree"
            ]
        },
        "overall": {
            "title": "Overall",
            "type": "string",
            "enum": [
                "Refuse",
                "Agree"
            ]
        },
        "hippa": {
            "title": "HIPPA",
            "type": "string",
            "enum": [
                "Refuse",
                "Agree"
            ]
        },
        "patient": {
            "title": "Patient",
            "description": "The patient the consent was for.",
            "type": "string",
            "linkTo": "Patient"
        }
    },
    "facets": {
        "status": {
            "title": "Status"
        }
    },
    "changelog": "/profiles/changelogs/consent.md"
 }
