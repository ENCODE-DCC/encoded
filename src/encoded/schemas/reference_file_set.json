{
    "title": "Reference File Set",
    "description": "Schema for submitting metadata for a reference file set.",
    "id": "/profiles/reference_file_set.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["description"],
    "identifyingProperties": ["uuid", "accession" , "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/aliases"},
        { "$ref": "mixins.json#/schema_version"},
        { "$ref": "mixins.json#/uuid"},
        { "$ref": "mixins.json#/accession"},
        { "$ref": "mixins.json#/submitted"},
        { "$ref": "mixins.json#/notes"},
        { "$ref": "mixins.json#/description" },
        { "$ref": "mixins.json#/documents"},
        {"$ref": "mixins.json#/accessioned_status"}
    ],
    "dependencies": {},
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "accession": {
            "accessionType": "SR"
        },
        "alternate_accessions": {
            "items": {
                "title": "Alternate Accession",
                "description": "An accession previously assigned to an object that has been merged with this object.",
                "comment": "Only accessions of objects that have status equal replaced will work here.",
                "type": "string",
                "format": "accession",
                "pattern": "^(ENCSR\\d{3}[A-Z]{3})$|^(TSTSR\\d{6})$"
            }
        },
        "description": {
            "elasticsearch_mapping_index_type": {
                "title": "Field mapping index type",
                "description": "Defines one of three types of indexing available",
                "type": "string",
                "default": "analyzed",
                "enum": [
                    "analyzed",
                    "not_analyzed",
                    "no"
                ]
            }
        }
    },
    "facets": {
        "status": {
            "title": "Status"
        },
        "reference_version": {
            "title": "Reference version"
        },
        "files.file_format": {
            "title": "Available file types"
        }
    },
    "columns": {
        "accession": {
            "title": "Accession",
            "type": "string"
        },
        "description": {
            "title": "Description",
            "type": "string"
        },
        "reference_version": {
            "title": "Reference version"
        },
        "status": {
            "title": "Status",
            "type": "string"
        }
    },
    "changelog": "/profiles/changelogs/reference_file_set.md"
}
