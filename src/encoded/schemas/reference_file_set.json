{
    "title": "Reference File Set",
    "description": "Schema for submitting metadata for a reference file set.",
    "id": "/profiles/reference_file_set.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["description"],
    "identifyingProperties": ["uuid", "accession" , "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/aliases"},
        { "$ref": "mixins.json#/schema_version"},
        { "$ref": "mixins.json#/uuid"},
        { "$ref": "mixins.json#/submitted"},
        { "$ref": "mixins.json#/notes"},
        { "$ref": "mixins.json#/description" },
        { "$ref": "mixins.json#/documents"},
        { "$ref": "mixins.json#/accessioned_status"}
    ],
    "dependencies": {},
    "properties": {
        "schema_version": {
            "default": "1"
        }
    },
    "facets": {
        "reference_version": {
            "title": "Reference version"
        },
        "files.file_format": {
            "title": "Available file types"
        },
        "status": {
            "title": "Status"
        }
    },
    "columns": {
        "description": {
            "title": "Description",
            "type": "string"
        },
        "reference_version": {
            "title": "Reference version"
        },
        "status": {
            "title": "Status",
            "type": "string"
        }
    },
    "changelog": "/profiles/changelogs/reference_file_set.md"
