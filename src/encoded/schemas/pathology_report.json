        },
        "lvi": {
            "title": "Lymphvascular invasion(LVI)"
        },
        "micro_perinephric": {
            "title": "Perinephric Infiltration"
        },
        "micro_vein": {
            "title": "Renal Vein Involvement"
        },
        "micro_adrenal": {
            "title": "Ipsilateral Adrenal Gland Involvement"
        },

        "ihc.antibody": {
            "title": "IHC/FISH (Clinical lab)"
        },
        "ihc.result": {
            "title": "IHC/FISH results"
        },
        "status": {
            "title": "Status"
        }
    },
    "columns": {
