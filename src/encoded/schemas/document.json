{
    "title": "Document",
    "description": "Schema for submitting a document file.",
    "id": "/profiles/document.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["document_type"],
    "identifyingProperties": ["uuid","aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/attachment" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/standard_status" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/references" },
        { "$ref": "mixins.json#/description" },
        { "$ref": "mixins.json#/notes" }
    ],
    "facets": {
        "lab.title": {
            "title": "Lab"
        },
        "status": {
            "title": "Status"
        },
        "document_type": {
            "title": "Document type"
        }
    },
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "document_type": {
            "title": "Document type",
            "description": "The category that best describes the document.",
            "type": "string",
            "enum": [
                "cell isolation protocol",
                "certificate of analysis",
                "construct image",
                "data QA",
                "data sheet",
                "dedifferentiation protocol",
                "differentiation protocol",
                "excision protocol",
                "extraction protocol",
                "file format specification",
                "general protocol",
                "growth protocol",
                "high resolution pathology slide image",
                "iPS reprogramming protocol",
                "other",
                "pipeline protocol",
                "spike-in concentrations",
                "standards document",
                "strain generation protocol",
                "transfection protocol",
                "treatment protocol",
                "enrichment protocol",
                "library preparation protocol",
                "sequencing protocol",
                "depletion protocol",
                "tissue collection protocol"
           ]
        },
        "description": {
            "elasticsearch_mapping_index_type": {
                "title": "Field mapping index type",
                "description": "Defines one of three types of indexing available",
                "type": "string",
                "default": "analyzed",
                "enum": [
                    "analyzed",
                    "not_analyzed",
                    "no"
                ]
            }
        },
        "urls": {
            "rdfs:subPropertyOf": "rdfs:seeAlso",
            "title": "URL",
            "description": "External resources with additional information to the document.",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "URL",
                "description": "An external resource with additional information to the document.",
                "type": "string",
                "format": "uri"
            }
        }
    },
    "columns": {
        "document_type": {
            "title": "Document type"
        },
        "description": {
            "title": "Description"
        },
        "attachment.href": {
            "title": "Attachment path",
            "comment": "Internal webapp URL for document file"
        },
        "attachment.type": {
            "title": "MIME type"
        },
        "attachment.width": {
            "title": "Image width"
        },
        "attachment.height": {
            "title": "Image height"
        },
        "attachment.download": {
            "title": "File Name"
        },
        "lab.title": {
            "title": "Lab"
        },
        "submitted_by.title": {
            "title": "Submitted by"
        }
    },
    "boost_values": {},
    "changelog": "/profiles/changelogs/document.md"
}
