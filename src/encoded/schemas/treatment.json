{
    "title": "Treatment",
    "id": "/profiles/treatment.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["treatment_term_name", "treatment_type"],
    "identifyingProperties": ["uuid","aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/shared_status" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "mixins.json#/treatment_classification"}
    ],
    "dependencies": {
        "temperature": ["temperature_units"],
        "temperature_units": ["temperature"]
    },
    "properties": {
        "schema_version": {
            "default": "4"
        },
        "lab": {
            "title": "Lab",
             "description": "Lab associated with the submission.",
            "comment": "See lab.json for list of available identifiers.",
            "type": "string",
            "linkTo": "Lab"
        },
        "protocols": {
            "title": "Protocol documents",
            "description": "Documents that describe the treatment protocol.",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "Protocol document",
                "description": "A document that describes the treatment protocol.",
                "comment": "See document.json for available identifiers.",
                "type": "string",
                "linkTo": "Document"
            }
        },
        "dbxrefs": {
            "@type": "@id",
            "rdfs:subPropertyOf": "rdfs:seeAlso",
            "title": "External identifiers",
            "description": "Unique identifiers from external resources.",
            "type": "array",
            "uniqueItems": true,
            "default": [],
            "items": {
                "title": "External identifier",
                "description": "A unique identifier from external resource.",
                "type":  "string",
                "pattern": "^(UCSC-ENCODE-cv:[\\S\\s\\d\\-\\(\\)\\+]+)$"
            }
        },
        "concentration": {
            "title": "Concentration",
            "type": "number"
        },
        "concentration_units": {
            "title": "Concentration units",
            "type": "string",
            "enum": [
                "pM",
                "nM",
                "μM",
                "μg/mL",
                "mM",
                "mg/mL",
                "ng/mL",
                "M",
                "percent",
                "units",
                "U/mL",
                "p.f.u."
            ]
        },
        "duration": {
            "title": "Duration",
            "type": "number"
        },
        "duration_units": {
            "title": "Duration units",
            "type": "string",
            "enum": [
                "second",
                "minute",
                "hour",
                "day"
            ]
        },
        "temperature": {
            "title": "Temperature",
            "type": "number"
        },
        "temperature_units": {
            "title": "Temperature units",
            "type": "string",
            "enum": [
                "Celsius",
                "Fahrenheit",
                "Kelvin"
            ]
        }
    }
}
