{
    "description": "Schema for describing a group of Analysis step runs calcuated as part of a Pipeline instance",
    "id": "/profiles/workflow_run.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["pipeline", "status"],
    "additionalProperties": false,
    "identifyingProperties": ["uuid", "dx_analysis_id"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted"}
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "pipeline": {
            "title": "Pipeline",
            "description": "Reference to the pipeline template, this must be a valid subgraph of pipeline graph",
            "type": "string",
            "linkTo": "pipeline"
        },
        "software_version": {
            "title": "Pipeline code version",
            "description": "Version of the pipeline software glue code",
            "type": "string",
            "linkTo": "software_version"
        },
        "input_files": {
            "title": "Workflow Input files",
            "description": "All ENCFF files used to initiate the workflow run",
            "type": "array",
            "items": {
                "title": "Input File",
                "type": "string",
                "linkTo": "file"
            }
        },
        "dx_workflow_id": {
            "title": "DNA Nexus workflow id",
            "description": "Workflow Identifier in the DNA Nexus system",
            "type": "string"
        },
        "dx_analysis_id": {
            "title": "DNA Nexus workflow id",
            "description": "Analysis (actual run) in the DNA Nexus system",
            "type": "string"
        },
        "dx_workflow_json": {
            "title": "DNA Nexus workflow json",
            "description": "dxapp.json file for the submitted workflow",
            "type": "object",
            "properties": {},
            "additionalProperties": true
        },
        "started_running": {
            "title": "Start time",
            "description": "When the workflow was started",
            "type": "string",
            "format": "date-time"
        },
        "stopped_running": {
            "title": "Finish time",
            "description": "When the workflow ended",
            "type": "string",
            "format": "date-time"
        },
        "status": {
            "title": "Status",
            "type": "string",
            "default": "waiting",
            "enum" : [
                "waiting",
                "running",
                "finished",
                "error"
            ]
        }
    }
}
