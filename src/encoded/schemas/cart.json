{
    "title": "Cart",
    "description": "Cart of objects aka shopping cart.",
    "comment": "This object gets connected with user objects.",
    "id": "/profiles/cart.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["name"],
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/submitted" },     
        { "$ref": "mixins.json#/shared_status" },
        { "$ref": "mixins.json#/uuid" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "name": {
            "title": "Name",
            "description": "The name of the cart",
            "type": "string"
        },
        "items": {
            "title": "Cart items",
            "description": "Tracks all items in the cart",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "Cart item",
                "description": "Reference to one item in the cart",
                "type":  "string",
                "linkTo": "Item"
            }
        }
    },
    "columns": {
        "items": {
            "title": "Cart items"
        }
    },
    "changelog": "/profiles/changelogs/cart.md"
}
