{
    "title": "Human postnatal donor",
    "description": "Schema for submitting a postnatal human donor.",
    "comment":"This object is meant to be one to one with an individual human.",
    "id": "/profiles/human_postnatal_donor.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["organism"],
    "identifyingProperties": ["uuid", "accession", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        {"$ref": "mixins.json#/documents"},
        {"$ref": "mixins.json#/notes"},
        {"$ref": "mixins.json#/submitted"},
        {"$ref": "mixins.json#/schema_version"},
        {"$ref": "mixins.json#/aliases"},
        {"$ref": "mixins.json#/url"},
        {"$ref": "mixins.json#/accession"},
        {"$ref": "mixins.json#/uuid"},
        {"$ref": "mixins.json#/accessioned_status"},
        {"$ref": "mixins.json#/dbxrefs"},
        {"$ref": "mixins.json#/treatments"},
        {"$ref": "mixins.json#/diseases"},
        {"$ref": "donor.json#/properties"},
        {"$ref": "human_donor.json#/properties"},
        {"$ref": "postnatal_donor.json#/properties"}
    ],
    "dependencies": {
        "age_units":  {
            "comment":"Age units is required if age is specified as anything but unknown.",
            "required": ["age", "life_stage"],
            "not": {
                "properties": {
                    "age": {
                        "enum": ["unknown"]
                    }
                }
            }
        },
        "age":  {
            "oneOf": [
                {
                    "properties": {
                        "age": {
                            "enum": ["unknown"]
                        }
                    }
                },
                {
                    "required": ["age_units", "life_stage"],
                    "properties": {
                        "age_units": {
                            "enum": ["year"]
                        },
                        "age": {
                            "pattern": "^(([1-8]?\\d)|(90 or above))$"
                        }
                    }
                },
                {
                    "required": ["age_units", "life_stage"],
                    "properties": {
                        "age_units": {
                            "enum": ["day", "week","month"]
                        },
                        "age": {
                            "pattern":  "^(\\d+(\\.[1-9])?(\\-\\d+(\\.[1-9])?)?)$"
                        }
                    }
                }
            ]
        },
        "twin_type": {
            "comment": "Twin type could be specified only if twin sibling is specified.",
            "required": ["twin"]
        }
    },
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "times_pregnant": {
            "title": "",
            "description": "",
            "comment": "",
            "type": "integer"
        },
        "family_history_breast_cancer": {
            "title": "Family history breast cancer",
            "description": "",
            "comment":"",
            "type":  "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "",
                "description": "",
                "comment": "For human biosamples, see human_donor.json for available identifiers.",
                "type": "string",
                "enum": [
                    "none",
                    "mother",
                    "sister",
                    "daughter",
                    "maternal aunt",
                    "maternal grandmother",
                    "maternal cousin",
                    "sororal niece",
                    "paternal aunt",
                    "paternal grandmother",
                    "paternal cousin",
                    "fraternal niece",
                    "maternal grandmother's mother",
                    "maternal grandfather's mother",
                    "paternal grandmother's mother",
                    "paternal grandfather's mother"
                ]
            }
        },
        "smoking_history": {
            "title": "",
            "description": "",
            "comment": "",
            "type": "string"
        },
        "alochol_history": {
            "title": "",
            "description": "",
            "comment": "",
            "type": "string"
        },
        "cause_of_death": {
            "title": "",
            "description": "",
            "comment": "",
            "type": "string"
        },
        "body_mass_index": {
            "title": "",
            "description": "",
            "comment": "",
            "type": "integer"
        },
        "height": {
            "title": "",
            "description": "",
            "comment": "",
            "type": "integer"
        },
        "height_unit": {
            "title": "",
            "description": "",
            "comment": "",
            "type": "string"
        }
    },
    "facets": {
        "life_stage": {
            "title": "Life stage"
        },
        "sex": {
            "title": "Sex"
        },
        "status": {
            "title": "Status"
        }
    },
    "columns": {
        "accession": {
            "title": "Accession"
        },
        "aliases": {
            "title": "Aliases"
        },
        "age": {
            "title": "Age"
        },
        "age_units": {
            "title": "Age units"
        },
        "life_stage": {
            "title": "Life stage"
        },
        "sex": {
            "title": "Sex"
        },
        "organism.scientific_name": {
            "title": "Organism"
        },
        "ethnicity": {
            "title": "Ethnicity"
        },
        "status": {
            "title": "Status"
        }
    },
    "changelog": "/profiles/changelogs/human_postnatal_donor.md"
}
