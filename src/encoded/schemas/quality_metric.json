{
    "description": "Schema for reporting the specific calculation of an quality metrics",
    "id": "/profiles/quality_metric.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["step_run", "files"],
    "additionalProperties": false,
    "identifyingProperties": ["uuid"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted"},
        { "$ref": "mixins.json#/standard_status"},
        { "$ref": "mixins.json#/attachment" },
        { "$ref": "mixins.json#/assay" }
   ],
    "properties": {
        "step_run": {
            "title": "Analysis Step",
            "description": "Reference to analysis step run in pipeline",
            "type": "string",
            "linkTo": "analysis_step_run"
        },
        "files": {
            "title": "QC Input files",
            "description": "All ENCFF files used to initiate the qc metrics",
            "type": "array",
            "items": {
                "title": "Input File",
                "type": "string",
                "linkTo": "file"
            }
        },
        "level": {
            "enum": [
                "file",
                "replicate",
                "library",
                "experiment"
            ],
            "type": "string",
            "description": "The level at which comparisons should be visualized.",
            "title": "QC level"
        },
        "SD of log ratios": {
            "type": "number",
            "description": "Standard Deviation of replicate log ratios from RNA-seq quantification"
        },
        "Pearson correlation": {
            "type": "number",
            "description": "Pearson correlation coefficient of replicates from RNA-seq quantification"
        },
        "Spearman correlation": {
            "type": "number",
            "description": "Spearman correlation coefficient of replicates from RNA-seq quantification"
        },
        "MAD of log ratios": {
            "type": "number",
            "description": "Mean-Average-Deviation of replicate log ratios from RNA-seq quantification"
        },
        "sequencing coverage": {
            "type": "number",
            "description": ""
        },
        "Minimum uniquely mapped reads": {
            "type": "number",
            "description": ""
        },
        "IDR": {
            "type": "number",
            "description": ""
        },
        "PBC": {
            "type": "number",
            "description": ""
        },
        "NSC": {
            "type": "number",
            "description": ""
        },
        "RSC": {
            "type": "number",
            "description": ""
        },
        "singletons": {
            "type": "number",
            "description": ""
        },
        "Total Sequences": {
            "type": "number",
            "description": "FastQC Summary metric"
        },
        "Sequences flagged as poor quality": {
            "type": "number",
            "description": "FastQC Summary metric"
        },
        "Sequence length": {
            "type": "number",
            "description": "FastQC Summary metric"
        },
        "%GC": {
            "type": "number",
            "description": "FastQC Summary metric"
        },
        "Per base sequence quality": {
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "description": "FastQC metric"
        },
        "Per base sequence content": {
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "description": "FastQC metric"
        },
        "Basic Statistics": {
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "description": "FastQC metric"
        },
        "Kmer Content": {
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "description": "FastQC metric"
        },
        "Sequence Duplication Levels": {
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "description": "FastQC metric"
        },
        "Sequence Length Distribution": {
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "description": "FastQC metric"
        },
        "Overrepresented sequences": {
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "description": "FastQC metric"
        },
        "Per sequence GC content": {
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "description": "FastQC metric"
        },
        "Adapter Content": {
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "description": "FastQC metric"
        },
        "Per tile sequence quality": {
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "description": "FastQC metric"
        },
        "Per base N content": {
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "description": "FastQC metric"
        },
        "Per sequence quality scores": {
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "description": "FastQC metric"
        },
        "mapped reads": {
            "type": "number",
            "description": ""
        },
        "Sequences analysed in total": {
            "type": "number",
            "description": "Total number of reads analysed by Bismark for WGBS"
        },
        "lambda Sequences analysed in total": {
            "type": "number",
            "description": "Total number of reads analysed by Bismark for WGBS vs. lambda phage genome"
        },
        "Mapping efficiency": {
            "type": "string",
            "description": "Bismark mapping efficiency for WGBS vs. reference genome"
        },
        "lambda Mapping efficiency": {
            "type": "string",
            "description": "Bismark mapping efficiency for WGBS vs. lambda phage genome"
        },
        "lambda C methylated in CpG context": {
            "type": "string",
            "description": "Bismark mapping efficiency for WGBS vs. lambda phage genome"
        },
        "lambda C methylated in CHG context": {
            "type": "string",
            "description": "Bismark mapping efficiency for WGBS vs. lambda phage genome"
        },
        "lambda C methylated in CHH context": {
            "type": "string",
            "description": "Bismark mapping efficiency for WGBS vs. lambda phage genome"
        },
        "C methylated in CHH context": {
            "type": "string",
            "description": "Bismark mapping efficiency for WGBS vs. reference genome"
        },
        "C methylated in CHG context": {
            "type": "string",
            "description": "Bismark mapping efficiency for WGBS vs. reference genome"
        },
        "C methylated in CpG context": {
            "type": "string",
            "description": "Bismark mapping efficiency for WGBS vs. reference genome"
        },
        "mate mapped different chr (mapQ>=5)": {
            "type": "number",
            "description": ""
        },
        "SPOT": {
            "type": "number",
            "description": ""
        },
        "in total": {
            "type": "number",
            "description": ""
        },
        "read1 mapped": {
            "type": "number",
            "description": ""
        },
        "Minimum unique reads": {
            "type": "number",
            "description": ""
        },
        "read2 mapped": {
            "type": "number",
            "description": ""
        },
        "paired in sequencing": {
            "type": "number",
            "description": ""
        },
        "properly paired": {
            "type": "number",
            "description": ""
        },
        "mate mapped different chr": {
            "type": "number",
            "description": ""
        }
    }
}
