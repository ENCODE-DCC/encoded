{
    "title": "scATAC-seq alignment quality metric",
    "description": "Schema for scATAC-seq alignment quality metrics",
    "id": "/profiles/sc_atac_alignment_quality_metric.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["step_run","quality_metric_of", "award", "lab"],
    "additionalProperties": false,
    "identifyingProperties": ["uuid"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "quality_metric.json#/properties" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted"},
        { "$ref": "mixins.json#/aliases"},
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/standard_status"},
        { "$ref": "mixins.json#/assay" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "with_itself": {
            "title": "Number of reads with itself & mate mapped passing QC",
            "type": "integer",
            "minimum": 0
        },
        "with_itself_qc_failed": {
            "title": "Number of reads with itself & mate mapped failing QC",
            "type": "integer",
            "minimum": 0
        },
        "usable_fragments": {
            "title": "Number usable fragments",
            "type": "integer",
            "minimum": 0
        },
        "properly_paired_reads": {
            "title": "Number of properly paired reads passing QC",
            "type": "integer",
            "minimum": 0
        },
        "properly_paired_reads_qc_failed": {
            "title": "Number of properly paired reads failing QC",
            "type": "integer",
            "minimum": 0
        },
        
        "paired_reads": {
            "title": "Number of paired reads passing QC",
            "type": "integer",
            "minimum": 0
        },
        "paired_reads_qc_failed": {
            "title": "Number of paired reads failing QC",
            "type": "integer",
            "minimum": 0
        },
        "pct_properly_paired_reads": {
            "title": "Percentage of properly paired reads passing QC",
            "type": "number",
            "minimum": 0,
            "maximum": 1
        },
        
        "mapped_reads": {
            "title": "Number of mapped reads passing QC",
            "type": "integer",
            "minimum": 0
        },
        "mapped_reads_qc_failed": {
            "title": "Number of mapped reads failing QC",
            "type": "integer",
            "minimum": 0
        },
        "pct_mapped_reads": {
            "title": "Percentage of mapped reads passing QC",
            "type": "number",
            "minimum": 0,
            "maximum": 1
        },
        "singletons": {
            "title": "Number of singletons passing QC",
            "type": "integer",
            "minimum": 0
        },
        "singletons_qc_failed": {
            "title": "Number of singletons failing QC",
            "type": "integer",
            "minimum": 0
        },
        "read1": {
            "title": "Number of read1 reads passing QC",
            "type": "integer",
            "minimum": 0
        },
        "read1_qc_failed": {
            "title": "Number of read1 reads failing QC",
            "type": "integer",
            "minimum": 0
        },
        "read2": {
            "title": "Number of read2 reads passing QC",
            "type": "integer",
            "minimum": 0
        },
        "read2_qc_failed": {
            "title": "Number of read2 reads failing QC",
            "type": "integer",
            "minimum": 0
        },
        "total_reads": {
            "title": "Number of total reads passing QC",
            "type": "integer",
            "minimum": 0
        },
        "total_reads_qc_failed": {
            "title": "Number of total reads failing QC",
            "type": "integer",
            "minimum": 0
        },
        "duplicate_reads": {
            "title": "Number of reads with duplicates passing QC",
            "type": "integer",
            "minimum": 0
        },
        "duplicate_reads_qc_failed": {
            "title": "Number of reads with duplicates failing QC",
            "type": "integer",
            "minimum": 0
        },
        "pct_singletons": {
            "title": "Percentage of singletons passing QC",
            "type": "number",
            "minimum": 0,
            "maximum": 1
        },        
        "diff_chroms": {
            "title": "Number of reads with mate mapped to different chromosomes passing QC",
            "type": "integer",
            "minimum": 0
        },
        "diff_chroms_qc_failed": {
            "title": "Number of reads with mate mapped to different chromosomes failing QC",
            "type": "integer",
            "minimum": 0
        },
        
        "non_mito_reads": {
            "title": "Number of non-mitochondrial reads",
            "type": "integer",
            "minimum": 0
        },
        "mito_reads": {
            "title": "Number of mitochondrial reads",
            "type": "integer",
            "minimum": 0
        },
        "frac_mito_reads": {
            "title": "Fraction of mitochondrial reads",
            "type": "number",
            "minimum": 0,
            "maximum": 1
        },
        "mito_stats": {
            "title": "Mitochondrial read statistics",
            "type": "object",
            "additionalProperties": false,
            "attachment": true,
            "formInput": "file",
            "properties": {
                "download": {
                    "title": "File Name",
                    "type": "string"
                },
                "href": {
                    "comment": "Internal webapp URL for document file",
                    "type": "string"
                },
                "type": {
                    "title": "MIME type",
                    "type": "string",
                    "enum": [
                        "text/plain"
                    ]
                },
                "size": {
                    "title": "File size",
                    "type": "integer",
                    "minimum": 0
                },
                "md5sum": {
                    "format": "md5sum",
                    "type": "string",
                    "title": "MD5sum"
                }
            }
        },
        "samstats": {
            "title": "SAMstats QC",
            "type": "object",
            "additionalProperties": false,
            "attachment": true,
            "formInput": "file",
            "properties": {
                "download": {
                    "title": "File Name",
                    "type": "string"
                },
                "href": {
                    "comment": "Internal webapp URL for document file",
                    "type": "string"
                },
                "type": {
                    "title": "MIME type",
                    "type": "string",
                    "enum": [
                        "text/plain"
                    ]
                },
                "size": {
                    "title": "File size",
                    "type": "integer",
                    "minimum": 0
                },
                "md5sum": {
                    "format": "md5sum",
                    "type": "string",
                    "title": "MD5sum"
                }
            }
        }
    },
    "facets": {
        "assay_term_name": {
            "title": "Assay name"
        },
        "status": {
            "title": "Status"
        }
    },
    "changelog": "/profiles/changelogs/sc_atac_alignment_quality_metric.md"
}
