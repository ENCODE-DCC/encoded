{
    "title": "Sequencing run",
    "description": "Schema for submitting metadata for a sequencing run.",
    "id": "/profiles/sequencing_run.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["derived_from"],
    "identifyingProperties": ["uuid", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        {"$ref": "mixins.json#/aliases"},
        {"$ref": "mixins.json#/dbxrefs"},
        {"$ref": "mixins.json#/documents"},
        {"$ref": "mixins.json#/notes"},
        {"$ref": "mixins.json#/submitted"},
        {"$ref": "mixins.json#/schema_version"},
        {"$ref": "mixins.json#/uuid"},
        {"$ref": "mixins.json#/standard_status"}
    ],
    "properties": {
        "schema_version": {
            "default": "2"
        },
        "dbxrefs": {
            "items": {
                "title": "External identifier",
                "description": "Identifier from an external resource that may have 1-to-1 or 1-to-many relationships with Lattice objects.",
                "type":  "string",
                "pattern": "^(SRA:SRR\\d+|ENA:ERR\\d+)$"
            }
        },
        "derived_from": {
            "title": "Derived from",
            "description": "The experimental library designation for the file.",
            "type": "array",
            "maxItems": 1,
            "items": {
                "type": "string",
                "linkTo": "Library"
            }
        },
        "demultiplexed_link": {
            "title": "Demultiplexed link",
            "description": "The pre-pooled sample that the sequencing is assigned to, if from a library of pooled samples, subsequently demultiplexed.",
            "type": "string",
            "linkTo": [
                "Biosample",
                "Suspension"
            ]
        },
        "platform": {
            "title": "Platform",
            "description": "The device used to sequence data.",
            "type": "string",
            "enum": [
                "Illumina NextSeq 500",
                "Illumina NovaSeq 6000",
                "Illumina HiSeq 4000",
                "Illumina HiSeq 2500",
                "MGI DNBSEQ-G400"
            ]
        },
        "flowcell_details": {
            "title": "Flowcell details",
            "description": "For each sequence file, the machine id, flowcell, and lane information for the sequencing run.",
            "comment":  "Do not submit. This will be filled in during checkfiles validation.",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "Flowcell details",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "machine": {
                        "title": "Machine Name",
                        "description": "The lab specific name of the machine used.",
                        "type": "string"
                    },
                    "flowcell": {
                        "title": "Flowcell ID",
                        "type": "string"
                    },
                    "lane": {
                        "title": "Lane",
                        "type": "string"
                    }
                }
            }
        }
    },
    "facets": {        
        "platform": {
            "title": "Platform"
        },
        "lab": {
            "title": "Lab"
        },
        "status": {
            "title": "Status"
        }
    },
    "columns": {
        "derived_from": {
            "title": "Library"
        },
        "dataset": {
            "title": "Dataset"
        },
        "lab": {
            "title": "Lab"
        },
        "platform": {
            "title": "Platform"
        },
        "read_1_file": {
            "title": "Read 1 file"
        },
        "read_2_file": {
            "title": "Read 2 file"
        },
        "read_1N_file": {
            "title": "Read 1N file"
        },
        "read_2N_file": {
            "title": "Read 2N file"
        },
        "i5_index_file": {
            "title": "i5 index file"
        },
        "i7_index_file": {
            "title": "i7 index file"
        }
    },
    "changelog": "/profiles/changelogs/sequencing_run.md"
}
