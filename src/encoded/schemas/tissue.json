{
    "title": "Tissue",
    "description": "Schema for submitting a tissue sample.",
    "comment": "",
    "id": "/profiles/tissue.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["biosample_ontology"],
    "identifyingProperties": ["uuid", "accession", "aliases", "derived_from", "derivation_process"],
    "additionalProperties": false,
    "mixinProperties": [
        {"$ref": "mixins.json#/aliases"},
        {"$ref": "mixins.json#/description"},
        {"$ref": "mixins.json#/documents"},
        {"$ref": "mixins.json#/accession"},
        {"$ref": "mixins.json#/notes"},
        {"$ref": "mixins.json#/submitted"},
        {"$ref": "mixins.json#/schema_version"},
        {"$ref": "mixins.json#/url"},
        {"$ref": "mixins.json#/uuid"},
        {"$ref": "mixins.json#/accessioned_status"},
        {"$ref": "mixins.json#/source"},
        {"$ref": "mixins.json#/dbxrefs"},
        {"$ref": "mixins.json#/treatments"},
        {"$ref": "mixins.json#/diseases"},
        {"$ref": "mixins.json#/references"},
        {"$ref": "biosample.json#/properties"}
    ],
    "dependencies": {
        "postmortem_interval":{
            "required": ["postmortem_interval_units"],
            "comment": "Tissue biosamples with a specified PMI require PMI_units to also be specified."
        },
        "postmortem_interval_units": {
            "required":["postmortem_interval"],
            "comment": "Tissue biosamples with a specified PMI_units require PMI to also be specified."
        }
    },
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "biosample_ontology": {
            "pattern": "^(UBERON|NTR)_[0-9]{2,8}$"
        },
        "postmortem_interval": {
            "title": "Post-mortem interval",
            "description": "The amount of time elapsed since death.",
            "comment": "Post-mortem interval for tissues should be reported, if known. Using for biosamples other than tissue is currently not allowed.",
            "type": "integer",
            "minimum": 1
        },
        "postmortem_interval_units": {
            "title": "Post-mortem interval units",
            "description": "The unit in which the PMI time was reported.",
            "comment": "Post-mortem interval units for tissues should be reported with PMI value, if known. Using for biosamples other than tissue is currently not allowed.",
            "type": "string",
            "enum": [
                "second",
                "minute",
                "hour",
                "day",
                "week"
            ]
        },
        "ischemic_temperature": {
            "title": "Ischemic temperature",
            "description": "Temperature during ischemia",
            "type": "string"
        },
        "ischemic_temperature_units": {
            "title": "Ischemic temperature units",
            "description": "The units used to measure temperature during ischemia.",
            "type": "string",
            "enum": [
                "C",
                "F"
            ]
        },
        "ischemic_time": {
            "title": "Ischemic time",
            "description": "Duration of ischemia?",
            "type": "integer"
        },
        "ischemic_time_units": {
            "title": "Ischemic time units",
            "description": "The units of time during ischemia?",
            "type": "string",
            "enum": [
                "second",
                "minute",
                "hour",
                "day",
                "week"
            ]
        },
        "spatial_information": {
            "title": "Spatial information",
            "description": "Information describing the specific anatomical site that the sample was collected from.",
            "type": "string"
        },
        "derived_from": {
            "items": {
                "title": "Derived from",
                "description": "A donor or sample from which this object was directly derived.",
                "type": "string",
                "linkTo": [
                    "Donor",
                    "Tissue"
                ]
            }
        },
        "derivation_process": {
            "items": {
                "type": "string",
                "enum": [
                    "dissection",
                    "surgical resection",
                    "blood draw",
                    "percutaneous kidney biopsy",
                    "biopsy",
                    "bone marrow aspiration",
                    "organ extraction",
                    "Ficoll-Hypaque method",
                    "collecting specimen from organ postmortem"
                ]
            }
        }
    },
    "facets": {
        "status": {
            "title": "Status"
        },
        "biosample_ontology.system_slims": {
            "title": "System",
            "type": "typeahead"
        },
        "biosample_ontology.organ_slims": {
            "title": "Organ",
            "type": "typeahead"
        },
        "biosample_ontology.term_name": {
            "title": "Biosample term name",
            "type": "typeahead"
        }
    },
    "columns": {
        "accession": {
            "title": "Accession"
        },
        "biosample_ontology.term_name": {
            "title": "Biosample term name"
        },
        "summary": {
            "title": "Summary"
        },
        "description": {
            "title": "Description"
        },
        "biosample_ontology.system_slims": {
            "title": "System"
        },
        "biosample_ontology.organ_slims": {
            "title": "Organ"
        },
        "derived_from": {
            "title": "Derived from"
        },
        "derivation_process": {
            "title": "Derivation process"
        },
        "status": {
            "title": "Status"
        }
    },
    "changelog": "/profiles/changelogs/tissue.md"
}
