{
    "title": "Dataset",
    "description": "Schema for submitting metadata for a dataset.",
    "comment": "",
    "id": "/profiles/dataset.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["award"],
    "identifyingProperties": ["uuid", "accession" , "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        {"$ref": "mixins.json#/aliases"},
        {"$ref": "mixins.json#/description"},
        {"$ref": "mixins.json#/award"},
        {"$ref": "mixins.json#/schema_version"},
        {"$ref": "mixins.json#/uuid"},
        {"$ref": "mixins.json#/accession"},
        {"$ref": "mixins.json#/submitted"},
        {"$ref": "mixins.json#/notes"},
        {"$ref": "mixins.json#/references"},
        {"$ref": "mixins.json#/documents"},
        {"$ref": "mixins.json#/dbxrefs"},
        {"$ref": "mixins.json#/urls"}
    ],
    "dependencies": {
        "status": {
            "oneOf": [
                {
                    "required": ["date_released"],
                    "properties": {
                        "status": {
                            "enum": ["released", "revoked"]
                        }
                    }
                },
                {
                    "not": {
                        "properties": {
                            "status": {
                                "enum": ["released", "revoked", "submitted"]
                            }
                        }
                    }
                }
            ]
        }
    },
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "accession": {
            "accessionType": "SR"
        },
        "alternate_accessions": {
            "items": {
                "title": "Alternate Accession",
                "description": "An accession previously assigned to an object that has been merged with this object.",
                "comment": "Only accessions of objects that have status equal replaced will work here.",
                "type": "string",
                "format": "accession",
                "pattern": "^(ENCSR\\d{3}[A-Z]{3})$|^(TSTSR\\d{6})$"
            }
        },
        "corresponding_contributor": {
            "title": "Corresponding contributor",
            "description": "The user who is the primary external contact for the dataset.",
            "comment": "",
            "type": "string",
            "linkTo": "User"
        },
        "internal_contact": {
            "title": "Internal contact",
            "description": "The Lattice contact for questions about the details of the experiment and/or analysis.",
            "comment": "",
            "type": "string",
            "linkTo": "User"
        },
        "status": {
            "title": "Status",
            "description": "Status of the dataset.",
            "type": "string",
            "permission": "import_items",
            "default": "in progress",
            "enum" : [
                "in progress",
                "submitted",
                "released",
                "archived",
                "deleted",
                "replaced",
                "revoked"
            ]
        },
        "date_released": {
            "title": "Date released",
            "description": "Date when dataset was released",
            "comment": "Do not submit, value is assigned whe the object is releaesd.",
            "type": "string",
            "anyOf": [
                {"format": "date-time"},
                {"format": "date"}
            ],
            "permission": "import_items"
        },
        "description": {
            "elasticsearch_mapping_index_type": {
                "title": "Field mapping index type",
                "description": "Defines one of three types of indexing available",
                "type": "string",
                "default": "analyzed",
                "enum": [
                    "analyzed",
                    "not_analyzed",
                    "no"
                ]
            }
        },
        "dbxrefs": {
            "items": {
                "title": "External identifier",
                "description": "An identifier from an external resource that may have 1-to-1 or 1-to-many relationships with ENCODE objects.",
                "type":  "string",
                "pattern": "^(FactorBook:ENCSR\\d{3}[A-Z]{3}|UCSC-ENCODE-mm9:wgEncodeEM\\d+|UCSC-ENCODE-hg19:wgEncodeEH\\d+|GEO:(GSM|GSE)\\d+|GEO-obsolete:(GSM|GSE)\\d+|RBPImage:[^\\s].*|4DN:4DNES[A-Z0-9]+)$"
            }
        },
        "documents": {
            "description": "Protocols or other documents that describe the assay or the results (not data files)."
        },
        "supersedes": {
            "title": "Supersedes" ,
            "description": "The datasets(s) that this experiment supersedes by virtue of being newer, better etc. than the one(s) it supersedes.",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                    "comment": "See experiment.json for a list of available identifiers.",
                    "type": "string",
                    "linkTo": "Dataset"
            }
        },
        "related_files": {
            "title": "Additional data files",
            "description": "To be removed in a future release after data cleanup.",
            "type": "array",
            "default": [],
            "permission": "import_items",
            "items": {
                "title": "Data file",
                "comment": "See file.json for available identifiers.",
                "type": "string",
                "linkTo": "DataFile"
            }
        },
        "analyses": {
            "title": "Analyses",
            "description": "A list of analyses.",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "permission": "import_items",
            "items": {
                "title": "Analysis",
                "description": "One group of files which form a coherent analysis.",
                "type": "object",
                "required": ["files"],
                "additionalProperties": false,
                "properties": {
                    "files": {
                        "title": "Analysis files",
                        "description": "A list of processed files belonging to this analsis",
                        "type": "array",
                        "minItems": 1,
                        "uniqueItems": true,
                        "permission": "import_items",
                        "items": {
                            "title": "Analysis file",
                            "comment": "See file.json for available identifiers.",
                            "type": "string",
                            "linkTo": "DataFile"
                        }
                    },
                    "assemblies": {
                        "title": "Assemblies",
                        "description": "A list of genome assemblies on which this analysis is performed.",
                        "comment": "[CALCULATED PROPERTY] Do not submit. This field is calculated from files in this analysis.",
                        "type": "array",
                        "notSubmittable": true,
                        "items": {
                            "type": "string"
                        }
                    },
                    "genome_annotations": {
                        "title": "Genome Annotations",
                        "description": "A list of genome annotations on which this analysis is performed.",
                        "comment": "[CALCULATED PROPERTY] Do not submit. This field is calculated from files in this analysis.",
                        "type": "array",
                        "notSubmittable": true,
                        "items": {
                            "type": "string"
                        }
                    },
                    "pipelines": {
                        "title": "Pipelines",
                        "description": "A list of pipelines used to generate this analysis.",
                        "comment": "[CALCULATED PROPERTY] Do not submit. This field is calculated from files in this analysis.",
                        "type": "array",
                        "notSubmittable": true,
                        "items": {
                            "type": "string",
                            "linkTo": "Pipeline"
                        }
                    },
                    "pipeline_award_rfas": {
                        "title": "Pipeline awards",
                        "description": "A list of award bioproject phases to which pipelines that used to generate this analysis belong to.",
                        "comment": "[CALCULATED PROPERTY] Do not submit. This field is calculated from files in this analysis.",
                        "type": "array",
                        "notSubmittable": true,
                        "items": {
                            "type": "string"
                        }
                    },
                    "pipeline_labs": {
                        "title": "Pipeline labs",
                        "description": "A list of labs whose pipelines are used to generate this analysis.",
                        "comment": "[CALCULATED PROPERTY] Do not submit. This field is calculated from files in this analysis.",
                        "type": "array",
                        "notSubmittable": true,
                        "items": {
                            "type": "string",
                            "linkTo": "Lab"
                        }
                    }
                }
            }
        }
    },
    "facets": {
        "status": {
            "title": "Status"
        },
        "libraries.protocol.library_type": {
            "title": "Library type"
        },
        "libraries.protocol.name": {
            "title": "Library protocol"
        },
        "award.project": {
            "title": "Project"
        },
        "award.name": {
            "title": "Award name"
        },
        "assembly": {
            "title": "Genome assembly"
        },
        "files.file_type": {
            "title": "Available file types"
        },
        "date_released": {
            "title": "Date released",
            "length": "long"
        }
    },
    "columns": {
        "accession": {
            "title": "Accession"
        },
        "biosample_summary": {
            "title": "Biosample summary"
        },
        "description": {
            "title": "Description"
        },
        "award.project": {
            "title": "Project"
        },
        "award.name": {
            "title": "Award name"
        },
        "status": {
            "title": "Status"
        },
        "files.@id": {
            "title": "Files"
        },
        "libraries.protocol.name": {
            "title": "Library protocol"
        },
        "libraries.protocol.library_type": {
            "title": "Library type"
        }
    },
    "boost_values": {},
    "changelog": "/profiles/changelogs/Dataset.md"
}
