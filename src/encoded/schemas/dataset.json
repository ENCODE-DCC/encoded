{
    "title": "Dataset",
    "description": "Schema for submitting metadata for a dataset.",
    "id": "/profiles/dataset.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["award"],
    "identifyingProperties": ["uuid", "accession" , "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        {"$ref": "mixins.json#/aliases"},
        {"$ref": "mixins.json#/description"},
        {"$ref": "mixins.json#/award"},
        {"$ref": "mixins.json#/schema_version"},
        {"$ref": "mixins.json#/uuid"},
        {"$ref": "mixins.json#/accession"},
        {"$ref": "mixins.json#/submitted"},
        {"$ref": "mixins.json#/notes"},
        {"$ref": "mixins.json#/references"},
        {"$ref": "mixins.json#/documents"},
        {"$ref": "mixins.json#/dbxrefs"},
        {"$ref": "mixins.json#/urls"},
        {"$ref": "mixins.json#/accessioned_status"}
    ],
    "dependencies": {},
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "accession": {
            "accessionType": "DS"
        },
        "alternate_accessions": {
            "items": {
                "title": "Alternate Accession",
                "description": "An accession previously assigned to an object that has been merged with this object.",
                "comment": "Only accessions of objects that have status equal replaced will work here.",
                "type": "string",
                "format": "accession",
                "pattern": "^(LATDS\\d{3}[A-Z]{3})$"
            }
        },
        "corresponding_contributor": {
            "title": "Corresponding contributor",
            "description": "The user who is the primary external contact for the dataset.",
            "comment": "",
            "type": "string",
            "linkTo": "User"
        },
        "internal_contact": {
            "title": "Internal contact",
            "description": "The Lattice contact for questions about the details of the experiment and/or analysis.",
            "comment": "",
            "type": "string",
            "linkTo": "User"
        },
        "date_released": {
            "title": "Date released",
            "description": "Date when dataset was released",
            "comment": "Do not submit, value is assigned whe the object is releaesd.",
            "type": "string",
            "anyOf": [
                {"format": "date-time"},
                {"format": "date"}
            ],
            "permission": "import_items"
        },
        "dbxrefs": {
            "items": {
                "title": "External identifier",
                "description": "An identifier from an external resource that may have 1-to-1 or 1-to-many relationships with ENCODE objects.",
                "type":  "string",
                "pattern": "^(GEO:(GSM|GSE)\\d+|GEO-obsolete:(GSM|GSE)\\d+|BioProject:PRJNA\\d+|BioStudies:\\d+|ArrayExpress:\\d+|dbGaP:phs\\d+|SRA:SRP\\d+|ENA:ERP\\d+|ENA:PRJNA\\d+|EGA:EGAS\\d+)$"
            }
        },
        "documents": {
            "description": "Protocols or other documents that describe the assay or the results (not data files)."
        },
        "supersedes": {
            "title": "Supersedes" ,
            "description": "The datasets(s) that this experiment supersedes by virtue of being newer, better etc. than the one(s) it supersedes.",
            "type": "array",
            "uniqueItems": true,
            "items": {
                    "comment": "See experiment.json for a list of available identifiers.",
                    "type": "string",
                    "linkTo": "Dataset"
            }
        },
        "related_files": {
            "title": "Additional data files",
            "description": "To be removed in a future release after data cleanup.",
            "type": "array",
            "permission": "import_items",
            "items": {
                "title": "Data file",
                "comment": "See file.json for available identifiers.",
                "type": "string",
                "linkTo": "DataFile"
            }
        }
    },
    "facets": {
        "libraries.assay": {
            "title": "Assay type"
        },
        "libraries.protocol.name": {
            "title": "Library protocol"
        },
        "award.project": {
            "title": "Project"
        },
        "award.name": {
            "title": "Award name"
        },
        "assembly": {
            "title": "Genome assembly"
        },
        "files.file_format": {
            "title": "Available file types"
        },
        "date_released": {
            "title": "Date released",
            "length": "long"
        },
        "status": {
            "title": "Status"
        }
    },
    "columns": {
        "accession": {
            "title": "Accession"
        },
        "award.project": {
            "title": "Project"
        },
        "award.name": {
            "title": "Award name"
        },
        "status": {
            "title": "Status"
        },
        "libraries.protocol.name": {
            "title": "Library protocol"
        },
        "libraries.assay": {
            "title": "Assay type"
        }
    },
    "changelog": "/profiles/changelogs/dataset.md"
}
