{
    "title": "Target",
    "description": "Schema for submitting a target gene.",
    "id": "/profiles/target.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["label", "investigated_as"],
    "identifyingProperties": ["uuid", "label-organism.name", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "mixins.json#/standard_status" }
    ],
    "oneOf": [
        {
            "properties": {
                "investigated_as": {
                    "items": {
                        "enum": ["synthetic tag"]
                    }
                }
            },
            "allOf": [
                {"not": {"required": ["target_organism"]}},
                {"not": {"required": ["genes"]}}
            ]
        },
        {
            "required": ["target_organism"],
            "not": {
                "required": ["genes"]
            },
            "properties": {
                "investigated_as": {
                    "items": {
                        "enum": [
                            "broad histone mark",
                            "chromatin remodeller",
                            "control",
                            "histone",
                            "narrow histone mark",
                            "nucleotide modification",
                            "other context",
                            "other post-translational modification",
                            "recombinant protein",
                            "RNA binding protein",
                            "tag",
                            "transcription factor"
                        ]
                    }
                }
            }
        },
        {
            "required": ["genes"],
            "not": {
                "required": ["target_organism"]
            },
            "properties": {
                "investigated_as": {
                    "items": {
                        "enum": [
                            "broad histone mark",
                            "chromatin remodeller",
                            "control",
                            "histone",
                            "narrow histone mark",
                            "nucleotide modification",
                            "other context",
                            "other post-translational modification",
                            "recombinant protein",
                            "RNA binding protein",
                            "tag",
                            "transcription factor"
                        ]
                    }
                }
            }
        }
    ],
    "dependencies": {
        "modifications": ["genes"]
    },
    "properties": {
        "schema_version": {
            "default": "10"
        },
        "dbxref": {
            "title": "External identifiers",
            "description": "Unique identifiers from external resources (e.g. HGNC, GeneID, UniProtKB or ENSEMBL).",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "External identifier",
                "description": "A unique identifier from external resource (e.g. HGNC, GeneID, UniProtKB or ENSEMBL).",
                "comment": "Submit as database name:target name (e.g. HGNC:HMFN0395, GeneID:22809)",
                "type":  "string"
            }
        },
        "target_organism": {
            "title": "Target organism",
            "description": "Organism bearing the target.",
            "comment": "This property is for targets which don't have any associated genes. This property and the \"genes\" property are mutually exclusive. See organism.json for available identifiers.",
            "type": "string",
            "linkTo": "Organism"
        },
        "genes": {
            "title": "Targeted genes",
            "description": "List of gene(s) targeted by corresponding assay or antibody.",
            "comment": "See gene.json for available identifiers and details.",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "Targeted Gene",
                "description": "A gene targeted by corresponding assay or antibody.",
                "comment": "See gene.json for available identifiers and details.",
                "type": "string",
                "linkTo": "Gene"
            }
        },
        "modifications": {
            "title": "Modification to the corresponding gene product.",
            "description": "List of modifications made to the corresponding gene product of this target.",
            "comment": "This property will be used to calculate the proper label of the target. See computed_label property for details about automatic label calculation.",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "Modification",
                "description": "A modification to the gene product.",
                "type": "object",
                "required": ["modification"],
                "properties": {
                    "modification": {
                        "title": "Type of modification",
                        "description": "One specific modifications listed in the enum.",
                        "type": "string",
                        "enum": [
                            "3xFLAG",
                            "6XHis",
                            "DsRed",
                            "eGFP",
                            "ER",
                            "FLAG",
                            "GFP",
                            "HA",
                            "mCherry",
                            "T2A",
                            "TRE",
                            "V5",
                            "YFP",
                            "Methylation",
                            "Monomethylation",
                            "Dimethylation",
                            "Trimethylation",
                            "Acetylation",
                            "Ubiquitination",
                            "Phosphorylation"
                        ]
                    },
                    "position": {
                        "title": "Amino acid position",
                        "description": "The numeric position (one based) of modified amino acid in the protein.",
                        "comment": "It worth noting that the first Methionine on newly transcribed peptide is usually cleaved through N-terminal methionine excision (NME). Therefore, this cleaved Methionine will not be taken into account and the amino acid right after it is position 1.",
                        "type": "integer",
                        "minimum": 1
                    },
                    "amino_acid_code": {
                        "title": "Modified amino acid",
                        "description": "One letter IUPAC amino acid code.",
                        "type": "string",
                        "pattern": "^[ACDEFGHIKLMNPQRSTVWY]$"
                    }
                }
            }
        },
        "label": {
            "title": "Common name with modification",
            "description": "Common name for the target including post-translational modifications, if any.",
            "comment": "Submit the common name of the gene with modification (e.g. H3K4me3, eGFP-E2F1, or POLR2AphosphoS2).",
            "type": "string",
            "pattern": "^(?!\\s)[\\S|\\s]*\\S$",
            "format": "target_label"
        },
        "investigated_as": {
            "title": "Target project investigation context",
            "description": "The context(s) the target was investigated in",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "enum": [
                    "broad histone mark",
                    "chromatin remodeller",
                    "control",
                    "histone",
                    "narrow histone mark",
                    "nucleotide modification",
                    "other context",
                    "other post-translational modification",
                    "recombinant protein",
                    "RNA binding protein",
                    "synthetic tag",
                    "tag",
                    "transcription factor"
                ]
            }
        }
    },
    "facets": {
        "organism.scientific_name": {
            "title": "Organism"
        },
        "investigated_as": {
            "title": "Target of assay"
        },
        "modifications.modification": {
            "title": "Modification in targets"
        }
    },
    "columns": {
        "label": {
            "title": "Target"
        },
        "investigated_as": {
            "title": "Target category"
        },
        "organism.scientific_name": {
            "title": "Species"
        },
        "dbxref": {
            "title": "External resources"
        },	
        "genes.symbol": {	
            "title": "Gene name"	
        }
    },
    "boost_values": {
        "label": 1.0, 
        "dbxref": 1.0, 
        "aliases": 1.0, 
        "organism.name": 1.0,  
        "organism.scientific_name": 1.0, 
        "genes.geneid": 1.0,
        "genes.symbol": 1.0,
        "modifications.modification": 1.0,
        "modifications.amino_acid_code": 1.0,
        "organism.taxon_id": 1.0
    },
    "changelog": "/profiles/changelogs/target.md"

}
