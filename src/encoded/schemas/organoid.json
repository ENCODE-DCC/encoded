{
    "title": "Organoid",
    "description": "Schema for submitting an organoid sample.",
    "comment": "",
    "id": "/profiles/organoid.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["biosample_ontology"],
    "identifyingProperties": ["uuid", "accession", "aliases", "derived_from", "derivation_process"],
    "additionalProperties": false,
    "mixinProperties": [
        {"$ref": "mixins.json#/aliases"},
        {"$ref": "mixins.json#/description"},
        {"$ref": "mixins.json#/documents"},
        {"$ref": "mixins.json#/accession"},
        {"$ref": "mixins.json#/notes"},
        {"$ref": "mixins.json#/submitted"},
        {"$ref": "mixins.json#/schema_version"},
        {"$ref": "mixins.json#/url"},
        {"$ref": "mixins.json#/uuid"},
        {"$ref": "mixins.json#/accessioned_status"},
        {"$ref": "mixins.json#/source"},
        {"$ref": "mixins.json#/dbxrefs"},
        {"$ref": "mixins.json#/treatments"},
        {"$ref": "mixins.json#/diseases"},
        {"$ref": "mixins.json#/references"},
        {"$ref": "biosample.json#/properties"},
        {"$ref": "culture.json#/properties"}
    ],
    "dependencies": {},
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "biosample_ontology": {
            "pattern": "^(UBERON|NTR)_[0-9]{2,8}$"
        },
        "derived_from": {
            "items": {
                "title": "Derived from",
                "description": "A donor or sample from which this object was directly derived.",
                "type": "string",
                "linkTo": [
                    "CellCulture",
                    "Suspension",
                    "Organoid"
                ]
            }
        },
        "embedded_in_matrigel": {
            "title": "Embedded in matrigel",
            "description": "Whether or not the organoids were grown in embedded in matrigel.",
            "type": "boolean"
        }
    },
    "facets": {
        "status": {
            "title": "Status"
        },
        "biosample_ontology.system_slims": {
            "title": "System",
            "type": "typeahead"
        },
        "biosample_ontology.organ_slims": {
            "title": "Organ",
            "type": "typeahead"
        },
        "biosample_ontology.term_name": {
            "title": "Biosample term name",
            "type": "typeahead"
        }
    },
    "columns": {
        "accession": {
            "title": "Accession"
        },
        "biosample_ontology.term_name": {
            "title": "Biosample term name"
        },
        "summary": {
            "title": "Summary"
        },
        "description": {
            "title": "Description"
        },
        "biosample_ontology.system_slims": {
            "title": "System"
        },
        "biosample_ontology.organ_slims": {
            "title": "Organ"
        },
        "derived_from": {
            "title": "Derived from"
        },
        "derivation_process": {
            "title": "Derivation process"
        },
        "status": {
            "title": "Status"
        }
    },
    "changelog": "/profiles/changelogs/organoid.md"
}
