{
    "title": "Mouse prenatal donor",
    "description": "Schema for submitting a prenatal mouse donor.",
    "id": "/profiles/mouse_prenatal_donor.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["life_stage", "gestational_age", "sex", "strain_term_name"],
    "identifyingProperties": ["uuid", "accession", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        {"$ref": "mixins.json#/aliases"},
        {"$ref": "mixins.json#/description"},
        {"$ref": "mixins.json#/documents"},
        {"$ref": "mixins.json#/notes"},
        {"$ref": "mixins.json#/submitted"},
        {"$ref": "mixins.json#/schema_version"},
        {"$ref": "mixins.json#/url"},
        {"$ref": "mixins.json#/accession"},
        {"$ref": "mixins.json#/uuid"},
        {"$ref": "mixins.json#/accessioned_status"},
        {"$ref": "mixins.json#/dbxrefs"},
        {"$ref": "mixins.json#/treatments"},
        {"$ref": "mixins.json#/diseases"},
        {"$ref": "mixins.json#/source"},
        {"$ref": "donor.json#/properties"},
        {"$ref": "mouse_donor.json#/properties"},
        {"$ref": "prenatal_donor.json#/properties"}
    ],
    "dependencies": {
        "gestational_age":  {
            "oneOf": [
                {
                    "properties": {
                        "gestational_age": {
                            "enum": ["unknown"]
                        }
                    }
                },
                {
                    "required": ["gestational_age_units"]
                }
            ]
        },
        "gestational_age_units":  {
            "required": ["gestational_age"],
            "not": {
                "properties": {
                    "gestational_age": {
                        "enum": ["unknown"]
                    }
                }
            }
        },
        "theiler_stage": {
            "oneOf": [
                {
                    "properties": {
                        "life_stage": {
                            "enum": ["embryonic"]
                        },
                        "theiler_stage": {
                            "maximum": 22
                        }
                    }
                },
                {
                    "properties": {
                        "life_stage": {
                            "enum": ["fetal"]
                        },
                        "theiler_stage": {
                            "minimum": 23
                        }
                    }
                }
            ]
        },
        "theiler_stage_basis": ["theiler_stage"],
        "weight": ["weight_unit"],
        "weight_unit": ["weight"],
        "crown_rump_length": ["crown_rump_length_units"],
        "crown_rump_length_units": ["crown_rump_length"],
        "foot_length": ["foot_length_units"],
        "foot_length_units": ["foot_length"],
        "knee_heel_length": ["knee_heel_length_units"],
        "knee_heel_length_units": ["knee_heel_length"],
        "product_id": ["source"],
        "lot_id": ["source", "product_id"],
        "disease_state": ["diseases"]
    },
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "life_stage": {
            "comment": "Based on the Mouse Development Stages ontology, embryonic is up to 15 d post-conception, fetal is 15 d post-conception to birth."
        },
        "theiler_stage": {
            "title": "Theiler stage",
            "description": "Embryo stage number as defined by Theiler stages.",
            "type": "integer",
            "minimum": 1,
            "maximum": 26
        },
        "theiler_stage_basis": {
            "title": "Theiler stage basis",
            "description": "Measurement or phenotype used to assign Theiler stage for a mouse prenatal donor.",
            "type": "string"
        }
    },
    "facets": {
        "life_stage": {
            "title": "Life stage"
        },
        "carnegie_stage": {
            "title": "Carnegie stage"
        },
        "sex": {
            "title": "Sex"
        },
        "strain_term_name": {
            "title": "Strain"
        },
        "diseases.term_name": {
            "title": "Disease"
        },
        "status": {
            "title": "Status"
        }
    },
    "columns": {
        "accession": {
            "title": "Accession"
        },
        "age_display": {
            "title": "Age"
        },
        "life_stage": {
            "title": "Life stage"
        },
        "carnegie_stage": {
            "title": "Carnegie stage"
        },
        "sex": {
            "title": "Sex"
        },
        "organism.scientific_name": {
            "title": "Organism species"
        },
        "strain_term_name": {
            "title": "Strain"
        },
        "diseases.term_name": {
            "title": "Disease"
        },
        "status": {
            "title": "Status"
        }
    },
    "changelog": "/profiles/changelogs/mouse_prenatal_donor.md"
}
