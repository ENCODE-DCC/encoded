{
    "title": "Matrix file",
    "description": "Schema for submitting metadata for a matrix file.",
    "id": "/profiles/matrix_file.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["dataset", "award", "file_format", "output_types", "md5sum", "derived_from", "normalized", "value_scale", "value_units", "derivation_process"],
    "identifyingProperties": ["uuid", "accession", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        {"$ref": "mixins.json#/aliases"},
        {"$ref": "mixins.json#/documents"},
        {"$ref": "mixins.json#/award"},
        {"$ref": "mixins.json#/accession"},
        {"$ref": "mixins.json#/dbxrefs"},
        {"$ref": "mixins.json#/notes"},
        {"$ref": "mixins.json#/submitted"},
        {"$ref": "mixins.json#/lab"},
        {"$ref": "mixins.json#/schema_version"},
        {"$ref": "mixins.json#/url"},
        {"$ref": "mixins.json#/uuid"},
        {"$ref": "mixins.json#/accessioned_status"},
        {"$ref": "data_file.json#/properties"},
        {"$ref": "analysis_file.json#/properties"}
    ],
    "dependencies": {
        "external_accession": {
            "comment": "A file with an external accession should not get an ENCODE accession.",
            "not": {
                "required": ["accession"]
            }
        },
        "revoke_detail": {
            "comment": "Only revoked files can have revoke_detail specified.",
            "properties": {
                "status": {
                    "enum": ["revoked"]
                }
            }
        },
        "content_error_detail":{
            "comment": "Specification of status of content error is required if content_error_detail is specified",
            "required": ["status"],
            "properties": {
                "status": {
                    "enum": ["content error"]
                }
            }
        },
        "status": {
            "comment": "file_size is required in files with statuses in progress, revoked, archived and released unless the file is not available from the portal. content_error_details can be specified in files with status deleted and is required in files with the status content error.",
            "allOf": [
                {
                    "oneOf": [
                        {
                            "anyOf": [
                                    {
                                        "required": ["no_file_available"],
                                        "properties": {
                                            "status": {
                                                "enum": ["in progress",  "revoked", "archived", "released"]
                                            },
                                             "no_file_available": {
                                                "enum": [true]
                                            }
                                        }
                                    },
                                    {
                                        "required": ["file_size"],
                                        "properties": {
                                            "status": {
                                                "enum": ["in progress",  "revoked", "archived", "released"]
                                            }
                                        }
                                    }
                            ]
                        },

                        {
                            "properties": {
                                "status": {
                                    "enum": ["uploading", "upload failed", "deleted", "replaced", "content error"]
                                }
                            }
                        }
                    ]
                },
                {
                    "oneOf": [
                        {
                            "required": ["content_error_detail"],
                            "properties": {
                                "status": {
                                    "enum": ["content error"]
                                }
                            }
                        },
                        {
                            "not": {
                                "oneOf": [
                                    {
                                        "required": ["content_error_detail"],
                                        "properties": {
                                            "status": {
                                                "enum": ["uploading", "uploaded", "upload failed", "format check failed", "in progress", "replaced", "revoked", "archived", "released"]
                                            }
                                        }
                                    },
                                    {
                                        "properties": {
                                            "status": {
                                                "enum": ["content error"]
                                            }
                                        }
                                    }
                                ]
                            }
                        }
                    ]

                }
            ]
        }
    },
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "dataset": {
            "linkTo": "Dataset"
        },
        "derived_from": {
            "items": {
                "title": "Derived from",
                "description": "A file participating as input into software to produce this output file.",
                "comment": "See file.json for a list of available identifiers.",
                "type": "string",
                "linkTo": [
                    "RawSequenceFile",
                    "ReferenceFile",
                    "MatrixFile"
                ]
            }
        },
        "file_format": {
            "enum": [
                "mtx",
                "csv",
                "loom",
                "tsv",
                "txt",
                "hdf5",
                "rds"
            ]
        },
        "output_types": {
            "items": {
                "type": "string",
                "enum": [
                    "gene quantifications",
                    "transcript quantifications",
                    "peak quantifications",
                    "transcription factor quantifications"
                ]
            }
        },
        "value_scale": {
            "title": "Value scale",
            "description": "The factor by which the expression values have been scaled; linear if not scaled.",
            "type": "string",
            "enum": [
                "linear",
                "natural log",
                "log2",
                "log10"
            ]
        },
        "value_units": {
            "title": "Value units",
            "description": "The units for the expression values.",
            "type": "string",
            "enum": [
                "UQ",
                "SF",
                "RPM",
                "RPKM",
                "FPKM",
                "TPM",
                "TMM",
                "UMI",
                "expected count",
                "fragment ends"
            ]
        },
        "normalized": {
            "title": "Normalized",
            "description": "A flag to indicate whether the expression values have been normalized.",
            "type": "boolean"
        },
        "normalization_method": {
            "title": "Normalization method",
            "description": "The transformation method used to make expression values comparable across libraries.",
            "type": "string",
            "enum": [
                "LogNormalize",
                "scTransform",
                "cellranger aggr read depth normalization",
                "TF-IDF"
            ]
        },
        "filtering_cutoffs": {
            "title": "Filtering cutoffs",
            "description": "The list of cutoffs that were used for filtering in generating the matrix.",
            "type": "array",
            "default": [],
            "items": {
                "title": "Filtering cutoff",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "cutoff_value": {
                        "title": "Cutoff value",
                        "description": "",
                        "type": "number"
                    },
                    "cutoff_units": {
                        "title": "Cutoff units",
                        "type": "string",
                        "enum": [
                            "genes/cell",
                            "genes/nuclei",
                            "umi/cell",
                            "umi/nuclei",
                            "cells/gene",
                            "nuclei/gene",
                            "percent mitochondrial/cell",
                            "percent mitochondrial/nuclei",
                            "fragments in peaks/nuclei",
                            "percent in peaks/nuclei",
                            "TSS enrichment score/nuclei",
                            "blacklist ratio/nuclei",
                            "doublet score/nuclei"
                        ]
                    },
                    "cutoff_type": {
                        "title": "Cutoff type",
                        "type": "string",
                        "enum": [
                            "minimum",
                            "maximum"
                        ]
                    }
                }
            }
        }
    },
    "facets": {
        "output_types": {
            "title": "Output type"
        },
        "file_format": {
            "title": "File format"
        },
        "lab.title": {
            "title": "Lab"
        },
        "award.name": {
            "title": "Award"
        },
        "status": {
            "title": "Status"
        }
    },
    "columns": {
        "title": {
            "title": "Title"
        },
        "accession": {
            "title": "Accession"
        },
        "dataset": {
            "title": "Dataset"
        },
        "assembly": {
            "title": "Genome assembly"
        },
        "file_format": {
            "title": "File Format"
        },
        "file_size": {
            "title": "File size"
        },
        "href": {
            "title": "Download URL"
        },
        "derived_from": {
            "title": "Derived from"
        },
        "genome_annotation": {
            "title": "Genome annotation"
        },
        "output_types": {
            "title": "Output types"
        },
        "lab.title": {
            "title": "Lab"
        },
        "award.name": {
            "title": "Award"
        },
        "software": {
            "title": "Software"
        },
        "submitter_comment": {
            "title": "Submitter comment"
        },
        "status": {
            "title": "Status"
        }
    },
    "file_format_file_extension": {
        "csv": ".csv.gz",
        "loom": ".loom",
        "hdf5": ".h5",
        "tsv": ".tsv",
        "txt": ".txt",
        "mtx": ".mtx",
        "rds": ".rds"
    },
    "changelog": "/profiles/changelogs/matrix_file.md"
}
