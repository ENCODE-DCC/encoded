{
    "title": "Matrix file",
    "description": "Schema for submitting metadata for a matrix file.",
    "id": "/profiles/matrix_file.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["dataset", "file_format", "output_types", "derived_from", "normalized", "value_scale", "value_units", "derivation_process"],
    "identifyingProperties": ["uuid", "accession", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        {"$ref": "mixins.json#/aliases"},
        {"$ref": "mixins.json#/documents"},
        {"$ref": "mixins.json#/accession"},
        {"$ref": "mixins.json#/dbxrefs"},
        {"$ref": "mixins.json#/notes"},
        {"$ref": "mixins.json#/submitted"},
        {"$ref": "mixins.json#/lab"},
        {"$ref": "mixins.json#/schema_version"},
        {"$ref": "mixins.json#/url"},
        {"$ref": "mixins.json#/uuid"},
        {"$ref": "mixins.json#/accessioned_status"},
        {"$ref": "file.json#/properties"},
        {"$ref": "data_file.json#/properties"},
        {"$ref": "analysis_file.json#/properties"}
    ],
    "dependencies": {
        "external_accession": {
            "not": {
                "required": ["accession"]
            }
        },
        "revoke_detail": {
            "properties": {
                "status": {
                    "enum": ["revoked"]
                }
            }
        },
        "content_error_detail":{
            "required": ["status"],
            "properties": {
                "status": {
                    "enum": ["content error"]
                }
            }
        },
        "genome_annotation": {
            "required": ["assembly"],
            "oneOf": [
                {
                    "properties": {
                        "assembly": {
                            "enum": ["hg19"]
                        },
                        "genome_annotation": {
                            "enum": ["GENCODE 19"]
                        }
                    }
                },
                {
                    "properties": {
                        "assembly": {
                            "enum": ["GRCh38"]
                        },
                        "genome_annotation": {
                            "enum": ["GENCODE 32", "GENCODE 28", "GENCODE 24"]
                        }
                    }
                },
                {
                    "properties": {
                        "assembly": {
                            "enum": ["mm10"]
                        },
                        "genome_annotation": {
                            "enum": ["GENCODE M23", "GENCODE M18",  "GENCODE M9"]
                        }
                    }
                }
            ]
        }
    },
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "derived_from": {
            "items": {
                "title": "Derived from",
                "description": "A file participating as input into software to produce this output file.",
                "comment": "See file.json for a list of available identifiers.",
                "type": "string",
                "linkTo": [
                    "RawSequenceFile",
                    "ReferenceFile",
                    "MatrixFile",
                    "Library"
                ]
            }
        },
        "file_format": {
            "enum": [
                "mtx",
                "csv",
                "loom",
                "tsv",
                "txt",
                "hdf5",
                "rds",
                "mex"
            ]
        },
        "output_types": {
            "items": {
                "type": "string",
                "enum": [
                    "gene quantifications",
                    "transcript quantifications",
                    "peak quantifications",
                    "transcription factor quantifications",
                    "antibody capture quantifications"
                ]
            }
        },
        "feature_keys": {
            "title": "Feature keys",
            "description": "The category of identifiers used as the key for the features of the matrix.",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "Feature key",
                "type": "string",
                "enum": [
                    "Ensembl gene ID",
                    "gene symbol",
                    "antibody target",
                    "genomic coordinates",
                    "motif ID"
                ]
            }
        },
        "feature_counts": {
            "title": "Feature counts",
            "description": "For each category of feature type, the number of entries found in the matrix considered as features (eg: genes, antibody capture, or peaks)",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "Feature count",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "feature_type": {
                        "title": "Feature type",
                        "type": "string",
                        "enum": [
                            "gene",
                            "peak",
                            "transcription factor",
                            "antibody capture"
                        ]
                    },
                    "feature_count": {
                        "title": "Feature count",
                        "description": "",
                        "type": "integer"
                    }
                }
            }
        },
        "observation_count": {
            "title": "Observation count",
            "description": "The number of entries found in the matrix considered as observations (eg: cell barcodes)",
            "type": "integer"
        },
        "value_scale": {
            "title": "Value scale",
            "description": "The factor by which the expression values have been scaled; linear if not scaled.",
            "type": "string",
            "enum": [
                "linear",
                "log, natural",
                "log, base 10",
                "log, base 2",
                "log1p, natural",
                "log1p, base 10",
                "log1p, base 2"
            ]
        },
        "value_units": {
            "title": "Value units",
            "description": "The units for the expression values.",
            "type": "string",
            "enum": [
                "UQ",
                "SF",
                "RPM",
                "RPKM",
                "FPKM",
                "TPM",
                "TMM",
                "UMI",
                "expected count",
                "fragment ends"
            ]
        },
        "normalized": {
            "title": "Normalized",
            "description": "A flag to indicate whether the expression values have been normalized.",
            "type": "boolean"
        },
        "normalization_method": {
            "title": "Normalization method",
            "description": "The transformation method used to make expression values comparable across libraries.",
            "type": "string",
            "enum": [
                "LogNormalize",
                "scTransform",
                "cellranger aggr read depth normalization",
                "TF-IDF"
            ]
        },
        "filtering_cutoffs": {
            "title": "Filtering cutoffs",
            "description": "The list of cutoffs that were used for filtering in generating the matrix.",
            "type": "array",
            "items": {
                "title": "Filtering cutoff",
                "type": "object",
                "required": ["cutoff_value", "cutoff_units", "cutoff_type"],
                "additionalProperties": false,
                "properties": {
                    "cutoff_value": {
                        "title": "Cutoff value",
                        "description": "",
                        "type": "number"
                    },
                    "cutoff_units": {
                        "title": "Cutoff units",
                        "type": "string",
                        "enum": [
                            "genes/cell",
                            "genes/nuclei",
                            "umi/cell",
                            "umi/nuclei",
                            "cells/gene",
                            "nuclei/gene",
                            "percent mitochondrial/cell",
                            "percent mitochondrial/nuclei",
                            "fragments in peaks/nuclei",
                            "percent in peaks/nuclei",
                            "TSS enrichment score/nuclei",
                            "blacklist ratio/nuclei",
                            "doublet score/nuclei"
                        ]
                    },
                    "cutoff_type": {
                        "title": "Cutoff type",
                        "type": "string",
                        "enum": [
                            "minimum",
                            "maximum"
                        ]
                    }
                }
            }
        }
    },
    "facets": {
        "output_types": {
            "title": "Output type"
        },
        "file_format": {
            "title": "File format"
        },
        "value_scale": {
            "title": "Scale"
        },
        "normalized": {
            "title": "Normalized"
        },
        "lab.title": {
            "title": "Lab"
        },
        "award.name": {
            "title": "Award"
        },
        "status": {
            "title": "Status"
        }
    },
    "columns": {
        "title": {
            "title": "Title"
        },
        "accession": {
            "title": "Accession"
        },
        "dataset": {
            "title": "Dataset"
        },
        "assembly": {
            "title": "Genome assembly"
        },
        "file_format": {
            "title": "File Format"
        },
        "file_size": {
            "title": "File size"
        },
        "href": {
            "title": "Download URL"
        },
        "derived_from": {
            "title": "Derived from"
        },
        "genome_annotation": {
            "title": "Genome annotation"
        },
        "output_types": {
            "title": "Output types"
        },
        "lab.title": {
            "title": "Lab"
        },
        "award.name": {
            "title": "Award"
        },
        "software": {
            "title": "Software"
        },
        "status": {
            "title": "Status"
        }
    },
    "file_format_file_extension": {
        "csv": ".csv.gz",
        "loom": ".loom",
        "hdf5": ".h5",
        "tsv": ".tsv",
        "txt": ".txt",
        "mtx": ".mtx",
        "rds": ".rds",
        "mex": ""
    },
    "changelog": "/profiles/changelogs/matrix_file.md"
}
