 {
    "title": "Mixin properties",
    "description": "Schema for properties that are shared across multiple object types.",
    "award": {
        "award": {
            "title": "Award",
            "description": "The HCA Seed Network or HCA Pilot Project award used to fund this data generation.",
            "comment": "Required. See award.json for list of available identifiers.",
            "type": "string",
            "linkTo": "Award"
        }
    },
    "schema_version": {
        "schema_version": {
            "title": "Schema version",
            "description": "The version of the JSON schema that the server uses to validate the object.",
            "comment":  "Do not submit. The version used to validate the object is set by the server. The default should be set to the current version.",
            "type": "string",
            "pattern": "^\\d+(\\.\\d+)*$",
            "requestMethod": []
        }
    },
    "description": {
        "description": {
            "title": "Description",
            "description": "A plain text description of the object.",
            "type": "string",
            "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$",
            "formInput": "textarea"
        }
    },
    "dbxrefs": {
        "dbxrefs": {
            "@type": "@id",
            "rdfs:subPropertyOf": "rdfs:seeAlso",
            "title": "External resources",
            "description": "Identifiers from external resources that may have 1-to-1 or 1-to-many relationships with Lattice objects",
            "type": "array",
            "default": [],
            "uniqueItems": true
        }
    },
    "uuid": {
        "uuid": {
            "title": "UUID",
            "description":"The unique identifier associated with every object.",
            "comment":  "Do not submit. The uuid is set by the server.",
            "type": "string",
            "format": "uuid",
            "serverDefault": "uuid4",
            "permission": "import_items",
            "requestMethod": "POST"
        }
    },
    "accession": {
        "accession": {
            "title": "Accession",
            "description": "A unique identifier to be used to reference the object prefixed with LAT.",
            "comment": "Do not submit. The accession is assigned by the server.",
            "type": "string",
            "format": "accession",
            "serverDefault": "accession",
            "permission": "import_items"
        },
        "alternate_accessions": {
            "title": "Alternate accessions",
            "description": "Accessions previously assigned to objects that have been merged with this object.",
	        "comment": "Do not submit. Only admins are allowed to set or update this value.",
            "type": "array",
            "default": [],
            "permission": "import_items"
        }
    },
    "accessioned_status": {
        "status": {
            "title": "Status",
            "type": "string",
            "permission": "import_items",
            "default": "in progress",
            "description": "The status of the metadata object.",
            "comment": "Do not submit.  This is set by admins along the process of metadata submission.",
            "enum": [
                "in progress",
                "released",
                "deleted",
                "replaced",
                "revoked",
                "archived"
            ]
        }
    },
    "standard_status": {
        "status": {
            "title": "Status",
            "type": "string",
            "default": "in progress",
            "description": "The status of the metadata object.",
            "permission": "import_items",
            "enum" : [
                "deleted",
                "in progress",
                "released"
            ]
        }
    },
    "shared_status": {
        "status": {
            "title": "Status",
            "type": "string",
            "default": "current",
            "description": "The status of the metadata object.",
            "enum" : [
                "current",
                "deleted",
                "disabled"
            ]
        }
    },
    "submitted": {
        "date_created": {
            "rdfs:subPropertyOf": "dc:created",
            "title": "Date created",
            "description": "The date the object was created.",
            "comment": "Do not submit. The date the object is created is assigned by the server.",
            "type": "string",
            "anyOf": [
                {"format": "date-time"},
                {"format": "date"}
            ],
            "serverDefault": "now",
            "permission": "import_items"
        },
        "submitted_by": {
            "rdfs:subPropertyOf": "dc:creator",
            "title": "Submitted by",
            "description": "The user that originally generated this metadata object.",
            "comment": "Do not submit. The user that created the object is assigned by the server.",
            "type": "string",
            "linkTo": "User",
            "serverDefault": "userid",
            "permission": "import_items"
        },
        "submitter_comment": {
            "title": "Submitter comment",
            "description": "Additional information specified by the submitter to be displayed as a comment on the portal.",
            "type": "string",
            "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$",
            "formInput": "textarea"
        }
    },
    "references": {
        "references": {
            "title": "References",
            "description": "The publications that provide more information about the object.",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "Reference",
                "description": "A publication that provide smore information about the object.",
                "type": "string",
                "linkTo": "Publication"
            }
        }
    },
    "lab": {
        "lab": {
            "title": "Lab",
            "description": "Lab associated with the submission.",
            "comment": "Required. See lab.json for list of available identifiers.",
            "type": "string",
            "linkTo": "Lab",
            "linkSubmitsFor": true
        }
    },
    "attachment": {
        "attachment": {
            "title": "Attachment",
            "description": "The file attachment object for the Image of the object.",
            "type": "object",
            "additionalProperties": false,
            "formInput": "file",
            "attachment": true,
            "properties": {
                "download": {
                    "title": "File Name",
                    "type": "string"
                },
                "href": {
                    "comment": "Internal webapp URL for document file",
                    "type": "string"
                },
                "type": {
                    "title": "MIME type",
                    "type": "string",
                    "enum": [
                        "application/pdf",
                        "image/gif",
                        "image/jpeg",
                        "image/png",
                        "image/svs",
                        "image/tiff",
                        "text/autosql",
                        "text/html",
                        "text/plain",
                        "text/tab-separated-values"
                    ]
                },
                "md5sum": {
                    "title": "MD5sum",
                    "type": "string",
                    "format": "md5sum"
                },
                "size": {
                    "title": "File size",
                    "type": "integer",
                    "minimum": 0
                },
                "width": {
                    "title": "Image width",
                    "type": "integer",
                    "minimum": 0
                },
                "height": {
                    "title": "Image height",
                    "type": "integer",
                    "minimum": 0
                }
            }
        }
    },
    "source": {
        "product_id": {
            "title": "Product ID",
            "description": "The product identifier provided by the originating lab or vendor.",
            "type": "string",
            "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$|^$"
        },
        "lot_id":{
    	    "title": "Lot ID",
    	    "description": "The lot identifier provided by the originating lab or vendor.",
    	    "type": "string",
            "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$|^$"
        },
        "source": {
            "title": "Source",
    	    "description": "The originating lab or vendor.",
    	    "type": "string"
        }
    },
    "notes": {
        "notes": {
            "title": "Notes",
            "description": "Lattice internal notes.",
            "comment": "Do not submit. A place for the DCC to keep information that does not have a place in the schema.",
            "type": "string",
            "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$",
            "permission": "import_items",
            "formInput": "textarea"
        }
    },
    "url": {
        "url": {
            "@type": "@id",
            "rdfs:subPropertyOf": "rdfs:seeAlso",
            "title": "URL",
            "description": "An external resource with additional information.",
            "type": "string",
            "format": "uri"
        }
    },
    "urls": {
        "urls": {
            "rdfs:subPropertyOf": "rdfs:seeAlso",
            "title": "URLs",
            "description": "External resources with additional information.",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "URL",
                "type": "string",
                "description": "An external resource with additional information.",
                "format": "uri"
            }
        }
    },
    "documents": {
        "documents": {
            "title": "Documents",
            "description": "Documents that provide additional information (not data file).",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "Document",
                "description": "A document that provides additional information (not data file).",
                "type": "string",
                "comment": "See document.json for available identifiers.",
                "linkTo": "Document"
            }
        }
    },
    "treatments": {
        "treatments": {
            "title": "Treatments",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "Treatment",
                "comment": "See treatment.json for available identifiers.",
                "type": "string",
                "linkTo": "Treatment"
            }
        }
    },
    "starting_quantity": {
        "starting_quantity": {
            "title": "Starting quantity",
            "type": "number",
            "minimum": 0
        },
        "starting_quantity_units": {
            "title": "Starting quantity units",
            "description": "The units used to measure the starting amount.",
            "type": "string"
        }
    },
    "diseases": {
        "diseases": {
            "title": "Diseases",
            "comment": "See ontology_term.json for available identifiers.",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "Disease",
                "type": "string",
                "linkTo": "OntologyTerm"
            }
        }
    },
    "quality_metric_of": {
        "quality_metric_of": {
            "title": "Quality Metric of",
            "description": "The expression matrix file from which the gene expression metrics was generated.",
            "type": "string",
            "uniqueItems": true,
            "comment": "See file.json for a list of available identifiers.",
            "linkTo": "MatrixFile"
        }
    },
    "viewing_groups": {
        "viewing_groups": {
            "title": "Viewing access groups",
            "description": "The groups that determines which set of data the user has permission to view.",
            "type": "array",
            "permission": "import-items",
            "items": {
                "title": "View access group",
                "description": "The group that determines which set of data the user has permission to view.",
                "type": "string",
                "enum": [
                    "community",
                    "pilot",
                    "CZI001KID",
                    "CZI002FRS",
                    "CZI003CNS",
                    "CZI004LIV",
                    "CZI005BMW",
                    "CZI006CVS",
                    "CZI007IMM",
                    "CZI008IMM",
                    "CZI009KID",
                    "CZI010MTH",
                    "CZI011EYE",
                    "CZI012EYE",
                    "CZI013MOG",
                    "CZI014MTH",
                    "CZI015KID",
                    "CZI016MOG",
                    "CZI017IMM",
                    "CZI018BRE",
                    "CZI019CNS",
                    "CZI020FRS",
                    "CZI021IMM",
                    "CZI022LNG",
                    "CZI023CVS",
                    "CZI024CNS",
                    "CZI025LYN",
                    "CZI026THY",
                    "CZI027ADI",
                    "CZI028ADI",
                    "CZI029TES",
                    "CZI030IMM",
                    "CZI031CNS",
