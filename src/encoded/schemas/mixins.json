 {
    "title": "Mixin properties",
    "description": "Schema for properties that are shared across multiple object types.",
    "schema_version": {
        "schema_version": {
            "title": "Schema version",
            "description": "The version of the JSON schema that the server uses to validate the object.",
            "comment":  "Do not submit. The version used to validate the object is set by the server. The default should be set to the current version.",
            "type": "string",
            "pattern": "^\\d+(\\.\\d+)*$",
            "requestMethod": []
        }
    },
    "dataset": {
        "dataset": {
            "title": "Dataset",
            "description": "The dataset the object belongs to.",
            "type": "string",
            "linkTo": "Dataset"
        }
    },
    "supersedes": {
        "supersedes": {
            "title": "Supersedes" ,
            "description": "The objects that this object supersedes.",
            "comment": "Do not submit. Only admins are allowed to set or update this value.",
            "type": "array",
            "uniqueItems": true
        }
    },
    "preservation": {
        "preservation_method": {
            "title": "Preservation method",
            "description": "The method by which the sample was preserved: cryopreservation (slow-freeze) or flash-freezing.",
            "type": "string",
            "enum": [
                "cryopreservation",
                "flash-freezing",
                "n/a (fresh)",
                "paraffin embedding"
            ]
        },
        "preservation_time": {
            "title": "Preservation time",
            "description": "The length of time that the sample was preserved",
            "type": "string",
            "pattern": "(^[<>]?[0-9]+(.[0-9]+)?$)|(^[0-9]+(.[0-9]+)-[0-9]+(.[0-9]+)$)"
        },
        "preservation_time_units": {
            "title": "Preservation time units",
            "description": "The units of time that the sample was preserved",
            "type": "string",
            "enum": [
                "minute",
                "hour",
                "day",
                "week",
                "month"
            ]
        }
    },
    "spatial_information": {
        "spatial_information": {
            "title": "Spatial information",
            "type": "string"
        }
    },
    "description": {
        "description": {
            "title": "Description",
            "description": "A plain text description of the object.",
            "type": "string",
            "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$",
            "formInput": "textarea"
        }
    },
    "dbxrefs": {
        "dbxrefs": {
            "@type": "@id",
            "rdfs:subPropertyOf": "rdfs:seeAlso",
            "title": "External resources",
            "description": "Identifiers from external resources that may have 1-to-1 or 1-to-many relationships with Lattice objects",
            "type": "array",
            "uniqueItems": true
        }
    },
    "uuid": {
        "uuid": {
            "title": "UUID",
            "description":"The unique identifier associated with every object.",
            "comment":  "Do not submit. The server will assign a value.",
            "type": "string",
            "format": "uuid",
            "serverDefault": "uuid4",
            "permission": "import_items",
            "requestMethod": "POST"
        }
    },
    "accession": {
        "accession": {
            "title": "Accession",
            "description": "A unique identifier to be used to reference the object prefixed with LAT.",
            "comment": "Do not submit. The server will assign a value.",
            "type": "string",
            "format": "accession",
            "serverDefault": "accession",
            "permission": "import_items"
        },
        "alternate_accessions": {
            "title": "Alternate accessions",
            "description": "Accessions previously assigned to objects that have been merged with this object.",
	        "comment": "Do not submit. Only admins are allowed to set or update this value.",
            "type": "array",
            "uniqueItems": true,
            "permission": "import_items"
        }
    },
    "accessioned_status": {
        "status": {
            "title": "Status",
            "type": "string",
            "permission": "import_items",
            "default": "in progress",
            "description": "The status of the metadata object.",
            "comment": "Do not submit.  The server will assign a default value.",
            "enum": [
                "in progress",
                "released",
                "deleted",
                "replaced",
                "revoked",
                "archived"
            ]
        }
    },
    "standard_status": {
        "status": {
            "title": "Status",
            "type": "string",
            "default": "in progress",
            "description": "The status of the metadata object.",
            "comment": "Do not submit.  The server will assign a default value.",
            "permission": "import_items",
            "enum" : [
                "deleted",
                "in progress",
                "released"
            ]
        }
    },
    "shared_status": {
        "status": {
            "title": "Status",
            "type": "string",
            "default": "current",
            "description": "The status of the metadata object.",
            "comment": "Do not submit. The server will assign a default value.",
            "enum" : [
                "current",
                "deleted",
                "disabled"
            ]
        }
    },
    "submitted": {
        "date_created": {
            "rdfs:subPropertyOf": "dc:created",
            "title": "Date created",
            "description": "The date the object was created.",
            "comment": "Do not submit. The server will assign a value.",
            "type": "string",
            "anyOf": [
                {"format": "date-time"},
                {"format": "date"}
            ],
            "serverDefault": "now",
            "permission": "import_items"
        },
        "submitted_by": {
            "rdfs:subPropertyOf": "dc:creator",
            "title": "Submitted by",
            "description": "The user that originally generated this metadata object.",
            "comment": "Do not submit. The server will assign a value.",
            "type": "string",
            "linkTo": "User",
            "serverDefault": "userid",
            "permission": "import_items"
        }
    },
    "references": {
        "references": {
            "title": "References",
            "description": "The publications that provide more information about the object.",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "Reference",
                "description": "A publication that provide smore information about the object.",
                "type": "string",
                "linkTo": "Publication"
            }
        }
    },
    "lab": {
        "lab": {
            "title": "Lab",
            "description": "Lab associated with the submission.",
            "type": "string",
            "linkTo": "Lab",
            "linkSubmitsFor": true
        }
    },
    "attachment": {
        "attachment": {
            "title": "Attachment",
            "description": "The file attachment object for the Image of the object.",
            "type": "object",
            "additionalProperties": false,
            "formInput": "file",
            "attachment": true,
            "properties": {
                "download": {
                    "title": "File Name",
                    "type": "string"
                },
                "href": {
                    "comment": "Internal webapp URL for document file",
                    "type": "string"
                },
                "type": {
                    "title": "MIME type",
                    "type": "string",
                    "enum": [
                        "application/pdf",
                        "image/gif",
                        "image/jpeg",
                        "image/png",
                        "image/svs",
                        "image/tiff",
                        "text/autosql",
                        "text/html",
                        "text/plain",
                        "text/tab-separated-values"
                    ]
                },
                "md5sum": {
                    "title": "MD5sum",
                    "type": "string",
                    "format": "md5sum"
                },
                "size": {
                    "title": "File size",
                    "type": "integer",
                    "minimum": 0
                },
                "width": {
                    "title": "Image width",
                    "type": "integer",
                    "minimum": 0
                },
                "height": {
                    "title": "Image height",
                    "type": "integer",
                    "minimum": 0
                }
            }
        }
    },
    "source": {
        "product_id": {
            "title": "Product ID",
            "description": "The product identifier provided by the originating lab or vendor.",
            "type": "string",
            "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$|^$"
        },
        "lot_id":{
    	    "title": "Lot ID",
    	    "description": "The lot identifier provided by the originating lab or vendor.",
    	    "type": "string",
            "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$|^$"
        },
        "source": {
            "title": "Source",
    	    "description": "The originating lab or vendor.",
    	    "type": "string"
        }
    },
    "notes": {
        "notes": {
            "title": "Notes",
            "description": "Lattice internal notes.",
            "type": "string",
            "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$",
            "permission": "import_items",
            "formInput": "textarea"
        }
    },
    "url": {
        "url": {
            "@type": "@id",
            "rdfs:subPropertyOf": "rdfs:seeAlso",
            "title": "URL",
            "description": "An external resource with additional information.",
            "type": "string",
            "format": "uri"
        }
    },
    "urls": {
        "urls": {
            "rdfs:subPropertyOf": "rdfs:seeAlso",
            "title": "URLs",
            "description": "External resources with additional information.",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "URL",
                "type": "string",
                "description": "An external resource with additional information.",
                "format": "uri"
            }
        }
    },
    "documents": {
        "documents": {
            "title": "Documents",
            "description": "Documents that provide additional information (not data file).",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "Document",
                "description": "A document that provides additional information (not data file).",
                "type": "string",
                "linkTo": "Document"
            }
        }
    },
    "treatments": {
        "treatments": {
            "title": "Treatments",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "Treatment",
                "type": "string",
                "linkTo": "Treatment"
            }
        }
    },
    "starting_quantity": {
        "starting_quantity": {
            "title": "Starting quantity",
            "type": "string",
            "pattern": "(^[<>]?[0-9]+(.[0-9]+)?$)|(^[0-9]+(.[0-9]+)-[0-9]+(.[0-9]+)$)"
        },
        "starting_quantity_units": {
            "title": "Starting quantity units",
            "description": "The units used to measure the starting amount.",
            "type": "string"
        }
    },
    "diseases": {
        "diseases": {
            "title": "Diseases",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "Disease",
                "type": "string",
                "linkTo": "OntologyTerm"
            }
        },
        "disease_state": {
            "title": "Disease state",
            "description": "The state of the relevant disease at the time of sample collection.",
            "type": "string",
            "enum": [
                "flare",
                "managed",
                "treated"
            ]
        }
    },
    "quality_metric_of": {
        "quality_metric_of": {
            "title": "Quality Metric of",
