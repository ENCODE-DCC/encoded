{
    "title": "Analysis",
    "description": "Schema for reporting one complete analysis of the corresponding experiment.",
    "id": "/profiles/analysis.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["dataset"],
    "additionalProperties": false,
    "identifyingProperties": ["uuid"],
    "mixinProperties": [
        {"$ref": "mixins.json#/accession"},
        {"$ref": "mixins.json#/aliases"},
        {"$ref": "mixins.json#/documents"},
        {"$ref": "mixins.json#/notes"},
        {"$ref": "mixins.json#/schema_version"},
        {"$ref": "mixins.json#/submitted"},
        {"$ref": "mixins.json#/uuid" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "accession": {
            "accessionType": "AN"
        },
        "dataset": {
            "title": "Dataset",
            "description": "The experiment or dataset the analysis belongs to.",
            "comment": "Required. See dataset.json for available identifiers.",
            "type": "string",
            "permission": "import_items",
            "linkTo": "Dataset"
        },
        "pipeline": {
            "title": "Pipeline",
            "description": "Reference to the pipeline",
            "type": "string",
            "linkTo": "Pipeline"
        },
        "code_version_url": {
            "title": "Link to analysis code",
            "description": "Link to specific codes, such as a specific git commit, used to perform this analysis.",
            "type": "string",
            "permission": "import_items",
            "format": "uri"
        },
        "execution_id": {
            "title": "Analysis execution identifier",
            "type": "string",
            "pattern": "^[0-9-a-zA-Z]+$",
            "permission": "import_items"
        },
        "execution_status": {
            "title": "Analysis execution status",
            "type": "string",
            "permission": "import_items",
            "default": "Submitted",
            "enum" : [
                "Submitted",
                "Failed",
                "Succeeded",
                "Aborted"
            ]
        },
        "begin_time": {
            "title": "Analysis begin time",
            "description": "Begin time for the whole analsis.",
            "type": "string",
            "permission": "import_items",
            "anyOf": [
                {"format": "date-time"},
                {"format": "date"}
            ]
        },
        "finish_time": {
            "title": "Analysis finish time",
            "description": "Finish time for the whole analsis.",
            "type": "string",
            "permission": "import_items",
            "anyOf": [
                {"format": "date-time"},
                {"format": "date"}
            ]
        },
        "status": {
            "title": "Analysis status",
            "type": "string",
            "permission": "import_items",
            "default": "in progress",
            "enum" : [
                "in progress",
                "submitted",
                "released",
                "archived",
                "deleted",
                "revoked"
            ]
        },
        "supersedes": {
            "title": "Supersedes" ,
            "description": "The analysis that this analysis supersedes by virtue of being newer, better etc. than the one(s) it supersedes.",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                    "comment": "See analysis.json for a list of available identifiers.",
                    "type": "string",
                    "linkTo": "Analysis"
            }
        }
    },
    "facets": {
        "status": {
            "title": "Analysis status"
        }
    },
    "columns": {
        "accession": {
            "title": "Accession"
        },
        "dataset": {
            "title": "Dataset"
        },
        "status": {
            "title": "Analysis status"
        }
    },
    "boost_values": {
        "aliases": 1.3,
        "submitted_by.email": 1.0,
        "submitted_by.first_name": 1.0,
        "submitted_by.last_name": 1.0,
        "files.accession": 1.0,
        "files.alternate_accessions": 1.0,
        "files.file_format": 1.0,
        "files.output_type": 1.0,
        "files.md5sum": 1.0
    },
    "changelog": "/profiles/changelogs/analysis.md"

}
