{
    "title": "Immunohistochemistry(IHC) results",
    "id": "/profiles/ihc.json",
    "description": "Schema for describing the IHC results.",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    
    "anyOf": [
        {"required": ["pathology_report"]},
        {"required": ["biospecimen"]}
    ],
    "required": [
        "patient",
        "service_date",
        "antibody",
        "result"
    ],
    "identifyingProperties": [
        "uuid","pathology_report","biospecimen"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/standard_status"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "patient": {
            "title": "Patient",
            "description": "The patient who had the IHC assay tested for.",
            "type": "string",
            "linkTo": "Patient"
        },
        "pathology_report": {
            "title": "Pathology Report Tumor Accession",
            "description": "Need any of surgery accession or biospecimen accession to submit data",
            "comment": "link to surgery information with surgery accession. ",
            "type": "string",
            "permission": "import_items",
            "linkTo": "PathologyReport"
        },
        "biospecimen": {
            "title": "Biospecimen Accession",
            "description": "Need any of surgery accession or biospecimen accession to submit data",
            "comment": "link to biospecimen information with biospecimen accession.",
            "type": "string",
            "permission": "import_items",
            "linkTo": "Biospecimen"
        },
        "path_id": {
            "title": "Pathology ID",
            "comment": "KCE personnel are allowed to set this value.",
            "type": "string",
            "permission": "import_items"
        },
        "service_date": {
            "title": "Service Date",
            "description": "Date of IHC assay performed.",
            "comment": "Date can be submitted as YYYY-MM-DD.",
            "type": "string",
            "anyOf": [
                {
                    "format": "date"
                }
            ]
        },
        "antibody": {
            "title": "IHC Assay staining antibody",
            "description": "The targeted protein name for IHC Assay",
            "type": "string",
            "enum": [
                "AE1/AE3",
                "BAP1",
                "CAM 5.2",
                "Carbonic Anhydrase IX",
                "Cathepsin-K",
                "CD10",
                "CD117",
                "CK20",
                "CK7",
                "CK903",
                "E-cadherin",
                "EMA",
                "HMB-45",
                "Melan-A",
                "PAX2",
                "PAX8",
                "Racemase",
                "RCC Antigen",
                "TFE3 FISH",
                "TFE3 IHC",
                "TFEB FISH",
                "Vimentin"
            ]
        },
        "result": {
            "title": "IHC assay staining result",
            "description": "IHC targeted protein staining result",
            "type": "string",
            "enum": [
                "Positive",
                "Negative",
                "Rare Focal Positive",
                "Focal Loss"
            ]
        }
    },
    "facets": {
        "antibody": {
            "title": "IHC/FISH (Clinical lab)"
        },
        "result": {
            "title": "IHC/FISH results"
        }
       
    },
    "columns": {
        
        "pathology_report": {
            "title": "Accession"
        },
        "patient": {
            "title": "Patient"
        },
        "biospecimen": {
            "title": "Biospecimen Accession"
        },
        "antibody": {
            "title": "IHC Assay staining antibody"
        },
        "result": {
            "title": "IHC assay staining result"
        }
    },

    "boost_values": {
        "antibody": 1.0,
        "patient": 1.0,
        "pathology_report": 1.0,
        "biospecimen": 1.0,
        "result": 1.0
    },
    "changelog": "/profiles/changelogs/ihc.md"

}
