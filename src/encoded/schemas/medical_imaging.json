{
    "title": "Medical Imaging",
    "description": "Schema for medical imaging.",
    "id": "/profiles/medical_imaging.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [ "cpt", "type", "procedure_date" ],
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/standard_status"}
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "patient": {
            "title": "Patient",
            "description": "The patient the lab was conducted for.",
            "type": "string",
            "linkTo": "Patient"
        },
        "procedure_date": {
            "title": "Procedure date",
            "description": "Procedure date of imaging to site.",
            "comment": "Date can be submitted as YYYY-MM-DD.",
            "type": "string",
            "anyOf": [
                {"format": "date"}
            ]
        },
        "type": {
            "title": "Imaging Type",
            "description": "Type of imaging performed.",
            "type": "string",
            "enum": [
                "CT Abdomen",
                "MR Abdomen",
                "PET"
            ]
        },
        "cpt": {
            "title": "CPT Code",
            "description": "CPT procedure code.",
            "type": "string",
            "enum": [
                "CPT:74150",
                "CPT:74160",
                "CPT:74170",
                "CPT:74174",
                "CPT:74175",
                "CPT:74176",
                "CPT:74177",
                "CPT:75178",
                "CPT:74181",
                "CPT:74182",
                "CPT:74183",
                "CPT:78815",
                "CPT:78816"
            ]
        }
    },
    "boost_values": {
        "type": 1.0
    },
    "changelog": "/profiles/changelogs/medical_imaging.md"
}
