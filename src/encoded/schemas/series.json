{
    "title": "Series",
    "description": "Schema for submitting metadata for a series.",
    "id": "/profiles/series.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [ "award", "lab"],
    "identifyingProperties": ["uuid", "accession" , "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/accessioned_status" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/references" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "mixins.json#/documents" }
    ],
    "properties": {
        "schema_version": {
            "hidden comment": "Bump the default in the subclasses."
        },
        "related_datasets": {
            "title": "Additional datasets",
            "description": "List of datasets to be associated with the series.",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "Dataset",
                "comment": "See dataset.json for available identifiers.",
                "type": "string",
                "linkTo": "Experiment"
            }
        }
    },
    "boost_values": {
        "internal_tags": 1.0
    }   
}
