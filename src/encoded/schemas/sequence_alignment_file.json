{
    "title": "Sequence Alignment file",
    "description": "Schema for submitting metadata for an alignment file.",
    "id": "/profiles/sequence_alignment_file.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["dataset", "file_format", "output_types", "derived_from", "derivation_process"],
    "identifyingProperties": ["uuid", "accession", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        {"$ref": "mixins.json#/aliases"},
        {"$ref": "mixins.json#/documents"},
        {"$ref": "mixins.json#/accession"},
        {"$ref": "mixins.json#/dbxrefs"},
        {"$ref": "mixins.json#/notes"},
        {"$ref": "mixins.json#/submitted"},
        {"$ref": "mixins.json#/lab"},
        {"$ref": "mixins.json#/schema_version"},
        {"$ref": "mixins.json#/url"},
        {"$ref": "mixins.json#/uuid"},
        {"$ref": "mixins.json#/accessioned_status"},
        {"$ref": "file.json#/properties"},
        {"$ref": "data_file.json#/properties"},
        {"$ref": "analysis_file.json#/properties"}
    ],
    "dependencies": {
        "external_accession": {
            "not": {
                "required": ["accession"]
            }
        },
        "revoke_detail": {
            "properties": {
                "status": {
                    "enum": ["revoked"]
                }
            }
        },
        "content_error_detail":{
            "required": ["status"],
            "properties": {
                "status": {
                    "enum": ["content error"]
                }
            }
        },
        "genome_annotation": {
            "required": ["assembly"],
            "oneOf": [
                {
                    "properties": {
                        "assembly": {
                            "enum": ["hg19"]
                        },
                        "genome_annotation": {
                            "enum": ["GENCODE 19"]
                        }
                    }
                },
                {
                    "properties": {
                        "assembly": {
                            "enum": ["GRCh38"]
                        },
                        "genome_annotation": {
                            "enum": ["GENCODE 32", "GENCODE 28", "GENCODE 24"]
                        }
                    }
                },
                {
                    "properties": {
                        "assembly": {
                            "enum": ["mm10"]
                        },
                        "genome_annotation": {
                            "enum": ["GENCODE M23", "GENCODE M18",  "GENCODE M9"]
                        }
                    }
                }
            ]
        }
    },
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "derived_from": {
            "items": {
                "title": "Derived from",
                "description": "A file participating as input into software to produce this output file.",
                "comment": "See file.json for a list of available identifiers.",
                "type": "string",
                "linkTo": [
                    "RawSequenceFile",
                    "ReferenceFile"
                ]
            }
        },
        "file_format": {
            "enum": [
                "bam",
                "tagAlign"
            ]
        },
        "mapped_read_length": {
            "title": "Mapped read length (nt)",
            "permission": "import_items",
            "description": "The length of the reads actually mapped, if the original read length was clipped.",
            "comment": "This is used when the original sequenced read length needed to be adjusted to match a replicate, or to match experiments and controls.",
            "type": "integer",
            "minimum": 0
        },
        "mapped_run_type": {
            "title": "Mapped run type for bam files",
            "description": "The mapped run type of the alignment file which may differ from the fastqs it is derived from.",
            "comment": "When the control and experiment run types do not match, one may be changed in order to meet pipeline requirements.",
            "permission": "import_items",
            "type": "string",
            "enum": [
                "single-ended",
                "paired-ended"
            ]
        },
        "output_types": {
            "items": {
                "type": "string",
                "enum": [
                    "genome alignments",
                    "transcriptome alignments"
                ]
            }
        },
        "sample_barcodes": {
            "title": "Sample barcodes",
            "description": "The list of sample index barcodes associated with the sequences in the alignment file.",
            "type": "array",
            "items": {
                "title": "Sample barcode",
                "description": "A sample index barcode associated with the sequences in the alignment file.",
                "type": "string",
                "pattern": "^[AGCT]{8}$"
            }
        }
    },
    "facets": {
        "output_types": {
            "title": "Output type"
        },
        "file_format": {
            "title": "File format"
        },
        "lab.title": {
            "title": "Lab"
        },
        "award.name": {
            "title": "Award"
        },
        "status": {
            "title": "Status"
        }
    },
    "columns": {
        "title": {
            "title": "Title"
        },
        "accession": {
            "title": "Accession"
        },
        "dataset": {
            "title": "Dataset"
        },
        "assembly": {
            "title": "Genome assembly"
        },
        "file_format": {
            "title": "File Format"
        },
        "file_size": {
            "title": "File size"
        },
        "href": {
            "title": "Download URL"
        },
        "derived_from": {
            "title": "Derived from"
        },
        "genome_annotation": {
            "title": "Genome annotation"
        },
        "mapped_read_length": {
            "title": "Mapped read length (nt)"
        },
        "read_length_units": {
            "title": "Read length units"
        },
        "output_types": {
            "title": "Output types"
        },
        "lab.title": {
            "title": "Lab"
        },
        "award.name": {
            "title": "Award"
        },
        "software": {
            "title": "Software"
        },
        "status": {
            "title": "Status"
        }
    },
    "file_format_file_extension": {
        "bam": ".bam",
        "tagAlign": ".tagAlign.gz"
    },
    "changelog": "/profiles/changelogs/sequence_alignment_file.md"
}
