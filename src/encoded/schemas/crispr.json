 {
    "title": "CRISPR",
    "description": "Schema for submitting an information on using CRISPR as a genetic modification technique.",
    "id": "/profiles/crispr.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["lab", "award", "source"],
    "identifyingProperties": ["uuid","aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/standard_status" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/product_id" },
        { "$ref": "mixins.json#/source" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "modification_technique.json#/properties" },
        { "$ref": "mixins.json#/documents" }
    ],
    "properties": {
        "schema_version": {
            "default": "3"
        },
        "guide_rna_sequences": {
            "title": "Guide RNA sequences",
        	"description": "gRNA sequences used in CRISPR genetic modification",
        	"type": "array",
        	"default": [],
        	"uniqueItems": true,
            "items": {
          		"title": "gRNA sequence",
              	"description": "guide RNA sequence used in the experiment.",
                "type": "string",
                "pattern": "^[ACUNTG]+$"
			}
		},
        "cas_used": {
            "title": "Cas protein used",
            "description": "Cas protein used in CRISPR-cas system",
            "type": "string",
            "enum": [
                "S. pyogenes Cas9",
                "S. pyogenes dCas9",
                "dCas9-KRAB (Addgene plasmid # 46911)"
            ]
        },
        "insertion_type": {
            "title": "Insertion type",
            "description": "The type of insertion being introduced.",
            "type": "string",
            "enum": [
                "candidate regulatory sequence (proximal)",
                "candidate regulatory sequence (distal)",
                "fusion protein"
            ]
        },
        "insert_sequence": {
            "title": "Insert sequence",
            "description": "Insert sequence",
            "type": "string",
            "pattern": "^[ACTG]+$"  
        },
        "source_data": {
            "title": "Source data",
            "description": "Source of the candidate regulatory element in the insert (if applicable).",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "Source data",
                "description": "Source data file from which the candidate regulatory element was identified.",
                "type": "string",
                "comment": "See file.json for available identifiers.",
                "linkTo": "File"
            }
        }
    }
}
