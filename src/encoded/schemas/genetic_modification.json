{
    "title": "Genetic Modification",
    "description": "Schema for submitting an information on genetic modification.",
    "id": "/profiles/genetic_modification.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["lab", "award", "modified_site", "modification_type"],
    "identifyingProperties": ["uuid","aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/accessioned_status" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/notes" }
    ],
    "properties": {
        "schema_version": {
            "default": "5"
        },
        "accession": {
            "accessionType": "GM"
        },
        "alternate_accessions": {
            "title": "Alternate accessions",
            "description": "Accessions previously assigned to objects that have been merged with this object.",
            "comment": "Do not submit. Only admins are allowed to set or update this value.",
            "type": "array",
            "default": [],
            "permission": "import_items",
            "items": {
                "title": "Alternate Accession",
                "description": "An accession previously assigned to an object that has been merged with this object.",
                "comment": "Only accessions of objects that have status equal replaced will work here.",
                "type": "string",
                "format": "accession",
                "pattern": "^(ENCGM\\d{3}[A-Z]{3})$|^(TSTGM\\d{6})$"
            }
        },
        "description": {
            "title": "Description",
            "description": "A plain text description of the genetic modification.",
            "type": "string",
            "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$"
        },
        "modification_type": {
            "title": "Modification type",
            "description": "The type of the genetic modification.",
            "type": "string",
            "enum": [
                "deletion",
                "insertion",
                "replacement",
                "mutagenesis",
                "interference"
            ]
        },
        "purpose":{
            "title": "Purpose",
            "description": "The purpose of the genetic modification.",
            "type": "string",
            "enum": [
                "repression",
                "activation",
                "overexpression",
                "tagging",
                "validation"
            ]
        },
        "zygosity":{
            "title": "Modification zygosity",
            "description": "The zygosity of the genetic modification.",
            "type": "string",
            "enum": [
                "homozygous",
                "heterozygous"
            ]
        },
        "modified_site": {
            "title": "Modified site",
            "description": "Site of the described genetic modificiation",
            "type": "object",
            "additionalProperties": false,
            "dependencies": {
                "purpose": {
                    "oneOf": [
                        {
                            "modified_site": {
                                "required": ["location_by_target_id"]
                            }
                        },
                        {
                            "modified_site": {
                                "required": ["location_by_coordinates"]
                            }
                        },
                        {
                            "not": {
                                "modified_site": {
                                    "required": ["location_by_target_id", "location_by_coordinates"]
                                }
                            }
                        }
                    ]
                }
            },
            "properties": {
                "location_by_target_id": {
                    "title": "Location by target ID",
                    "description": "The modified location, specified by name (ENCODE target ID) of the gene whose expression or product is modified by the genetic modification.",
                    "comment": "See target.json for available identifiers.",
                    "type": "string",
                    "linkTo": "Target"
                },
                "location_by_coordinates": {
                    "title": "Location by coordinates",
                    "description": "The modified location, specified by its genomic coordinates.",
                    "type": "object",
                    "additionalProperties": false,
                    "required":["assembly", "chromosome", "start", "end"],
                    "properties": {
                        "assembly": {
                            "title": "Mapping assembly",
                            "description": "The genome assembly to which modification coordinates relate. e.g. GRCh38.",
                            "type": "string",
                            "enum": [
                                "mm9",
                                "mm10",
                                "mm10-minimal",
                                "hg19",
                                "GRCh38",
                                "GRCh38-minimal",
                                "ce10",
                                "ce11",
                                "dm3",
                                "dm6",
                                "J02459.1"
                                ]
                        },
                        "chromosome": {
                            "title": "Chromosome",
                            "description": "The number (or letter) designation for the target chromosome. e.g. 1, 2L, or X",
                            "type": "string"
                        },
                        "start": {
                            "title": "Start",
                            "description": "The starting coordinate.",
                            "type": "integer"
                        },
                        "end": {
                            "title": "End",
                            "description": "The ending coordinate (possibly equal to the starting coordinate for one base.)",
                            "type": "integer"
                        }
                    }
                }
            }
        },
        "introduced_content": {
            "title": "Introduced content",
            "description": "If modification_type is insertion or replacement, the new content introduced by the modification.",
            "type": "object",
            "additionalProperties": false,
            "dependencies": {
                "modification_type": {
                    "oneOf": [
                        {
                            "required": ["epitope_tags"],
                            "modification_type": {
                                "properties": {
                                    "enum": ["insertion", "replacement"]
                                }
                            }
                        },
                        {
                            "required": ["introduced_sequence"],
                            "modification_type": {
                                "properties": {
                                    "enum": ["insertion", "replacement"]
                                }
                            }
                        },
                        {
                            "not": {
                                "allOf": [
                                    {
                                        "modification_type": {
                                            "properties": {
                                                "enum": ["insertion", "replacement"]
                                            }
                                        }
                                    },
                                    {
                                        "required": ["epitope_tags"],
                                        "modification_type": {
                                            "properties": {
                                                "enum": ["deletion", "mutagenesis", "interference"]
                                            }
                                        }
                                    },
                                    {
                                        "required": ["introduced_sequence"],
                                        "modification_type": {
                                            "properties": {
                                                "enum": ["deletion", "mutagenesis", "interference"]
                                            }
                                        }
                                    },
                                    {
                                        "required": ["epitope_tags", "introduced_sequence"],
                                        "modification_type": {
                                            "properties": {
                                                "enum": ["deletion", "mutagenesis", "interference", "insertion", "replacement"]
                                            }
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            },
            "properties": {
                "epitope_tags": {
                    "title": "Protein epitope tags",
                    "description": "Eptiope tags introduced in the modification.",
                    "type": "array",
                    "items": {
                        "title": "Protein epitope tag",
                        "description": "Epitope tag introduced in the modification.",
                        "comment": "Submit tag name and tag location. If the fusion protein is designed to be expressed with a non-native promoter, please indicate the promoter used.",
                        "type": "object",
                        "additionalProperties": false,
                        "required": ["name", "location"],
                        "properties": {
                            "name": {
                                "type": "string",
                                "enum": [
                                    "eGFP",
                                    "V5",
                                    "HA",
                                    "ER",
                                    "3xFLAG",
                                    "DsRed",
                                    "TRE",
                                    "T2A",
                                    "YFP",
                                    "FLAG",
                                    "mCherry"
                                ]
                            },
                            "location": {
                                "type": "string",
                                "enum": [
                                    "N-terminal",
                                    "C-terminal",
                                    "internal",
                                    "other",
                                    "unknown"
                                ]
                            },
                            "promoter_used": {
                                "title": "Promoter used in construct",
                                "description": "The name of the gene that the promoter regulates natively.",
                                "comment": "See target.json for available identifiers.",
                                "type": "string",
                                "linkTo": "Target"
                            }
                        }
                    }
                },
                "introduced_sequence": {
                    "title": "Introduced sequence",
                    "description": "New sequence introduced into the genome by the modification.",
                    "type": "string",
                    "pattern": "^[ACTG]+$"	
                }
            }
        },
        "modification_techniques_used": {
            "title": "Modification techniques used",
            "description": "Genetic modification techniques and reagents used to perform the modification.",
            "type": "array",
            "default": [],
            "permission": "import_items",
            "uniqueItems": true,
            "items":{
                "title": "Modification technique used",
                "description": "Technique/reagents used to produce the described genetic modification.",
                "additionalProperties": false,
                "type": "object",
                "dependencies": {
                    "modification_techniques_used": {
                        "comment": "Please fill out either the reagent information if deposited into a repository or details of the technique (or both, if you like).",
                        "oneOf": [
                            {
                                "required": ["reagent_details"],
                                "properties": {
                                    "technique_name": {
                                        "enum": ["CRISPR", "mutagen", "RNAi", "stable transfection", "TALE", "transient transfection", "transduction"]
                                    }
                                }
                            },
                            {
                                "required": ["technique_details"],
                                "properties": {
                                    "technique_name": {
                                        "enum": ["CRISPR", "mutagen", "RNAi", "stable transfection", "TALE", "transient transfection", "transduction"]
                                    }
                                }
                            },
                            {
                                "required": ["technique_details", "reagent_details"],
                                "properties": {
                                    "technique_name": {
                                        "enum": ["CRISPR", "mutagen", "RNAi", "stable transfection", "TALE", "transient transfection", "transduction"]
                                    }
                                }
                            },
                            {
                                "not": {
                                    "properties": {
                                        "technique_name": {
                                            "enum": ["CRISPR", "mutagen", "RNAi", "stable transfection", "TALE", "transient transfection", "transduction"]
                                        }
                                    }
                                }
                            }
                        ]
                    }       
                },
                "properties": {
                    "technique_name": {
                        "title": "Technique name",
                        "description": "Technique used to produce the described genetic modification.",
                        "type": "string",
                        "enum":[
                            "CRISPR",
                            "mutagen",
                            "RNAi",
                            "stable transfection",
                            "TALE",
                            "transient transfection",
                            "transduction"
                        ]
                    },
                    "reagent_details": {
                        "title": "Reagent details",
                        "description": "Details of the reagents used to create the modification.",
                        "comment": "If reagents used to create the modification are deposited in a public repository and annotated with metadata, please provide those details.",
                        "type": "object",
                        "additionalProperties": false,
                        "dependencies": {
                            "reagent_identifiers": ["reagent_repository"],
                            "reagent_repository": ["reagent_identifiers"]
                        },
                        "properties": {
                            "reagent_repository": {
                                "title": "Reagent repository",
                                "description": "Repository where reagents used to produce the described genetic modification can be obtained, if applicable.",
                                "comment": "See source.json for identifiers (e.g. addgene, bacpac, rnai-consortium)",
                                "type": "string",
                                "linkTo": "Source"
                            },
                            "reagent_identifiers": {
                                "title": "Reagent identifier",
                                "description": "Repository identifier of the reagent used to produce the describe genetic modification, if applicable.",
                                "type": "array",
                                "items":{
                                    "type": "string",
                                    "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$|^$"
                                }
                            }
                        }
                    },
                    "technique_details": {
                        "title": "Technique details",
                        "description": "Details of the relevant sequences or treatment related to the technique described.",
                        "comment": "Please fill this out if reagents are not depoited into a public repository with accompanying metadata",
                        "type": "object",
                        "additionalProperties": false,
                        "dependencies": {
                            "technique_details": {
                                "comment": "Each technique choice must be accompanied by the property detail as stipulated. (e.g. gRNA sequences must accompany CRISPR).",
                                "oneOf": [
                                    {
                                        "required": ["guide_rna_sequences"],
                                        "properties": {
                                            "technique_name": {
                                                "enum": ["CRISPR"]
                                            }
                                        }
                                    },
                                    {
                                        "required": ["rnai_sequences"],
                                        "properties":{
                                            "technique_name": {
                                                "enum": ["RNAi"]
                                            }
                                        }
                                    },
                                    {
                                        "required": ["RVD_sequence", "target_sequence"],
                                        "properties":{
                                            "technique_name": {
                                                "enum": ["TALE"]
                                            }
                                        }
                                    },
                                    {
                                        "required": ["treatments"],
                                        "properties": {
                                            "technique_name": {
                                                "enum": ["mutagen"]
                                            }
                                        }
                                    },
                                    {
                                        "required": ["documents"],
                                        "properties": {
                                            "technique_name": {
                                                "enum": [
                                                    "stable transfection",
                                                    "transient transfection",
                                                    "transduction"
                                                ]
                                            }
                                        }
                                    },
                                    {
                                        "not": {
                                            "properties": {
                                                "technique_name": {
                                                    "enum": [
                                                        "CRISPR",
                                                        "mutagen",
                                                        "RNAi",
                                                        "stable transfection",
                                                        "TALE",
                                                        "transient transfection",
                                                        "transduction"
                                                    ]
                                                }
                                            }
                                        }
                                    }
                                ]
                            }
                        },
                        "properties": {
                            "rnai_sequences": {
                                "title": "RNAi sequences",
                                "description": "Sequences of the inhibitory RNA (RNAi).",
                                "type": "array",
                                "uniqueItems": true,
                                "items": {
                                    "title": "RNAi sequence",
                                    "description": "Sequences of the inhibitory RNA.",
                                    "type": "string",
                                    "pattern": "^[ACUNTG-]+$"
                                }
                            },
                            "target_sequence": {
                                "title": "Target sequence",
                                "description": "Genomic sequence targeted by the inhibitory RNA or TALE.",
                                "type": "string",
                                "pattern": "^[ACTG]+|non-mammalian target$"
                            },
                            "guide_rna_sequences": {
                                "title": "Guide RNA sequences",
                                "description": "gRNA sequences used in CRISPR genetic modification",
                                "type": "array",
                                "uniqueItems": true,
                                "items": {
                                    "title": "gRNA sequence",
                                    "description": "CRISPR guide RNA sequence used in the experiment.",
                                    "type": "string",
                                    "pattern": "^[ACUNTG]+$"
                                }
                            },
                            "RVD_sequence": {
                                "title": "RVD sequence",
                                "description": "The repeat variable diresidue sequences of the TAL effector (TALE). E.g. NI,NG,NI,HD,NG,NN,NG,NG,NN,HD,NI,NI,NI,NI,NM,HD,HD,NG",
                                "type": "string",
                                "pattern": "^([ARNDCQEGHILKMFPSTWYV]{2})($|(,\\1))*"
                            },
                            "treatments": {
                                "title": "Treatments",
                                "description": "A list of relevant treatments applied to result in the modification.",
                                "type": "array",
                                "uniqueItems": true,
                                "items": {
                                    "title": "Treatment",
                                    "description": "Treatment applied to result in the modification.",
                                    "type": "string",
                                    "comment": "See treatment.json for available identifiers.",
                                    "linkTo": "Treatment"
                                }
                            },
                            "documents": {
                                "title": "Documents",
                                "description": "Supporting documents describing how the genetic modification(s) was/were produced.",
                                "comment": "If reagents were not deposited into a repository with relevant details, then please describe the methods in attached documents.",
                                "type": "array",
                                "uniqueItems": true,
                                "items": {
                                    "title": "Document",
                                    "description": "Supporting document describing how the genetic modification(s) was/were produced.",
                                    "type": "string",
                                    "comment": "See document.json for available identifiers.",
                                    "linkTo": "Document"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "columns": {
        "aliases": {
            "title": "Lab aliases"
        },
        "modification_type": {
            "title": "Modification type"
        },
        "status": {
            "title": "Genetic modification status"
        }
    },
    "facets": {
        "modification_type": {
            "title": "Modification type"
        },
        "target.label": {
            "title": "Target"
        },
        "status": {
            "title": "Genetic modification status"
        }
    },
    "changelog": "/profiles/changelogs/genetic_modification.md"
}
