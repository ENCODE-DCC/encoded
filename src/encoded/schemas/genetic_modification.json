{
    "title": "Genetic Modification",
    "description": "Schema for submitting information on genetic modification.",
    "id": "/profiles/genetic_modification.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "anyOf": [
        {
            "required": [
                "lab",
                "award",
                "category",
                "purpose",
                "method"
            ]
        },
        {
            "required": [
                "lab",
                "award",
                "category",
                "purpose",
                "nucleic_acid_delivery_method"
            ]
        }
    ],
    "identifyingProperties": ["uuid", "accession", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/accessioned_status" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "mixins.json#/submitter_comment" }
    ],
    "dependencies": {
        "purpose": {
            "comment": "Modifications for tagging purposes need to include the introduced_tag property in combination with a target. Modifications for other purposes also need either the site and/or target specified.",
            "oneOf": [
                {
                    "anyOf": [
                        {
                            "required": ["modified_site_by_target_id", "introduced_tags"]
                        },
                        {
                            "required": ["modified_site_by_gene_id", "introduced_tags"]
                        },
                        {
                            "required": ["modified_site_nonspecific", "introduced_tags"]
                        }
                    ],
                    "properties": {
                        "purpose": {
                                "enum": ["tagging"]
                        },
                        "category": {
                                "enum": ["insertion"]
                        }
                    }
                },
                {
                    "anyOf": [
                        {
                            "oneOf": [
                                {
                                    "required": ["modified_site_by_target_id"]
                                },
                                {
                                    "required": ["modified_site_by_gene_id"]
                                },
                                {
                                    "required": ["modified_site_by_coordinates"]
                                },
                                {
                                    "required": ["modified_site_by_sequence"]
                                },
                                {
                                    "required": ["modified_site_nonspecific"]
                                },
                                {
                                    "properties": {
                                        "category": {
                                            "enum": ["episome"]
                                        }
                                    }
                                }
                            ],
                            "properties": {
                                "purpose": {
                                        "enum": ["repression", "characterization"]
                                }
                            }
                        },
                        {
                            "oneOf": [
                                {
                                    "required": ["modified_site_by_target_id"]
                                },
                                {
                                    "required": ["modified_site_by_gene_id"]
                                },
                                {
                                    "required": ["modified_site_by_coordinates"]
                                },
                                {
                                    "required": ["modified_site_by_sequence"]
                                },
                                {
                                    "required": ["modified_site_nonspecific"]
                                }
                            ],
                            "properties": {
                                "purpose": {
                                    "enum": ["characterization"]
                                },
                                "category": {
                                    "enum": ["mutagenesis"]
                                },
                                "method": {
                                    "enum": ["CRISPR"]
                                }
                            }
                        }
                    ]
                },
                {
                    "properties": {
                        "purpose": {
                            "enum": ["non-specific target control"]
                        }
                    }
                },
                {
                    "properties": {
                        "purpose": {
                            "enum": ["characterization"]
                        },
                        "category": {
                            "enum": ["interference", "activation", "disruption", "inhibition", "knockout", "deletion"]
                        },
                        "method": {
                            "enum": ["CRISPR"]
                        }
                    }
                },
                {
                    "properties": {
                        "purpose": {
                            "enum": ["expression"]
                        }
                    },
                    "oneOf": [
                        {
                            "required": ["introduced_sequence"]
                        },
                        {
                            "required": ["introduced_gene"]
                        }
                    ]
                },
                {
                    "required": ["nucleic_acid_delivery_method"],
                    "properties": {
                        "purpose": {
                            "enum": ["expression"]
                        },
                        "category": {
                            "enum": ["insertion"]
                        },
                        "introduced_elements": {
                            "enum": ["gRNAs and CRISPR machinery"]
                        }
                    },
                    "not": {
                        "required": ["modified_site_nonspecific"]
                    }
                },
                {
                    "required": ["nucleic_acid_delivery_method"],
                    "properties": {
                        "purpose": {
                            "enum": ["characterization"]
                        }
                    },
                    "oneOf": [
                        {
                            "required": ["introduced_sequence"]
                        },
                        {
                            "required": ["introduced_gene"]
                        }
                    ]
                },
                {
                    "properties": {
                        "purpose": {
                            "enum": ["in vivo enhancer characterization"]
                        },
                        "category": {
                            "enum": ["transgene insertion"]
                        }
                    },
                    "required": [
                        "introduced_sequence",
                        "nucleic_acid_delivery_method"
                    ],
                    "oneOf": [
                        {
                            "required": ["modified_site_by_target_id"]
                        },
                        {
                            "required": ["modified_site_by_gene_id"]
                        },
                        {
                            "required": ["modified_site_by_coordinates"]
                        },
                        {
                            "required": ["modified_site_by_sequence"]
                        },
                        {
                            "required": ["modified_site_nonspecific"]
                        }
                    ]
                },
                {
                    "properties": {
                        "category": {
                            "enum": ["binding"]
                        }
                    }
                }
            ]
        },
        "category": {
            "comment": "Insertions need to specify introduced_tags, introduced_sequence, introduced_gene, or introduced_elements at either modified_site_nonspecific or specifying gRNAs and CRISPR machinery. Replacements need to specify introduced_sequence. Deletions need either target id, coordinates or deleted sequence specified. Interference needs target id specified (unless the purpose is characterization and method is CRISPR) and mutagenesis needs treatment specified. Episome needs to specify introduced_elements.",
            "oneOf": [
                {
                    "oneOf": [
                        {
                            "anyOf": [
                                {
                                    "required": ["introduced_tags"],
                                    "properties": {
                                        "category": {
                                            "enum": ["insertion"]
                                        },
                                        "purpose": {
                                            "enum": ["tagging"]
                                        }
                                    }
                                },
                                {
                                    "required": ["introduced_sequence"],
                                    "properties": {
                                        "category": {
                                            "enum": ["insertion"]
                                        }
                                    }
                                },
                                {
                                    "required": ["introduced_gene"],
                                    "properties": {
                                        "category": {
                                            "enum": ["insertion"]
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "required": ["modified_site_nonspecific", "introduced_elements"],
                            "properties": {
                                "category": {
                                    "enum": ["insertion"]
                                }
                            }
                        },
                        {    
                            "not": {
                                "required": ["modified_site_nonspecific"]
                            },
                            "required": ["introduced_elements", "nucleic_acid_delivery_method"],
                            "properties": {
                                "category": {
                                    "enum": ["insertion"]
                                },
                                "purpose": {
                                    "enum": ["expression"]
                                },
                                "introduced_elements": {
                                    "enum": ["gRNAs and CRISPR machinery"]
                                }
                            }
                        }

                    ]
                },
                {
                    "required": ["introduced_sequence"],
                    "properties": {
                        "category": {
                            "enum": ["replacement"]
                        }
                    }
                },
                {
                    "oneOf": [
                        {
                            "required": ["modified_site_by_coordinates"]
                        },
                        {
                            "required": ["modified_site_by_target_id"]
                        },
                        {
                            "required": ["modified_site_by_sequence"]
                        },
                        {
                            "required": ["modified_site_by_gene_id"]
                        },
                        {
                            "required": ["modified_site_nonspecific"]
                        }
                    ],
                    "properties": {
                        "category": {
                            "enum": ["deletion"]
                        }
                    },
                    "not": {
                        "properties": {
                            "method": {
                                "enum": ["CRISPR"]
                            },
                            "purpose": {
                                "enum": ["characterization"]
                            }
                        }
                    }
                },
                {
                    "required": ["modified_site_by_target_id"],
                    "properties": {
                        "category": {
                            "enum": ["interference"]
                        },
                        "purpose": {
                            "enum": ["repression"]
                        }
                    }
                },
                {
                    "properties": {
                        "category": {
                            "enum": ["deletion", "interference"]
                        },
                        "method": {
                            "enum": ["CRISPR", "RNAi"]
                        },
                        "purpose": {
                            "enum": ["non-specific target control"]
                        }
                    }
                },
                {
                    "properties": {
                        "category": {
                            "enum": ["interference", "activation", "disruption", "inhibition", "knockout", "deletion"]
                        },
                        "method": {
                            "enum": ["CRISPR"]
                        },
                        "purpose": {
                            "enum": ["characterization"]
                        }
                    }
                },
                {
                    "required": ["introduced_elements"],
                    "properties": {
                        "category": {
                            "enum": ["episome"]
                        }
                    }
                },
                {
                    "oneOf": [
                        {
                            "required": ["treatments"],
                            "properties": {
                                "category": {
                                    "enum": ["mutagenesis"]
                                }
                            }
                        },
                        {
                            "oneOf": [
                                {
                                    "required": ["modified_site_by_target_id"]
                                },
                                {
                                    "required": ["modified_site_by_gene_id"]
                                },
                                {
                                    "required": ["modified_site_by_coordinates"]
                                },
                                {
                                    "required": ["modified_site_by_sequence"]
                                },
                                {
                                    "required": ["modified_site_nonspecific"]
                                }
                            ],
                            "properties": {
                                "category": {
                                    "enum": ["mutagenesis"]
                                },
                                "purpose": {
                                    "enum": ["characterization"]
                                },
                                "method": {
                                    "enum": ["CRISPR"]
                                }
                            }
                        }
                    ]
                },
                {
                    "properties": {
                        "category": {
                            "enum": ["knockout"]
                        },
                        "method": {
                            "enum": ["site-specific recombination", "homologous recombination"]
                        },
                        "purpose": {
                            "enum": ["repression"]
                        }
                    },
                    "not": {
                        "required": ["modified_site_nonspecific"]
                    }
                },
                {
                    "oneOf": [
                        {
                            "required": ["modified_site_by_coordinates"]
                        },
                        {
                            "required": ["modified_site_by_target_id"]
                        },
                        {
                            "required": ["modified_site_by_sequence"]
                        },
                        {
                            "required": ["modified_site_by_gene_id"]
                        },
                        {
                            "required": ["modified_site_nonspecific"]
                        }
                    ],
                    "required": ["introduced_sequence", "nucleic_acid_delivery_method"],
                    "properties": {
                        "category": {
                            "enum": ["transgene insertion"]
                        },
                        "purpose": {
                            "enum": ["in vivo enhancer characterization"]
                        }
                    }
                },
                {
                    "properties": {
                        "category": {
                            "enum": ["binding"]
                        }
                    }
                }
            ]
        },
        "introduced_tags": {
            "comment": "Specified introduced protein tags should include at least one entry and apply only to tagging modifications.",
            "properties":{
                "introduced_tags": {
                    "minItems": 1
                },
                "category": {
                    "enum": ["insertion"]
                },
                "purpose": {
                    "enum": ["tagging"]
                }
            }
        },
        "introduced_elements": {
            "comment": "introduced_elements are currently restricted to sets of indeterminate elements to be characterized either on episome or inserted randomly; or the general introduction of guide RNAs and CRISPR machinery prior to a CRISPR screen.",
            "allOf": [
                {
                    "oneOf": [
                        {
                            "properties": {
                                "category": {
                                    "enum": ["episome"]
                                },
                                "purpose": {
                                    "enum": ["characterization"]
                                }
                            },
                            "not": {
                                "properties": {
                                    "introduced_elements": {
                                        "enum": ["gRNAs and CRISPR machinery"]
                                    }
                                }
                            }
                        },
                        {
                            "required": ["modified_site_nonspecific"],
                            "properties": {
                                "category": {
                                    "enum": ["insertion"]
                                },
                                "purpose": {
                                    "enum": ["characterization"]
                                }
                            },
                            "not": {
                                "properties": {
                                    "introduced_elements": {
                                        "enum": ["gRNAs and CRISPR machinery"]
                                    }
                                }
                            }
                        },
                        {
                            "required": ["nucleic_acid_delivery_method"],
                            "properties": {
                                "category": {
                                    "enum": ["insertion"]
                                },
                                "purpose": {
                                    "enum": ["expression"]
                                },
                                "introduced_elements": {
                                    "enum": ["gRNAs and CRISPR machinery"]
                                },
                                "not":{
                                    "required": ["modified_site_nonspecific"]
                                }
                            }
                        }
                    ]
                },
                {
                    "oneOf": [
                        {
                            "not": {
                                "properties": {
                                    "introduced_elements": {
                                        "enum": ["sheared genomic DNA", "genomic DNA regions"]
                                    }
                                }
                            }
                        },
                        {
                            "oneOf": [
                                {
                                    "required": ["introduced_elements_donor"]
                                },
                                {
                                    "required": ["introduced_elements_organism"]
                                }
                            ],
                            "properties": {
                                "introduced_elements": {
                                    "enum": ["sheared genomic DNA", "genomic DNA regions"]
                                }
                            }
                        }
                    ]
                }
            ]
        },
        "introduced_elements_donor": {
            "properties": {
                "introduced_elements": {
                    "enum": ["sheared genomic DNA", "genomic DNA regions"]
                },
                "purpose": {
                    "enum": ["characterization"]
                }
            }
        },
        "introduced_elements_organism": {
            "properties": {
                "introduced_elements": {
                    "enum": ["sheared genomic DNA", "genomic DNA regions"]
                },
                "purpose": {
                    "enum": ["characterization"]
                }             
            }
        },
        "guide_rna_sequences": {
            "comment": "Guide RNA sequences apply only to modification_technique = CRISPR.",
            "properties": {
                "guide_rna_sequences": {
                    "minItems": 1
                },
                "method": {
                    "enum": ["CRISPR"]
                }
            }
        },
        "rnai_sequences": {
            "comment": "RNAi sequences apply only to modification_technique = RNAi, for interference and the purposes of repression only.",
            "properties": {
                "rnais_sequences": {
                    "minItems": 1
                },
                "method": {
                    "enum": ["RNAi"]
                },
                "category": {
                    "enum": ["interference"]
                },
                "purpose": {
                    "enum": ["repression", "non-specific target control"]
                }
            }
        },
        "RVD_sequence_pairs": {
            "comment": "RVD sequence pairs apply only to modification_technique = TALEN and should include at least one entry but no more than two.",
            "properties": {
                "RVD_sequence_pairs": {
                    "minItems": 1,
                    "maxItems": 2
                },
                "method": {
                    "enum": ["TALEN"]
                }
            }
        },
        "introduced_sequence": {
            "comment": "Introduced sequences apply only to category = insertion, replacement, or transgene insertion.",
            "oneOf": [
                {
                    "properties": {
                        "category": {
                            "enum": ["insertion", "replacement"]
                        }
                    }
                },
                {
                    "required": ["nucleic_acid_delivery_method"],
                    "properties": {
                        "category": {
                            "enum": ["transgene insertion"]
                        },
                        "purpose": {
                            "enum": ["in vivo enhancer characterization"]
                        }
                    }
                }
            ]
        },
        "reagents": {
            "comment": "Specified reagent availablity details should include at least one entry.",
            "properties": {
                "reagents": {
                     "minItems": 1
                }
            }
        },
        "treatments": {
            "comment": "Only treatments for mutagenesis and site-specific recombination should be specified.",
            "properties": {
                "treatments": {
                    "minItems": 1
                },
                "method": {
                    "enum": ["mutagen treatment", "site-specific recombination"]
                }
            }
        },
        "method": {
            "comment": "CRISPR technique requires guide_rna_sequences and/or reagent_availability specified. RNAi requires rnai_sequences and/or reagent availability specified. Specification of reagents for RNAi is not required if the RNAi was a result of a cross between two modified fly strains. TALEs require zygosity, RVD_sequence_pairs and/or reagent_availability specified. Mutagen treatment needs treatment to be specified. All other techniques need reagent_availability and/or supporting documents to be specified.",
            "oneOf": [
                {
                    "properties": {
                        "method": {
                            "enum": [
                                "CRISPR",
                                "RNAi",
                                "homologous recombination"
                            ]
                        }
                    }
                },
                {
                    "required": ["zygosity"],
                    "properties":{
                        "method": {
                            "enum": ["TALEN"]
                        }
                    }
                },
                {
                    "required": ["treatments"],
                    "properties": {
                        "method": {
                            "enum": [
                                "mutagen treatment",
                                "site-specific recombination"
                            ]
                        }
                    }
                }
            ]
        },
        "introduced_gene": {
            "comment": "The property introduced_gene is not allowed for modifications of method RNAi or mutagen_treatment.",
            "properties": {
                "method": {
                    "not": {
                        "enum": [
                            "RNAi",
                            "mutagen treatment"
                        ]
                    }
                }
            }
        }
    },
    "properties": {
        "schema_version": {
            "default": "10"
        },
        "accession": {
            "accessionType": "GM"
        },
        "alternate_accessions": {
            "title": "Alternate accessions",
            "description": "Accessions previously assigned to objects that have been merged with this object.",
            "comment": "Do not submit. Only admins are allowed to set or update this value.",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "permission": "import_items",
            "items": {
                "title": "Alternate Accession",
                "description": "An accession previously assigned to an object that has been merged with this object.",
                "comment": "Only accessions of objects that have status equal replaced will work here.",
                "type": "string",
                "format": "accession",
                "pattern": "^(ENCGM\\d{3}[A-Z]{3})$|^(TSTGM\\d{6})$"
            }
        },
        "description": {
            "title": "Description",
            "description": "A plain text description of the genetic modification.",
            "type": "string",
            "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$",
            "formInput": "textarea"
        },
        "introduced_elements_donor": {
            "title": "Introduced elements donor",
            "description": "The donor or strain the sheared genomic DNA or genomic DNA regions originated from.",
            "type": "string",
            "linkTo": "Donor"
        },
        "introduced_elements_organism": {
            "title": "Introduced elements organism",
            "description": "The organism the sheared genomic DNA or genomic DNA regions originated from.",
            "type": "string",
            "linkTo": "Organism"
        },
        "category": {
            "title": "Category",
            "description": "The category/type of the genetic modification performed.",
            "type": "string",
            "enum": [
                "deletion",
                "interference",
                "insertion",
                "mutagenesis",
                "replacement",
                "episome",
                "activation",
                "knockout",
                "disruption",
                "inhibition",
                "binding",
                "transgene insertion"
            ]
        },
        "purpose":{
            "title": "Purpose",
            "description": "The purpose of the genetic modification.",
            "type": "string",
            "enum": [
                "non-specific target control",
                "repression",
                "tagging",
                "characterization",
                "expression",
                "in vivo enhancer characterization"
            ]
        },
        "zygosity":{
            "title": "Modification zygosity",
            "description": "The zygosity of the genetic modification.",
            "type": "string",
            "enum": [
                "heterozygous",
                "homozygous"
            ]
        },
        "modified_site_by_target_id": {
            "title": "Modification site by target ID",
            "description": "The name (ENCODE target ID) of the gene whose expression or product is modified by the genetic modification.",
            "comment": "See target.json for available identifiers.",
            "type": "string",
            "linkTo": "Target"
        },
        "modified_site_by_gene_id": {
            "title": "Modification site by gene ID",
            "description": "The name of the gene whose expression or product is modified by the genetic modification.",
            "comment": "See gene.json for available identifiers.",
            "type": "string",
            "linkTo": "Gene"
        },
        "modified_site_by_coordinates": {
            "title": "Modification site by coordinates",
            "description": "Genomic coordinates specifying the location of the modification.",
            "type": "object",
            "additionalProperties": false,
            "required":["assembly", "chromosome", "start", "end"],
            "properties": {
                "assembly": {
                    "title": "Mapping assembly",
                    "description": "The genome assembly to which modification coordinates relate. e.g. GRCh38.",
                    "type": "string",
                    "enum": [
                        "ce10",
                        "ce11",
                        "dm3",
                        "dm6",
                        "GRCh38-minimal",
                        "GRCh38",
                        "hg19",
                        "J02459.1",
                        "mm10-minimal",
                        "mm10",
                        "mm9"
                        ]
                },
                "chromosome": {
                    "title": "Chromosome",
                    "description": "The number (or letter) designation for the target chromosome. e.g. 1, 2L, or X",
                    "type": "string"
                },
                "start": {
                    "title": "Start",
                    "description": "The starting coordinate.",
                    "type": "integer",
                    "minimum": 0
                },
                "end": {
                    "title": "End",
                    "description": "The ending coordinate.",
                    "type": "integer",
                    "minimum": 0
                }
            }
        },
        "modified_site_by_sequence" : {
            "title": "Modification site by sequence",
            "description": "Genomic sequence specifying location of the modification.",
            "type": "string",
            "pattern": "^[ACTG]+$"
        },
        "modified_site_nonspecific": {
            "title": "Nonspecific modification site",
            "description": "Site of modification that is not known (i.e. is random, not targeted).",
            "type": "string",
            "comment": "May be expanded to include extrachromosomal arrays if need arises.",
            "enum": [
                "random"
            ]
        },
        "introduced_tags": {
            "title": "Introduced protein tags",
            "description": "Protein tags introduced in the modification.",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "Introduced tag",
                "description": "Protein tag introduced in the modification.",
                "comment": "Submit tag name and tag location. If the fusion protein is designed to be expressed with a non-native promoter, please indicate the promoter used by its ENCODE target id.",
                "type": "object",
                "additionalProperties": false,
                "required": ["name", "location"],
                "properties": {
                    "name": {
                        "type": "string",
                        "enum": [
                            "3xFLAG",
                            "6XHis",
                            "DsRed",
                            "eGFP",
                            "ER",
                            "FLAG",
                            "GFP",
                            "HA",
                            "mCherry",
                            "T2A",
                            "TagRFP",
                            "TRE",
                            "V5",
                            "YFP",
                            "mAID-mClover",
                            "mAID-mClover-NeoR",
                            "mAID-mClover-Hygro"
                        ]
                    },
                    "location": {
                        "type": "string",
                        "default": "",
                        "enum": [
                            "C-terminal",
                            "internal",
                            "N-terminal",
                            "other",
                            "unknown"
                        ]
                    },
                    "promoter_used": {
                        "title": "Promoter used in construct",
                        "description": "The name (ENCODE target id) of the gene that the promoter regulates natively.",
                        "comment": "See target.json for available identifiers.",
                        "type": "string",
                        "linkTo": "Target"
                    }
                }
            }
        },
        "introduced_sequence": {
            "title": "Introduced sequence",
            "description": "If category = insertion or replacement, the newly introduced sequence via the modification.",
        	"type": "string",
            "pattern": "^[ACTG]+$"
		},
        "introduced_gene": {
            "title": "Introduced gene",
            "description": "The identifier of the gene on the ENCODE portal introduced via the modification.",
