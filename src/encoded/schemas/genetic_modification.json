{
    "title": "Genetic Modification",
    "description": "Schema for submitting an information on genetic modification.",
    "id": "/profiles/genetic_modification.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["lab", "award", "modification_type", "purpose", "modification_technique"],  
    "identifyingProperties": ["uuid","aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/accessioned_status" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/notes" }
    ],    
    "dependencies": {
        "purpose": {
            "comment": "Modifications for tagging purposes need to include the epitope_tag property in combination with a target. Modifications for other purposes also need either the site and/or target specified.",
            "oneOf": [
                {
                    "required": ["modified_site_by_target_id", "epitope_tags"],
                    "properties": {
                    "purpose": {
                            "enum": ["tagging"]
                        }
                    },
                    "epitope_tags": {
                        "minItems": 1
                    }
                },
                {
                    "required": ["modified_site_by_target_id"],
                    "properties": {
                    "purpose": {
                            "enum": ["repression", "activation", "overexpression", "validation"]
                        }
                    }
                },
                {
                    "required": ["modified_site_by_coordinates"],
                    "properties": {
                    "purpose": {
                            "enum": ["repression", "activation", "overexpression", "validation"]
                        }
                    }
                },
                {
                    "required": ["modified_site_by_sequence"],
                    "properties": {
                    "purpose": {
                            "enum": ["repression", "activation", "overexpression", "validation"]
                        }
                    }
                },
                {
                    "properties": {
                        "purpose": {
                            "enum": ["analysis"]
                        }
                    }
                }
            ]
        },
        "modification_type": {
            "oneOf": [
                {
                    "required": ["epitope_tags"],
                    "properties": {
                        "modification_type": {
                            "enum": ["insertion"]
                        }
                    }
                },
                {
                    "required": ["introduced_sequence"],
                    "properties": {
                        "modification_type": {
                            "enum": ["insertion"]
                        }
                    }
                },
                {
                    "required": ["introduced_sequence"],
                    "properties": {
                        "modification_type": {
                            "enum": ["replacement"]
                        }
                    }
                },
                {
                	"not": {
                        "required": ["introduced_sequence", "epitope_tags"]
                    },
                    "properties": {
                        "modification_type": {
                            "enum": ["deletion", "mutagenesis", "interference"]
                        }
                    }
                }
            ]
        },
        "epitope_tags": {
            "comment": "Specified epitope tags should include at least one entry.",
            "properties":{
                "epitope_tags": {
                    "minItems": 1
                }
            }
        },
        "modification_technique": {
            "oneOf": [
                {
                    "anyOf": [
                        {
                            "required": ["guide_rna_sequences"],
                            "properties": {
                                "modification_technique": {
                                    "enum": ["CRISPR"]
                                }
                            }
                        },
                        {
                            "required": ["reagent_repository", "reagent_identifiers"],
                            "properties": {
                                "modification_technique": {
                                    "enum": ["CRISPR"]
                                }
                            }
                        }
                    ]
                },
                {
                    "anyOf": [
                        {
                            "required": ["rnai_sequences"],
                            "properties":{
                                "modification_technique": {
                                    "enum": ["RNAi"]
                                }
                            }
                        },
                        {
                            "required": ["reagent_repository", "reagent_identifiers"],
                            "properties":{
                                "modification_technique": {
                                    "enum": ["RNAi"]
                                }
                            }
                        }
                    ]
                },
                {
                    "anyOf": [
                        {
                            "required": ["zygosity", "RVD_sequence_pair1", "RVD_sequence_pair2", "targeted_sequences"],
                            "properties":{
                                "modification_technique": {
                                    "enum": ["TALE"]
                                }
                            }
                        },
                        {
                            "required": ["reagent_repository", "reagent_identifiers"],
                            "properties":{
                                "modification_technique": {
                                    "enum": ["TALE"]
                                }
                            }
                        }
                    ]   
                },
                {
                    "required": ["treatments"],
                     "properties":{
                        "modification_technique": {
                            "enum": [
                                "mutagenesis"
                            ]
                        }
                    }
                },
                {
                    "anyOf": [
                        {
                            "required": ["documents"],
                            "properties":{
                                "modification_technique": {
                                    "enum": [
                                        "stable transfection",
                                        "transient transfection",
                                        "transduction"
                                    ]
                                }
                            }
                        },
                        {
                            "required": ["reagent_repository", "reagent_identifiers"],
                            "properties":{
                                "modification_technique": {
                                    "enum": [
                                        "stable transfection",
                                        "transient transfection",
                                        "transduction"
                                    ]
                                }
                            }
                        }
                    ]
                }
            ]
        }
    },
    "properties": {
        "schema_version": {
            "default": "6"
        },
        "accession": {
            "accessionType": "GM"
        },
        "alternate_accessions": {
            "title": "Alternate accessions",
            "description": "Accessions previously assigned to objects that have been merged with this object.",
            "comment": "Do not submit. Only admins are allowed to set or update this value.",
            "type": "array",
            "default": [],
            "permission": "import_items",
            "items": {
                "title": "Alternate Accession",
                "description": "An accession previously assigned to an object that has been merged with this object.",
                "comment": "Only accessions of objects that have status equal replaced will work here.",
                "type": "string",
                "format": "accession",
                "pattern": "^(ENCGM\\d{3}[A-Z]{3})$|^(TSTGM\\d{6})$"
            }
        },
        "description": {
            "title": "Description",
            "description": "A plain text description of the genetic modification.",
            "type": "string",
            "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$"
        },
        "modification_type": {
            "title": "Modification type",
            "description": "The type of the genetic modification.",
            "type": "string",
            "enum": [
                "deletion",
                "insertion",
                "replacement",
                "mutagenesis",
                "interference"
            ]
        },
        "purpose":{
            "title": "Purpose",
            "description": "The purpose of the genetic modification.",
            "type": "string",
            "enum": [
                "repression",
                "activation",
                "overexpression",
                "tagging",
                "validation",
                "analysis"
            ]
        },
        "zygosity":{
            "title": "Modification zygosity",
            "description": "The zygosity of the genetic modification.",
            "type": "string",
            "enum": [
                "homozygous",
                "heterozygous"
            ]
        },
        "modified_site_by_target_id": {
            "title": "Modified site by target ID",
            "description": "The name (ENCODE target ID) of the gene whose expression or product is modified by the genetic modification.",
            "comment": "See target.json for available identifiers.",
            "type": "string",
            "linkTo": "Target"
        },
        "modified_site_by_coordinates": {
            "title": "Modified site by coordinates",
            "description": "Genomic coordinates of the modification.",
            "type": "object",
            "additionalProperties": false,
            "required":["assembly", "chromosome", "start", "end"],
            "properties": {
                "assembly": {
                    "title": "Mapping assembly",
                    "description": "The genome assembly to which modification coordinates relate. e.g. GRCh38.",
                    "type": "string",
                    "enum": [
                        "mm9",
                        "mm10",
                        "mm10-minimal",
                        "hg19",
                        "GRCh38",
                        "GRCh38-minimal",
                        "ce10",
                        "ce11",
                        "dm3",
                        "dm6",
                        "J02459.1"
                        ]
                },
                "chromosome": {
                    "title": "Chromosome",
                    "description": "The number (or letter) designation for the target chromosome. e.g. 1, 2L, or X",
                    "type": "string"
                },
                "start": {
                    "title": "Start",
                    "description": "The starting coordinate.",
                    "type": "integer"
                },
                "end": {
                    "title": "End",
                    "description": "The ending coordinate (possibly equal to the starting coordinate for one base.)",
                    "type": "integer"
                }
            }
        },
        "modified_site_by_sequence" : {
            "title": "Modified site by sequence",
            "description": "Genomic sequence specifying location of the modification.",
            "type": "string",
            "pattern": "^[ACTG]+$"
        },
        "epitope_tags": {
            "title": "Protein epitope tags",
            "description": "Eptiope tags introduced in the modification.",
            "type": "array",
            "items": {
                "title": "Protein epitope tag",
                "description": "Epitope tag introduced in the modification.",
                "comment": "Submit tag name and tag location. If the fusion protein is designed to be expressed with a non-native promoter, please indicate the promoter used.",
                "type": "object",
                "additionalProperties": false,
                "required": ["name", "location"],
                "properties": {
                    "name": {
                        "type": "string",
                        "enum": [
                            "eGFP",
                            "V5",
                            "HA",
                            "ER",
                            "3xFLAG",
                            "DsRed",
                            "TRE",
                            "T2A",
                            "YFP",
                            "FLAG",
                            "mCherry"
                        ]
                    },
                    "location": {
                        "type": "string",
                        "enum": [
                            "N-terminal",
                            "C-terminal",
                            "internal",
                            "other",
                            "unknown"
                        ]
                    },
                    "promoter_used": {
                        "title": "Promoter used in construct",
                        "description": "The name of the gene that the promoter regulates natively.",
                        "comment": "See target.json for available identifiers.",
                        "type": "string",
                        "linkTo": "Target"
                    }
                }
            }
        },
        "introduced_sequence": {
            "title": "Insert sequence",
            "description": "Insert sequence",
        	"type": "string",
            "pattern": "^[ACTG]+$"	
		},
        "modification_technique": {
            "title": "Modification technique",
            "description": "The modification technique used to produce the described genetic modification.",
            "type": "string",
            "enum":[
                "CRISPR",
                "TALE",
                "stable transfection",
                "transient transfection",
                "transduction",
                "RNAi",
                "mutagenesis"
            ]
        },
        "treatments": { 
            "title": "Treatments",
            "description": "Relevant mutagenesis treatments applied to result in the modification.",
            "type": "array",
            "default": [],
            "permission": "import_items",
            "uniqueItems": true,
            "items": {
                "title": "Treatment",
                "description": "Relevant mutagenesis treatment applied to result in the modification.",
                "comment": "See treatment.json for available identifiers.",
                "type":  "string",
                "linkTo": "Treatment"
            }
        },
        "rnai_sequences": {
            "title": "RNAi sequences",
            "description": "Sequences of the inhibitory RNA.",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "RNAi sequence",
                "description": "Sequences of the inhibitory RNA.",
                "type": "string",
                "pattern": "^[ACUNTG-]+$"
            }
        },
        "targeted_sequences": {
            "title": "Targeted sequences - MAYBE DELETE IF OK THAT ITS NOT STRAIGHTFORWARD TO FIGURE OUT FOR SHRNAS",
            "description": "Genomic sequences targeted by the inhibitory RNA (1) or TALEs (2).",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "Targeted sequence",
                "description": "Genomic sequence targeted by the inhibitory RNA or TALE.",
                "type": "string",
                "pattern": "^[ACTG]+|non-mammalian target$"
            }
        },
        "guide_rna_sequences": {
            "title": "Guide RNA sequences",
            "description": "gRNA sequences used in CRISPR genetic modification",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "gRNA sequence",
                "description": "guide RNA sequence used in the experiment.",
                "type": "string",
                "pattern": "^[ACUNTG]+$"
            }
        },
        "RVD_sequence_pair1": {
            "title": "RVD sequence pair 1",
            "description": "The pair of repeat variable diresidue sequences of the TAL effectors that recognize the left and right half sites at a particular location. e.g. NI,NG,NI,HD,NG,NN,NG,NG,NN,HD,NI,NI,NI,NI,NM,HD,HD,NG",
            "type": "object",
            "additionalProperties": false,
            "dependencies": {
                "zygosity": {
                    "comment": "At each cut site, two RVD sequences are needed for the TALE to recognize the half-site on each strand. If heterozygous, the the left_RVD_sequence from each pair should be specified and if homozygous, both the left_ and right_RVD_sequences from both pairs should be specified.",
                    "oneOf": [
                        {
                            "required":["left_RVD_sequence", "right_RVD_sequence"],
                            "properties": {
                                "zygosity": {
                                    "enum": ["homozygous"]
                                }
                            }
                        },
                        {
                            "required": ["left_RVD_sequence"],
                            "properties": {
                                "zygosity": {
                                    "enum": ["heterozygous"]
                                }
                            }
                        },
                        {
                            "not": {
                                "required": ["right_RVD_sequence"],
                                "properties": {
                                    "zygosity": {
                                        "enum": ["homozygous"]
                                    }
                                }
                            }
                        }
                    ]
                }
            },
            "properties": {
                "left_RVD_sequence": {
                    "title": "Left RVD sequence",
                    "description": "The repeat variable diresidue sequence of the left half-site for recognized by the TAL effector at a particular location. e.g. NI,NG,NI,HD,NG,NN,NG,NG,NN,HD,NI,NI,NI,NI,NM,HD,HD,NG",
                    "comment": "For heterozygous deletions, specify pair1 and pair2's left_RVD_sequence (oriented as + strand).",
                    "type": "string",
                    "pattern": "^([ARNDCQEGHILKMFPSTWYV]{2})($|(,\\1))*"
                },
                "right_RVD_sequence": {
                    "title": "Right RVD sequence",
                    "description": "The repeat variable diresidue sequence of the right half-site for recognized by the TAL effector at a particular location. e.g. NI,NG,NI,HD,NG,NN,NG,NG,NN,HD,NI,NI,NI,NI,NM,HD,HD,NG",
                    "type": "string",
                    "pattern": "^([ARNDCQEGHILKMFPSTWYV]{2})($|(,\\1))*"
                }
            }
        },
        "RVD_sequence_pair2": {
            "title": "RVD sequence pair 2",
            "description": "The pair of repeat variable diresidue sequences of the TAL effectors that recognize the left and right half sites at a particular location. e.g. NI,NG,NI,HD,NG,NN,NG,NG,NN,HD,NI,NI,NI,NI,NM,HD,HD,NG",
            "comment": "This property needs to be specified along with RVD_sequence_pair1 if excising a particular region via a deletion.",
            "type": "object",
            "additionalProperties": false,
            "dependencies": {
                "zygosity": {
                    "comment": "At each cut site, two RVD sequences are needed for the TALE to recognize the half-site on each strand. If heterozygous, the the left_RVD_sequence from each pair should be specified and if homozygous, both the left_ and right_RVD_sequences from both pairs should be specified.",
                    "oneOf": [
                        {
                            "required":["left_RVD_sequence", "right_RVD_sequence"],
                            "properties": {
                                "zygosity": {
                                    "enum": ["homozygous"]
                                }
                            }
                        },
                        {
                            "required": ["left_RVD_sequence"],
                            "properties": {
                                "zygosity": {
                                    "enum": ["heterozygous"]
                                }
                            }
                        },
                        {
                            "not": {
                                "required": ["right_RVD_sequence"],
                                "properties": {
                                    "zygosity": {
                                        "enum": ["homozygous"]
                                    }
                                }
                            }
                        }
                    ]
                }
            },
            "properties": {
                "left_RVD_sequence": {
                    "title": "Left RVD sequence",
                    "description": "The repeat variable diresidue sequence of the left half-site for recognized by the TAL effector at a particular location. e.g. NI,NG,NI,HD,NG,NN,NG,NG,NN,HD,NI,NI,NI,NI,NM,HD,HD,NG",
                    "comment": "For heterozygous deletions, specify pair1 and pair2's left_RVD_sequence (oriented as + strand).",
                    "type": "string",
                    "pattern": "^([ARNDCQEGHILKMFPSTWYV]{2})($|(,\\1))*"
                },
                "right_RVD_sequence": {
                    "title": "Right RVD sequence",
                    "description": "The repeat variable diresidue sequence of the right half-site for recognized by the TAL effector at a particular location. e.g. NI,NG,NI,HD,NG,NN,NG,NG,NN,HD,NI,NI,NI,NI,NM,HD,HD,NG",
                    "type": "string",
                    "pattern": "^([ARNDCQEGHILKMFPSTWYV]{2})($|(,\\1))*"
                }
            }
        },
        "reagent_repository": {
            "title": "Reagent repository",
            "description": "Repository where reagent used to produce the described genetic modification can be obtained, if applicable.",
            "comment": "See source.json for identifiers (e.g. addgene, bacpac, rnai-consortium",
            "type": "string",
            "linkTo": "Source"
        },
        "reagent_identifiers": {
            "title": "Reagent identifiers",
            "description": "Repository identifiers of the reagent used to produce the describe genetic modification, if applicable.",
            "comment": "If a mutagenic chemical is used, please provide the ChEBI ID.",
            "type": "array",
            "items":{
                "title": "Reagent identifier",
                "description": "Repository identifier of the reagent used to produce the describe genetic modification, if applicable.",
                "type": "string",
                "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$|^$"
            }
        },
        "documents": {
            "title": "Documents",
            "description": "Supporting documents describing how the genetic modification(s) was/were produced.",
            "comment": "If reagents were not deposited into a repository with relevant details, then please describe the methods in attached documents.",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "Document",
                "description": "Supporting document describing how the genetic modification(s) was/were produced.",
                "type": "string",
                "comment": "See document.json for available identifiers.",
                "linkTo": "Document"
            }
        }
    },
    "columns": {
        "aliases": {
            "title": "Lab aliases"
        },
        "modification_type": {
            "title": "Modification type"
        },
        "status": {
            "title": "Genetic modification status"
        }
    },
    "facets": {
        "modification_type": {
            "title": "Modification type"
        },
        "modified_site_by_target_id.label": {
            "title": "Target"
        },
        "status": {
            "title": "Genetic modification status"
        }
    },
    "changelog": "/profiles/changelogs/genetic_modification.md"
}