{
    "title": "Experiment",
    "description": "Schema for submitting metadata for an assay with 1 or more replicates.",
    "comment": "An experiment is a special case of dataset. It includes assay metadata, replicate information and data files.",
    "id": "/profiles/experiment.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["award", "lab", "assay_term_name", "biosample_ontology"],
    "identifyingProperties": ["uuid", "accession" , "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "dataset.json#/properties" },
        { "$ref": "mixins.json#/references" },
        { "$ref": "mixins.json#/documents" },
        { "$ref": "mixins.json#/biosample_ontology" },
        { "$ref": "mixins.json#/assay" },
        { "$ref": "mixins.json#/submitter_comment" }
    ],
    "dependencies": {
        "status": {
            "oneOf": [
                {
                    "required": ["date_released"],
                    "properties": {
                        "status": {
                            "enum": ["released", "revoked"]
                        }
                    }
                },
                {
                    "required": ["date_submitted"],
                    "properties": {
                        "status": {
                            "enum": ["submitted"]
                        }
                    }
                },
                {
                    "not": {
                        "properties": {
                            "status": {
                                "enum": ["released", "revoked", "submitted"]
                            }
                        }
                    }
                }
            ]
        },
        "internal_status": {
            "oneOf": [
                {
                    "required": ["pipeline_error_detail"],
                    "properties": {
                        "internal_status": {
                            "enum": ["pipeline error"]
                        }
                    }
                },
                {
                    "not": {
                        "oneOf": [
                            {
                                "required": ["pipeline_error_detail"],
                                "properties": {
                                    "internal_status": {
                                        "enum": ["unreviewed", "no available pipeline", "unrunnable", "pipeline ready", "processing", "pipeline completed", "requires lab review", "release ready"]
                                    }
                                }
                            },
                            {
                                "properties": {
                                    "internal_status": {
                                        "enum": ["pipeline error"]
                                    }
                                }
                            }
                        ]
                    }
                }
            ]
        }
    },
    "properties": {
        "schema_version": {
            "default": "28"
        },
        "date_submitted": {
            "title": "Date submitted" ,
            "description": "The date that the experiment received all required replicates and files",
            "comment": "Do not submit. date_submitted will be assigned only by DCC personnel.",
            "type": "string",
            "format": "date",
            "permission": "import_items"
        },
        "target": {
            "title": "Target",
            "description": "For assays, such as ChIP-seq or RIP-seq, the name of the gene whose expression or product is under investigation for the experiment.",
            "comment": "See target.json for available identifiers.",
            "type": "string",
            "linkTo": "Target"
        },
        "dbxrefs": {
            "@type": "@id",
            "rdfs:subPropertyOf": "rdfs:seeAlso",
            "title": "External resources",
            "description": "Identifiers from external resources that may have 1-to-1 or 1-to-many relationships with ENCODE objects.",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "External identifier",
                "description": "An identifier from an external resource that may have 1-to-1 or 1-to-many relationships with ENCODE objects.",
                "type":  "string",
                "pattern": "^(FactorBook:ENCSR\\d{3}[A-Z]{3}|UCSC-ENCODE-mm9:wgEncodeEM\\d+|UCSC-ENCODE-hg19:wgEncodeEH\\d+|GEO:(GSM|GSE)\\d+|GEO-obsolete:(GSM|GSE)\\d+|RBPImage:[^\\s].*|4DN:4DNES[A-Z0-9]+)$"
            }
        },
        "documents": {
            "description": "Protocols or other documents that describe the assay or the results (not data files)."
        },
        "possible_controls": {
            "title": "Controls",
            "description": "Dataset that contain files that can serve as scientific controls for this experiment.",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "Control",
                "description": "A dataset that contains files that can serve as a scientific control for this experiment.",
                "comment": "See dataset.json for a list of available identifiers. Exact pairing of data files with their controls is done using file relationships.",
                "type": "string",
                "linkTo": "Dataset"
            }
        },
        "supersedes": {
            "title": "Supersedes" ,
            "description": "The experiment(s) that this experiment supersedes by virtue of being newer, better etc. than the one(s) it supersedes.",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                    "comment": "See experiment.json for a list of available identifiers.",
                    "type": "string",
                    "linkTo": "Experiment"
            }
        },
        "related_files": {
            "title": "Additional data files",
            "description": "To be removed in a future release after data cleanup.",
            "type": "array",
            "default": [],
            "permission": "import_items",
            "items": {
                "title": "Data file",
                "comment": "See file.json for available identifiers.",
                "type": "string",
                "linkTo": "File"
            }
        },
        "internal_status": {
            "type": "string",
            "description": "The status of an experiment in the DCC process.",
            "comment":"unreviewed:wrangler has not evaluated, unrunnable:experiment requires more metadata to run, pipeline ready:experiment is ready for the pipeline, processing:pipeline is running, pipeline completed: pipeline has run through completion, requires lab review:there are QC concerns about this data, release ready:DCC feels that this is ready for release, pipeline error:pipeline run was started but failed for a reason that should be noted in pipeline_error_message",
            "default": "unreviewed",
            "permission": "import_items",
            "title": "Internal status",
            "enum": [
                "unreviewed",
                "pipeline ready",
                "processing",
                "pipeline completed",
                "release ready",
                "requires lab review",
                "no available pipeline",
                "pipeline error",
                "unrunnable"
            ]
        },
        "pipeline_error_detail": {
            "type": "string",
            "description": "Explanation of why the experiment failed pipeline analysis.",
            "comment": "should be used on experiments with internal_status:pipeline error",
            "permission": "import_items",
            "title": "Pipeline error message"
        },
        "control_type": {
            "type": "string",
            "title": "Control type",
            "description": "The specific type of control if the experiment is a control.",
            "enum": [
                "control",
                "IgG",
                "input library",
                "mock input",
                "no protein target",
                "non-specific target"
            ]
        },
        "analyses": {
            "title": "Analyses",
            "description": "A list of analyses.",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "permission": "import_items",
            "items": {
                "title": "Analysis",
                "description": "One group of files which form a coherent analysis.",
                "type": "object",
                "required": ["files"],
                "additionalProperties": false,
                "properties": {
                    "files": {
                        "title": "Analysis files",
                        "description": "A list of processed files belonging to this analsis",
                        "type": "array",
                        "minItems": 1,
                        "uniqueItems": true,
                        "permission": "import_items",
                        "items": {
                            "title": "Analysis file",
                            "comment": "See file.json for available identifiers.",
                            "type": "string",
                            "linkTo": "File"
                        }
                    },
                    "assemblies": {
                        "title": "Assemblies",
                        "description": "A list of genome assemblies on which this analysis is performed.",
                        "comment": "[CALCULATED PROPERTY] Do not submit. This field is calculated from files in this analysis.",
                        "type": "array",
                        "notSubmittable": true,
                        "items": {
                            "type": "string"
                        }
                    },
                    "genome_annotations": {
                        "title": "Genome Annotations",
                        "description": "A list of genome annotations on which this analysis is performed.",
                        "comment": "[CALCULATED PROPERTY] Do not submit. This field is calculated from files in this analysis.",
                        "type": "array",
                        "notSubmittable": true,
                        "items": {
                            "type": "string"
                        }
                    },
                    "pipelines": {
                        "title": "Pipelines",
                        "description": "A list of pipelines used to generate this analysis.",
                        "comment": "[CALCULATED PROPERTY] Do not submit. This field is calculated from files in this analysis.",
                        "type": "array",
                        "notSubmittable": true,
                        "items": {
                            "type": "string",
                            "linkTo": "Pipeline"
                        }
                    },
                    "pipeline_award_rfas": {
                        "title": "Pipeline awards",
                        "description": "A list of award bioproject phases to which pipelines that used to generate this analysis belong to.",
                        "comment": "[CALCULATED PROPERTY] Do not submit. This field is calculated from files in this analysis.",
                        "type": "array",
                        "notSubmittable": true,
                        "items": {
                            "type": "string"
                        }
                    },
                    "pipeline_labs": {
                        "title": "Pipeline labs",
                        "description": "A list of labs whose pipelines are used to generate this analysis.",
                        "comment": "[CALCULATED PROPERTY] Do not submit. This field is calculated from files in this analysis.",
                        "type": "array",
                        "notSubmittable": true,
                        "items": {
                            "type": "string",
                            "linkTo": "Lab"
                        }
                    }
                }
            }
        }
    },
    "facets": {
        "assay_slims": {
            "title": "Assay type"
        },
        "assay_title": {
            "title": "Assay title",
            "type": "typeahead"
        },
        "status": {
            "title": "Status"
        },
        "award.project": {
            "title": "Project"
        },
        "award.rfa": {
            "title": "RFA"
        },
        "assembly": {
            "title": "Genome assembly"
        },
        "target.investigated_as": {
            "title": "Target category"
        },
        "target.label": {
            "title": "Target of assay",
            "type": "typeahead",
            "length": "long"
        },
        "biosample_ontology.classification": {
            "title": "Biosample classification"
        },
        "biosample_ontology.term_name" : {
            "title": "Biosample term name",
            "type": "typeahead",
            "length": "long"
        },
        "biosample_ontology.organ_slims": {
            "title": "Organ",
            "type": "typeahead"
        },
        "biosample_ontology.cell_slims": {
            "title": "Cell",
            "type": "typeahead"
        },
        "files.file_type": {
            "title": "Available file types"
        },
        "files.platform.term_name": {
            "title": "Platform"
        },
        "files.run_type": {
            "title": "Run type"
        },
        "files.read_length": {
            "title": "Read length (nt)"
        },
        "files.mapped_read_length": {
            "title": "Mapped read length (nt)"
        },
        "date_released": {
            "title": "Date released",
            "length": "long"
        },
        "date_submitted": {
            "title": "Date submitted"
        },
        "lab.title": {
            "title": "Lab"
        },
        "internal_status": {
            "title": "Internal status"
        }        
    },
    "columns": {
        "accession": {
            "title": "Accession"
        },
        "assay_term_name": {
            "title": "Assay name"
        },
        "assay_title": {
            "title": "Assay title"
        },
        "target.label": {
            "title": "Target of assay"
        },
        "target.genes.symbol": {
            "title": "Target gene symbol"
        },
        "biosample_summary": {
            "title": "Biosample summary"
        },
        "biosample_ontology.term_name": {
            "title": "Biosample term name"
        },
        "description": {
            "title": "Description"
        },
        "lab.title": {
            "title": "Lab"
        },
        "award.project": {
            "title": "Project"
        },
        "status": {
            "title": "Status"
        },
        "files.@id": {
            "title": "Files"
        },
        "related_series": {
            "title": "Related series"
        },
        "libraries.biosample.accession": {
            "title": "Biosample accession"
        },
        "libraries.biosample.life_stage": {
            "title": "Life stage"
        },
        "libraries.biosample.age_display": {
            "title": "Biosample age"
        }
    },
    "boost_values": {},
    "changelog": "/profiles/changelogs/experiment.md"
}
