{
    "title": "Page",
    "description": "Schema for a portal page.",
    "id": "/profiles/page.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["name","title"],
    "identifyingProperties": ["uuid","name"],
    "additionalProperties": false,
    "mixinProperties": [
        {"$ref": "mixins.json#/schema_version"},
        {"$ref": "mixins.json#/uuid"},
        {"$ref": "mixins.json#/standard_status"},
        {"$ref": "mixins.json#/submitted"}
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "parent": {
            "title": "Parent page",
            "description": "The parent page shown in this page's URL.",
            "type": [
                "string",
                "null"
            ],
            "linkTo": "Page",
            "validators": [
                "isNotCollectionDefaultPage"
            ]
        },
        "name": {
            "title": "Name",
            "description": "The name shown in this page's URL.",
            "type": "string",
            "pattern": "^[a-z0-9_-]+$"
        },
        "title": {
            "title": "Title",
            "description": "The name shown in the browser's title bar and tabs.",
            "type": "string"
        },
        "layout": {
            "title": "Page layout",
            "description": "Hierarchical description of the page layout.",
            "type": "object",
            "formInput": "layout",
            "properties": {
                "rows": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "mapping": {
                            "type": "object",
                            "enabled": false
                        }
                    }
                },
                "blocks": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "body": {
                                "type": "string",
                                "elasticsearch_mapping_index_type": {
                                    "title": "Field mapping index type",
                                    "description": "Defines one of three types of indexing available",
                                    "type": "string",
                                    "default": "analyzed",
                                    "enum": [
                                        "analyzed",
                                        "no",
                                        "not_analyzed"
                                    ]
                                }
                            },
                            "image": {
                                "type": "string",
                                "linkTo": "Image"
                            },
                            "item": {
                                "type": "string",
                                "linkTo": "Item"
                            }
                        }
                    }
                }
            },
            "default": {
                "rows": [
                    {
                        "cols": [
                            {
                                "blocks": [
                                    "#block1"
                                ]
                            }
                        ]
                    }
                ],
                "blocks": [
                    {
                        "@id": "#block1",
                        "@type": "richtextblock",
                        "body": "<p></p>"
                    }
                ]
            }
        }
    },
    "columns": {
        "title": {
            "title": "Title"
        },
        "date_created": {
            "title": "Date created"
        },
        "status": {
            "title": "Status"
        }
    },
    "boost_values": {},
    "changelog": "/profiles/changelogs/page.md"
}