{
    "title": "Gene",
    "description": "Schema for submitting a gene.",
    "id": "/profiles/gene.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["gene_id", "gene_version", "ensembl_status", "symbol", "assembly"],
    "identifyingProperties": ["uuid", "gene_id"],
    "additionalProperties": false,
    "mixinProperties": [
        {"$ref": "mixins.json#/schema_version" },
        {"$ref": "mixins.json#/uuid" },
        {"$ref": "mixins.json#/notes" },
        {"$ref": "mixins.json#/standard_status" },
        {"$ref": "mixins.json#/dbxrefs"}
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "gene_id": {
            "title": "Ensembl gene ID",
            "description": "Ensembl gene ID, which starts with 'ENSG', for this gene, not including the gene version",
            "type": "string",
            "pattern": "^ENSG[0-9]*\\d$",
            "permission": "import_items",
            "uniqueKey": true
        },
        "gene_version": {
            "title": "Ensembl gene version",
            "description": "The version of the gene as assigned by Ensembl.",
            "type": "integer"
        },
        "ensembl_status": {
            "title": "Ensembl gene status",
            "description": "The status of the Ensembl record for this gene.",
            "type": "string",
            "default": "live",
            "enum": [
                "live",
                "discontinued"
            ],
            "permission": "import_items"
        },
        "gene_biotype": {
            "title": "Gene biotype",
            "description": "The biological classification that describes the gene, as defined by GENCODE and Ensembl",
            "type": "string",
            "enum": [
                "IG_C_gene",
                "IG_D_gene",
                "IG_J_gene",
                "IG_LV_gene",
                "IG_V_gene",
                "TR_C_gene",
                "TR_J_gene",
                "TR_V_gene",
                "TR_D_gene",
                "IG_pseudogene",
                "IG_C_pseudogene",
                "IG_J_pseudogene",
                "IG_V_pseudogene",
                "TR_V_pseudogene",
                "TR_J_pseudogene",
                "Mt_rRNA",
                "Mt_tRNA",
                "miRNA",
                "misc_RNA",
                "rRNA",
                "scRNA",
                "snRNA",
                "snoRNA",
                "ribozyme",
                "sRNA",
                "scaRNA",
                "lncRNA",
                "Mt_tRNA_pseudogene",
                "tRNA_pseudogene",
                "snoRNA_pseudogene",
                "snRNA_pseudogene",
                "scRNA_pseudogene",
                "rRNA_pseudogene",
                "misc_RNA_pseudogene",
                "miRNA_pseudogene",
                "TEC",
                "nonsense_mediated_decay",
                "retained_intron",
                "protein_coding",
                "non_coding",
                "ambiguous_org",
                "sense_intronic",
                "sense_overlapping",
                "known_ncrna",
                "pseudogene",
                "processed_pseudogene",
                "polymorphic_pseudogene",
                "retrotransposed",
                "transcribed_processed_pseudogene",
                "transcribed_unprocessed_pseudogene",
                "transcribed_unitary_pseudogene",
                "translated_processed_pseudogene",
                "translated_unprocessed_pseudogene",
                "unitary_pseudogene",
                "unprocessed_pseudogene",
                "artifact",
                "macro_lncRNA",
                "3prime_overlapping_ncRNA",
                "disrupted_domain",
                "vaultRNA",
                "bidirectional_promoter_lncRNA"
            ] 
        },
        "strand": {
            "title": "Strand",
            "description": "The genomic strand that the gene maps to",
            "type": "string",
            "enum": [
                "-",
                "+"
            ]
        },
        "symbol": {
            "title": "Gene symbol",
            "description": "Gene symbol approved by the official nomenclature.",
            "type": "string",
            "format": "gene_name",
            "permission": "import_items"
        },
        "dbxrefs": {
            "items": {
                "title": "External identifier",
                "description": "A unique identifier from the external resource HGNC",
                "comment": "Submit as database_name:id. See changelog for potential databases.",
                "type":  "string",
                "pattern": "^(HGNC:\\d+)$"
            },
            "permission": "import_items"
        },
        "location": {
            "title": "Gene location",
            "description": "Gene location specified using 1-based, closed coordinates for a specific version of the reference genome assembly.",
            "type": "object",
            "additionalProperties": false,
            "required": ["chromosome", "start", "end"],
            "properties": {
                "chromosome": {
                    "title": "Chromosome",
                    "description": "The number (or letter) designation for the chromosome, e.g. chr1 or chrX",
                    "type": "string",
                    "pattern": "^(chr[0-9A-Za-z]+)$"
                },
                "start": {
                    "title": "Start",
                    "description": "The starting coordinate.",
                    "type": "integer",
                    "minimum": 0
                },
                "end": {
                    "title": "End",
                    "description": "The ending coordinate.",
                    "type": "integer",
                    "minimum": 0
                }
            },
            "permission": "import_items"
        },
        "assembly": {
            "title": "Mapping assembly",
            "description": "The genome assembly to which location coordinates relate. e.g. GRCh38.",
            "type": "string",
            "enum": [
                "GRCh38",
                "hg19",
                "mm10"
            ]
        }
    },
    "facets": {
        "assembly": {
            "title": "Assembly"
        },
        "gene_biotype": {
            "title": "Gene biotype"
        }
    },
    "columns": {
        "gene_id": {
            "title": "Ensembl Gene ID"
        },
        "symbol": {
            "title": "Gene symbol"
        },
        "dbxrefs": {
            "title": "External resources"
        },
        "assembly": {
            "title": "Assembly"
        },
        "gene_biotype": {
            "title": "Gene biotype"
        }
    },
    "changelog": "/profiles/changelogs/gene.md"
}
