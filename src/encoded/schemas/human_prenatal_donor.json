{
    "title": "Human prenatal donor",
    "description": "Schema for submitting a prenatal human donor.",
    "id": "/profiles/human_prenatal_donor.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["life_stage", "sex"],
    "identifyingProperties": ["uuid", "accession", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        {"$ref": "mixins.json#/aliases"},
        {"$ref": "mixins.json#/description"},
        {"$ref": "mixins.json#/documents"},
        {"$ref": "mixins.json#/notes"},
        {"$ref": "mixins.json#/submitted"},
        {"$ref": "mixins.json#/schema_version"},
        {"$ref": "mixins.json#/url"},
        {"$ref": "mixins.json#/accession"},
        {"$ref": "mixins.json#/uuid"},
        {"$ref": "mixins.json#/accessioned_status"},
        {"$ref": "mixins.json#/dbxrefs"},
        {"$ref": "mixins.json#/treatments"},
        {"$ref": "mixins.json#/diseases"},
        {"$ref": "donor.json#/properties"},
        {"$ref": "human_donor.json#/properties"},
        {"$ref": "prenatal_donor.json#/properties"}
    ],
    "dependencies": {
        "age_units":  {
            "comment":"Age units is required if age is specified as anything but unknown.",
            "required": ["age", "life_stage"],
            "not": {
                "properties": {
                    "age": {
                        "enum": ["unknown"]
                    }
                }
            }
        },
        "twin_type": {
            "comment": "Twin type could be specified only if twin sibling is specified.",
            "required": ["twin"]
        },
        "carnegie_stage_basis": {
            "required":["carnegie_stage"]
        }
    },
    "properties": {
        "schema_version": {
            "default": "1"
        }
    },
    "facets": {
        "life_stage": {
            "title": "Life stage"
        },
        "carnegie_stage": {
            "title": "Carnegie stage"
        },
        "sex": {
            "title": "Sex"
        },
        "ethnicity.term_name": {
            "title": "Ethnicity"
        },
        "status": {
            "title": "Status"
        }
    },
    "columns": {
        "accession": {
            "title": "Accession"
        },
        "age_display": {
            "title": "Age"
        },
        "life_stage": {
            "title": "Life stage"
        },
        "carnegie_stage": {
            "title": "Carnegie stage"
        },
        "sex": {
            "title": "Sex"
        },
        "organism.scientific_name": {
            "title": "Organism species"
        },
        "ethnicity.term_name": {
            "title": "Ethnicity"
        },
        "status": {
            "title": "Status"
        }
    },
    "changelog": "/profiles/changelogs/human_prenatal_donor.md"
}
