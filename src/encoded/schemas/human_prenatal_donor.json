{
    "title": "Human prenatal donor",
    "description": "Schema for submitting a prenatal human donor.",
    "id": "/profiles/human_prenatal_donor.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["life_stage", "gestational_age", "sex"],
    "identifyingProperties": ["uuid", "accession", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        {"$ref": "mixins.json#/aliases"},
        {"$ref": "mixins.json#/description"},
        {"$ref": "mixins.json#/documents"},
        {"$ref": "mixins.json#/notes"},
        {"$ref": "mixins.json#/submitted"},
        {"$ref": "mixins.json#/schema_version"},
        {"$ref": "mixins.json#/url"},
        {"$ref": "mixins.json#/accession"},
        {"$ref": "mixins.json#/uuid"},
        {"$ref": "mixins.json#/accessioned_status"},
        {"$ref": "mixins.json#/dbxrefs"},
        {"$ref": "mixins.json#/treatments"},
        {"$ref": "mixins.json#/diseases"},
        {"$ref": "donor.json#/properties"},
        {"$ref": "human_donor.json#/properties"},
        {"$ref": "prenatal_donor.json#/properties"}
    ],
    "dependencies": {
        "gestational_age":  {
            "oneOf": [
                {
                    "properties": {
                        "gestational_age": {
                            "enum": ["unknown"]
                        }
                    }
                },
                {
                    "required": ["gestational_age_units"]
                }
            ]
        },
        "gestational_age_units":  {
            "required": ["gestational_age"],
            "not": {
                "properties": {
                    "gestational_age": {
                        "enum": ["unknown"]
                    }
                }
            }
        },
        "carnegie_stage": {
            "properties": {
                "life_stage": {
                    "enum": ["embryonic"]
                }
            }
        },
        "carnegie_stage_basis": ["carnegie_stage"],
        "twin_type": ["twin"],
        "weight": ["weight_unit"],
        "weight_unit": ["weight"],
        "crown_rump_length": ["crown_rump_length_units"],
        "crown_rump_length_units": ["crown_rump_length"],
        "foot_length": ["foot_length_units"],
        "foot_length_units": ["foot_length"],
        "knee_heel_length": ["knee_heel_length_units"],
        "knee_heel_length_units": ["knee_heel_length"]
    },
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "life_stage": {
            "comment": "Based on the Human Developmental Stages ontology, embryonic is up to 2 mo/8 w LMP, fetal is 2 mo/8 w LMP to birth."
        },
        "carnegie_stage": {
            "title": "Carnegie stage",
            "description": "Embryo stage number as defined by Carnegie stages.",
            "type": "integer",
            "minimum": 1,
            "maximum": 23
        },
        "carnegie_stage_basis": {
            "title": "Carnegie stage basis",
            "description": "Measurement or phenotype used to assign Cargnegie stage for a human embryonic donor.",
            "type": "string"
        }
    },
    "facets": {
        "life_stage": {
            "title": "Life stage"
        },
        "carnegie_stage": {
            "title": "Carnegie stage"
        },
        "sex": {
            "title": "Sex"
        },
        "ethnicity.term_name": {
            "title": "Ethnicity"
        },
        "diseases.term_name": {
            "title": "Disease"
        },
        "status": {
            "title": "Status"
        }
    },
    "columns": {
        "accession": {
            "title": "Accession"
        },
        "age_display": {
            "title": "Age"
        },
        "life_stage": {
            "title": "Life stage"
        },
        "carnegie_stage": {
            "title": "Carnegie stage"
        },
        "sex": {
            "title": "Sex"
        },
        "organism.scientific_name": {
            "title": "Organism species"
        },
        "ethnicity.term_name": {
            "title": "Ethnicity"
        },
        "diseases.term_name": {
            "title": "Disease"
        },
        "status": {
            "title": "Status"
        }
    },
    "changelog": "/profiles/changelogs/human_prenatal_donor.md"
}
