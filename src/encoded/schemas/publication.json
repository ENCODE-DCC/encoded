{
    "title": "Publication",
    "description": "Schema for a publication page.",
    "id": "/profiles/publication.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [ "title"],
    "identifyingProperties": ["uuid", "title"],
    "additionalProperties": false,
    "mixinProperties": [
        {"$ref": "mixins.json#/schema_version"},
        {"$ref": "mixins.json#/uuid"},
        {"$ref": "mixins.json#/standard_status"},
        {"$ref": "mixins.json#/aliases"}
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "title": {
            "title": "Title",
            "description": "Title of the publication or communication.",
            "uniqueKey": true,
            "type": "string"
        },
        "abstract": {
            "rdfs:subPropertyOf": "dc:abstract",
            "title": "Abstract",
            "description": "Abstract of the publication or communication.",
            "type": "string"
        },
        "authors": {
            "title": "Authors",
            "description": "The list of authors of the publication, comma-separated.",
            "type": "string"
        },
        "publication_year": {
            "title": "Publication year",
            "description": "The year of publication.",
            "type": "string"
        },
        "issue": {
            "title": "Issue",
            "description": "The issue of the publication.",
            "type": "string"
        },
        "page": {
            "title": "Page",
            "description": "Pagination of the reference",
            "type": "string"
        },
        "volume": {
            "title": "Volume",
            "description": "The volume of the publication.",
            "type": "string"
        },
        "journal": {
            "title": "Journal",
            "description": "The journal of the publication.",
            "type": "string"
        },
        "identifiers": {
            "title": "Identifiers",
            "description": "The identifiers that reference data found in the object.",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "Identifier",
                "description": "An identifier that references data found in the object.",
                "type": "string",
                "uniqueKey":  "publication:identifier",
                "pattern": "^(PMID:[0-9]+|doi:10\\.[0-9]{4}[\\d\\s\\S\\:\\.\\/]+|PMCID:PMC[0-9]+|[0-9]{4}\\.[0-9]{4})$"
            }
        },
        "award": {
            "title": "Award",
            "description": "The HCA Seed Network or HCA Pilot Project award used to fund the published research.",
            "type": "string",
            "linkTo": "Award"
        }
    },
    "facets": {
        "status": {
            "title": "Status"
        },
        "award.project": {
            "title": "Project"
        },
        "award.name": {
            "title": "Award name"
        },
        "publication_year": {
            "title": "Publication year"
        },
        "journal": {
            "title": "Journal"
        }
    },
    "columns": {
        "title": {
            "title": "Title"
        },
        "journal": {
            "title": "Journal"
        },
        "publication_year": {
            "title": "Publication year"
        },
        "award.project": {
            "title": "Project"
        },
        "award.name": {
            "title": "Award name"
        },
        "status": {
            "title": "Status"
        },
        "identifiers": {
            "title": "Identifiers"
        }
    },
    "boost_values": {},
    "sort_by": {
        "publication_year": {
            "unmapped_type": "keyword",
            "order": "desc",
            "missing": "_last" 
        }
    },
    "changelog": "/profiles/changelogs/publication.md"

}
