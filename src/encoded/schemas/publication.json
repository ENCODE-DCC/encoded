{
    "title": "Publication",
    "description": "Schema for a publication page.",
    "id": "/profiles/publication.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [ "title" ],
    "calculated_props": {
        "publication_year": {
            "title": "Publication year",
            "type": "string"
        }
    },
    "identifyingProperties": ["uuid", "title", "reference"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/references"}
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "title": {
            "title": "Title",
            "description": "Title of the publication or communication.",
            "type": "string"
        },
        "abstract": {
            "rdfs:subPropertyOf": "dc:abstract",
            "title": "Abstract",
            "description": "Abstract of the publication or communication.",
            "type": "string"
        },
        "authors": {
            "title": "Authors",
            "type": "string"
        },
        "date_published": {
            "title": "Date published",
            "type": "string"
        },
        "date_revised": {
            "title": "Date revised",
            "type": "string",
            "anyOf": [
                {"format": "date-time"},
                {"format": "date"}
            ]
        },
        "issue": {
            "title": "Issue",
            "description": "The issue of the publication.",
            "type": "string"
        },
        "page": {
            "title": "Page",
            "description": "Pagination of the reference",
            "type": "string"
        },
        "volume": {
            "title": "Volume",
            "description": "The volume of the publication.",
            "type": "string"
        },
        "journal": {
            "title": "Journal",
            "description": "The journal of the publication.",
            "type": "string"
        },
        "status": {
            "title": "Status",
            "type": "string",
            "default": "in progress",
            "enum" : [
                "in progress",
                "deleted",
                "replaced",
                "proposed",
                "published"
            ]
        },
        "categories": {
            "title": "Categories",
            "type": "array",
            "items": {
                "title": "Category",
                "type": "string",
                "enum" : [
                    "human disease",
            "basic biology",
            "software tool",
            "database",
            "integrative analysis",
            "technology development",
            "data standard",
            "key publication",
            "pilot phase publication",
            "model organism biology",
            "tutorial"
        ]
            }      
        },
    "published_by": {
        "title": "Published by",
        "type": "array",
        "default": ["ENCODE"],
        "items": {
            "title": "Published by",
        "type": "string",
        "enum": [
            "ENCODE",
            "mouseENCODE",
            "modENCODE",
            "community"
        ]
        }
    },
        "data_used": {
            "title": "Data used",
            "type": "string"
        }
    },
    "facets": {
        "status": {
            "title": "Publication status",
            "type": "string"
        },
        "categories": {
            "title": "Category",
            "type": "array"
        },
        "publication_year": {
            "title": "Publication year",
            "type": "string"
        },
        "journal": {
            "title": "Journal",
            "type": "string"
        },
        "published_by": {
            "title": "Published by",
            "type": "string"
        }
    },
    "columns": {
        "title": {
            "title": "Title",
            "type": "string"
        },
        "date_published": {
            "title": "Publication date",
            "type": "string"
        },
        "authors": {
            "title": "Authors",
            "type": "string"
        },
        "status": {
            "title": "Publication status",
            "type": "string"
        },
        "journal": {
            "title": "Journal",
            "type": "string"
        },
        "volume": {
            "title": "Volume",
            "type": "string"
        },
        "issue": {
            "title": "Issue",
            "type": "string"
        },
        "page": {
            "title": "Page",
            "type": "string"
        },
        "data_used": {
            "title": "Data used",
            "type": "string"
        },
        "abstract": {
            "title": "Abstract",
            "type": "string"
        },
        "references": {
            "title": "References",
            "type": "array"
        }
    },
    "boost_values": {
        "uuid": 1.0,
        "title": 1.0,
        "authors": 1.0,
        "references": 1.0
    }
}
