{
    "title": "Individual",
    "id": "/profiles/individual.json",
    "description": "Schema for storing and using individual data",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["label", "diagnosis"],
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/shared_status" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "label": {
            "title": "Label",
            "description": "An user entered label for individual",
            "type": "string"
        },
        "diagnosis": {
            "title": "Diagnosis",
            "description": "Orpha Number to diagnosis",
            "type": "string",
            "linkTo": "orphaPhenotype"
        },
        "sex": {
            "title": "Sex",
            "description": "Sex",
            "type": "string",
            "default": ""
        },
        "hpoIdInDiagnosis": {
            "title": "HPO ID(s)",
            "description": "List of HPO ID for the disease",
            "type": "array",
            "default": [],
            "items": {
                "title": "HPO ID",
                "description": "HPO ID",
                "type": "string"
            }
        },
        "termsInDiagnosis": {
            "title": "None-HPO term(s)",
            "description": "List of none-HPO terms for the disease",
            "type": "string",
            "default": ""
        },
        "hpoIdInElimination": {
            "title": "HPO ID(s) Eliminated",
            "description": "List of HPO IDs eliminated from the disease",
            "type": "array",
            "default": [],
            "items": {
                "title": "HPO IDs Eliminated",
                "description": "HPO ID eliminated",
                "type": "string"
            }
        },
        "termsInDiagnosis": {
            "title": "None-HPO term(s) Eliminated",
            "description": "List of none-HPO terms eliminated from the disease",
            "type": "string",
            "default": ""
        },
        "countryOfOrigin": {
            "title": "Country Of Origin",
            "description": "Country in which the family original live",
            "type": "string",
            "default": ""
        },
        "ethnicity": {
            "title": "Ethnicity",
            "description": "Ethnicity",
            "type": "string",
            "default": "",
            "enum": [
                "",
                "Hispanic or Latino",
                "Not Hispanic or Latino"
            ]
        },
        "race": {
            "title": "Race",
            "description": "Race",
            "type": "string",
            "default": "",
            "enum": [
                "",
                "American Indian or Alaska Native",
                "Asian",
                "Black",
                "Native Hawaiian or Other Pacific Islander",
                "White",
                "Mixed",
                "Unknown"
            ]
        },
        "ageType": {
            "title": "Type of Age",
            "description": "Type of age",
            "type": "string",
            "default": "",
            "enum": [
                "",
                "Onset",
                "Report",
                "Diagnosis",
                "Death"
            ]
        },
        "ageValue": {
            "title": "Age Value",
            "description": "Age value",
            "type": "string",
            "default": ""
        },
        "ageUnit": {
            "title": "Age Unit",
            "description": "Unit of age",
            "type": "string",
            "default": "",
            "enum": [
                "",
                "Days",
                "Weeks",
                "Months",
                "Years"
            ]
        },
        "method": {
            "title": "Method",
            "description": "Mothed id",
            "type": "string",
            "default": "",
            "linkTo": "method"
        },
        "additionalInformation": {
            "title": "Additional Information",
            "description": "List of Additional information for the individual",
            "type": "string",
            "default": ""
        },
        "otherPMIDs": {
            "title": "Other PMIDs",
            "description": "List of other PMIDs having evidence about the individual",
            "type": "array",
            "default": [],
            "items": {
                "title": "PMID",
                "description": "PMID",
                "type": "string",
                "linkTo": "article"
            }
        },
        "variants": {
            "title": "Variant Associated",
            "description": "List of variant(s) associated to the individual",
            "type": "array",
            "default": [],
            "items": {
                "title": "Variant",
                "description": "List of variant ids, see variant.json for detials",
                "type": "string",
                "linkTo": "variant"
            }
        },
        "assessments": {
            "title": "Assessments",
            "description": "List of assessments",
            "type": "array",
            "default": [],
            "items": {
                "title": "Asssessment",
                "type": "string",
                "linkTo": "assessment"
            }
        },
        "dateTime": {
            "title": "Date and Time",
            "description": "Time stamp of the individual creation",
            "type": "string",
            "default": ""
        }
    },
    "columns": {
        "label": {
            "title": "Label",
            "type": "string"
        },
        "diagnosis.orphaNumber": {
            "title": "Diagnosis",
            "type": "string"
        },
        "sex": {
            "title": "Sex",
            "type": "string"
        },
        "race": {
            "title": "Race",
            "type": "string"
        },
        "method": {
            "title": "Method",
            "type": "string"
        },
        "variants": {
            "title": "Variants Associated",
            "type": "string"
        },
        "assessments": {
            "title": "Assessments",
            "type": "array"
        }
    }
}
