{
    "title": "Assessment",
    "id": "/profiles/assessment.json",
    "description": "Schema for storing and using assessments",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["owner", "value", "dateTime"],
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/shared_status" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "owner": {
            "title": "Owner",
            "description": "Email of creator",
            "type": "string"
        },
        "value": {
            "title": "Value",
            "description": "Value of assessment",
            "type": "string",
            "enum": [
                "Supports",
                "Review",
                "Contradicts"
            ]
        },
        "dateTime": {
            "title": "Date and Time",
            "description": "Time stamp of assessment creation",
            "type": "string"
        },
        "active": {
            "title": "Active",
            "description": "Boolean switch for activation of the assessment",
            "type": "boolean",
            "default": true
        }
    },
    "columns": {
        "uuid": {
            "title": "Assessment",
            "type": "string"
        },
        "owner": {
            "title": "Owner",
            "type": "string"
        },
        "value": {
            "Title": "Value",
            "type": "string"
        },
        "dateTime": {
            "title": "Date/Time",
            "type": "string"
        }
    }
}
