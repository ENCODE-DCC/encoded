{
    "title": "Allele",
    "description": "Schema for submitting a human genetic varient.",
    "id": "/profiles/allele.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["label", "type", "sequence"],
    "identifyingProperties": ["uuid", "label-organism.name", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/notes" }
    ],
    "properties": {
        "schema_version": {
            "default": "3"
        },
        "dbxref": {
            "title": "External identifiers",
            "description": "Unique identifiers from external resources (e.g. ClinVar, dbVar).",
            "type": "array",
            "default": [],
            "items": {
                "title": "External identifier",
                "description": "A unique identifier from external resource (e.g. HGNC, GeneID, UniProtKB or ENSEMBL).",
                "comment": "Submit as database name:target name (e.g. HGNC:HMFN0395, GeneID:22809)",
                "type":  "string"
            }
        },
        "type": {
            "title": "Type",
            "description": "Type of variant",
            "type": "string",
            "enum": [
                "polymorphism",
                "insertion",
                "deletion"
            ]
        },
        "sequence": {
            "title": "Sequence",
            "description": "DNA sequence of the variant bases (-) for deletion",
            "type": "string",
            "format": "DNAsequence"
        },
        "conditions": {
            "title": "Conditions",
            "description": "Conditions and diseases asssociated with this allele",
            "type": "array",
            "default": [],
            "items": {
                "title": "Alleles",
                "description": "Known alleles of this variant",
                "type":  "string",
                "linkTo": "allele"
            }
        },
        "label": {
            "title": "Descriptive name of allele",
            "description": "Common name for the target including post-translational modifications, if any.",
            "type": "string",
            "format": "target_label"
        },
        "status": {
            "title": "Status",
            "type": "string",
            "default": "proposed",
            "enum": [
                "proposed",
                "current",
                "deleted",
                "replaced"
            ]
        }
    }
}
